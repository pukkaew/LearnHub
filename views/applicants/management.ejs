const closeAddApplicantModalBtn = document.getElementById('closeAddApplicantModal');
const cancelAddApplicantBtn = document.getElementById('cancelAddApplicant');
const addApplicantForm = document.getElementById('addApplicantForm');

// Open Add Applicant Modal
addApplicantBtn.addEventListener('click', () => {
    addApplicantModal.classList.remove('hidden');
    document.getElementById('add_national_id').focus();
});

// Close Add Applicant Modal
function closeAddApplicantModal() {
    addApplicantModal.classList.add('hidden');
    addApplicantForm.reset();
}

closeAddApplicantModalBtn.addEventListener('click', closeAddApplicantModal);
cancelAddApplicantBtn.addEventListener('click', closeAddApplicantModal);

// Close modal when clicking outside
addApplicantModal.addEventListener('click', (e) => {
    if (e.target === addApplicantModal) {
        closeAddApplicantModal();
    }
});

// Handle Add Applicant Form Submit
addApplicantForm.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = {
        national_id: document.getElementById('add_national_id').value,
        first_name: document.getElementById('add_first_name').value,
        last_name: document.getElementById('add_last_name').value,
        position_id: document.getElementById('add_position_id').value,
        email: document.getElementById('add_email').value,
        phone: document.getElementById('add_phone').value,
        address: document.getElementById('add_address').value
    };

    // Validate national ID
    if (formData.national_id.length !== 13 || !/^\d+$/.test(formData.national_id)) {
        showMessage('<%= t("pleaseEnterIdCard13Digits") || "กรุณากรอกเลขบัตรประชาชน 13 หลัก" %>', 'error');
        return;
    }

    try {
        const response = await fetch('/applicants/register', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        });

        const data = await response.json();

        if (data.success) {
            closeAddApplicantModal();
            loadApplicants();

            // Show test code in beautiful modal
            showTestCodeModal(data.data.test_code);
        } else {
            showMessage(data.message || '<%= t("errorAddingApplicant") || "เกิดข้อผิดพลาดในการเพิ่มผู้สมัคร" %>', 'error');
        }
    } catch (error) {
        console.error('Error adding applicant:', error);
        showMessage('<%= t("errorAddingApplicant") || "เกิดข้อผิดพลาดในการเพิ่มผู้สมัคร" %>', 'error');
    }
});

// Format national ID input (only numbers)
document.getElementById('add_national_id').addEventListener('input', (e) => {
    e.target.value = e.target.value.replace(/\D/g, '').slice(0, 13);
});

// Test Code Modal Functions
function showTestCodeModal(testCode) {
    const modal = document.getElementById('testCodeModal');
    const displayTestCode = document.getElementById('displayTestCode');
    displayTestCode.textContent = testCode;
    modal.classList.remove('hidden');
}

function closeTestCodeModalFn() {
    const modal = document.getElementById('testCodeModal');
    modal.classList.add('hidden');
}

// Copy test code to clipboard
document.getElementById('copyTestCodeBtn').addEventListener('click', async () => {
    const testCode = document.getElementById('displayTestCode').textContent;
    try {
        await navigator.clipboard.writeText(testCode);
        const btn = document.getElementById('copyTestCodeBtn');
        const originalHTML = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-check mr-2"></i><%= t("copied") || "คัดลอกแล้ว!" %>';
        btn.classList.remove('bg-ruxchai-primary');
        btn.classList.add('bg-green-600');
        setTimeout(() => {
            btn.innerHTML = originalHTML;
            btn.classList.remove('bg-green-600');
            btn.classList.add('bg-ruxchai-primary');
        }, 2000);
    } catch (err) {
        console.error('Failed to copy:', err);
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = testCode;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        showMessage('<%= t("copiedToClipboard") || "คัดลอกไปยังคลิปบอร์ดแล้ว" %>', 'success');
    }
});

// Close test code modal
document.getElementById('closeTestCodeModal').addEventListener('click', closeTestCodeModalFn);

// Add another applicant
document.getElementById('addAnotherApplicantBtn').addEventListener('click', () => {
    closeTestCodeModalFn();
    openAddApplicantModal();
});

// Close modal on backdrop click
document.getElementById('testCodeModal').addEventListener('click', (e) => {
    if (e.target.id === 'testCodeModal') {
        closeTestCodeModalFn();
    }
});
</script>
