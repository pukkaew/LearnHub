<%- include('../layouts/header') %>

<div class="bg-gradient-to-br from-ruxchai-primary/5 to-ruxchai-secondary/5 min-h-screen">
    <div class="container mx-auto px-6 py-8">
        <!-- Result Header -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden mb-8">
            <div class="p-8 text-white" style="background: linear-gradient(to right, <%= systemSettings.primary_color || '#2563eb' %>, <%= systemSettings.secondary_color || '#0891b2' %>);">
                <div class="text-center">
                    <div class="w-24 h-24 mx-auto mb-4 bg-white/20 rounded-full flex items-center justify-center">
                        <i id="resultIcon" class="fas fa-check-circle text-4xl"></i>
                    </div>
                    <h1 class="text-3xl font-bold mb-2"><%= t('applicantResultTestResultTitle') %></h1>
                    <p id="resultMessage" class="text-xl opacity-90"><%= t('applicantResultYouScored') %></p>
                </div>
            </div>

            <div class="p-8">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                    <!-- Score -->
                    <div class="text-center">
                        <div id="totalScore" class="text-4xl font-bold text-ruxchai-primary mb-2">0%</div>
                        <div class="text-sm text-gray-500"><%= t('applicantResultTotalScore') %></div>
                    </div>

                    <!-- Correct Answers -->
                    <div class="text-center">
                        <div id="correctAnswers" class="text-4xl font-bold text-green-600 mb-2">0</div>
                        <div class="text-sm text-gray-500"><%= t('applicantResultCorrectAnswers') %></div>
                    </div>

                    <!-- Wrong Answers -->
                    <div class="text-center">
                        <div id="wrongAnswers" class="text-4xl font-bold text-red-600 mb-2">0</div>
                        <div class="text-sm text-gray-500"><%= t('applicantResultWrongAnswers') %></div>
                    </div>

                    <!-- Time Taken -->
                    <div class="text-center">
                        <div id="timeTaken" class="text-4xl font-bold text-blue-600 mb-2">0</div>
                        <div class="text-sm text-gray-500"><%= t('applicantResultTimeTakenMinutes') %></div>
                    </div>
                </div>

                <!-- Pass/Fail Status -->
                <div class="mt-8 text-center">
                    <div id="passStatus" class="inline-flex items-center px-6 py-3 rounded-full text-lg font-medium">
                        <i class="fas fa-circle mr-2"></i>
                        <span><%= t('applicantResultEvaluating') %></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Test Information -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4"><%= t('applicantResultTestInfo') %></h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600"><%= t('applicantResultTestName') %>:</span>
                        <span id="testTitle" class="font-medium">-</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600"><%= t('applicantResultPosition') %>:</span>
                        <span id="positionTitle" class="font-medium">-</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600"><%= t('applicantResultTotalQuestions') %>:</span>
                        <span id="totalQuestions" class="font-medium">0 <%= t('applicantResultQuestionsUnit') %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600"><%= t('applicantResultPassingScore') %>:</span>
                        <span id="passingScore" class="font-medium">0%</span>
                    </div>
                </div>
                <div class="space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600"><%= t('applicantResultTestDate') %>:</span>
                        <span id="testDate" class="font-medium">-</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600"><%= t('applicantResultStartTime') %>:</span>
                        <span id="startTime" class="font-medium">-</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600"><%= t('applicantResultEndTime') %>:</span>
                        <span id="endTime" class="font-medium">-</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600"><%= t('applicantResultSubmissionStatus') %>:</span>
                        <span id="submissionType" class="font-medium">-</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Performance Chart -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4"><%= t('applicantResultPerformanceAnalysis') %></h2>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Score Chart -->
                <div>
                    <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t('applicantResultScoreDistribution') %></h3>
                    <canvas id="scoreChart" width="400" height="300"></canvas>
                </div>

                <!-- Performance by Category -->
                <div>
                    <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t('applicantResultPerformanceByCategory') %></h3>
                    <div id="categoryPerformance" class="space-y-4">
                        <!-- Category performance will be loaded here -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Answer Review -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-bold text-gray-900"><%= t('applicantResultReviewAnswers') %></h2>
                <div class="flex space-x-2">
                    <button id="showAllBtn" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
                        <%= t('applicantResultFilterAll') %>
                    </button>
                    <button id="showCorrectBtn" class="px-4 py-2 bg-green-100 text-green-700 rounded-lg hover:bg-green-200 transition-colors">
                        <%= t('applicantResultFilterCorrect') %>
                    </button>
                    <button id="showWrongBtn" class="px-4 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors">
                        <%= t('applicantResultFilterWrong') %>
                    </button>
                    <button id="showMarkedBtn" class="px-4 py-2 bg-orange-100 text-orange-700 rounded-lg hover:bg-orange-200 transition-colors">
                        <%= t('applicantResultFilterMarked') %>
                    </button>
                </div>
            </div>

            <div id="questionsReview" class="space-y-6">
                <!-- Questions review will be loaded here -->
            </div>
        </div>

        <!-- Recommendations -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4"><%= t('applicantResultRecommendations') %></h2>
            <div id="recommendations" class="space-y-4">
                <!-- Recommendations will be loaded here -->
            </div>
        </div>

        <!-- Actions -->
        <div class="flex flex-col md:flex-row gap-4 justify-center items-center">
            <button id="printResultBtn" class="px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                <i class="fas fa-print mr-2"></i><%= t('applicantResultPrintResult') %>
            </button>
            <button id="shareResultBtn" class="px-8 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                <i class="fas fa-share mr-2"></i><%= t('applicantResultShareResult') %>
            </button>
            <a href="/applicants" class="px-8 py-3 text-ruxchai-primary border border-ruxchai-primary rounded-lg hover:bg-ruxchai-primary hover:text-white transition-colors">
                <i class="fas fa-arrow-left mr-2"></i><%= t('applicantResultBackToHome') %>
            </a>
        </div>
    </div>
</div>

<!-- Certificate Modal -->
<div id="certificateModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
            <div class="flex justify-between items-center p-6 border-b">
                <h3 class="text-xl font-bold text-gray-900"><%= t('applicantResultCertificate') %></h3>
                <button id="closeCertificateModal" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <div id="certificateContent" class="p-8">
                <!-- Certificate will be generated here -->
            </div>
            <div class="flex justify-center space-x-4 p-6 border-t">
                <button id="downloadCertificateBtn" class="px-6 py-2 bg-ruxchai-primary text-white rounded-lg hover:bg-ruxchai-primary/90 transition-colors">
                    <i class="fas fa-download mr-2"></i><%= t('applicantResultDownload') %>
                </button>
                <button id="printCertificateBtn" class="px-6 py-2 text-ruxchai-primary border border-ruxchai-primary rounded-lg hover:bg-ruxchai-primary hover:text-white transition-colors">
                    <i class="fas fa-print mr-2"></i><%= t('applicantResultPrint') %>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Share Modal -->
<div id="shareModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-xl shadow-2xl max-w-md w-full">
            <div class="flex justify-between items-center p-6 border-b">
                <h3 class="text-xl font-bold text-gray-900"><%= t('applicantResultShareResult') %></h3>
                <button id="closeShareModal" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    <button class="w-full flex items-center space-x-3 px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                            onclick="shareToFacebook()">
                        <i class="fab fa-facebook-f"></i>
                        <span><%= t('applicantResultShareToFacebook') %></span>
                    </button>
                    <button class="w-full flex items-center space-x-3 px-4 py-3 bg-blue-400 text-white rounded-lg hover:bg-blue-500 transition-colors"
                            onclick="shareToTwitter()">
                        <i class="fab fa-twitter"></i>
                        <span><%= t('applicantResultShareToTwitter') %></span>
