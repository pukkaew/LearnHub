<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
// i18n translations for client-side JavaScript
const i18n = {
    congratsPassedWith: '<%= t("applicantResultCongratsPassedWith") %>',
    sorryFailedWith: '<%= t("applicantResultSorryFailedWith") %>',
    notMeetCriteria: '<%= t("applicantResultNotMeetCriteria") %>',
    passed: '<%= t("applicantResultPassed") %>',
    failed: '<%= t("applicantResultFailed") %>',
    questionsUnit: '<%= t("applicantResultQuestionsUnit") %>',
    autoSubmission: '<%= t("applicantResultAutoSubmission") %>',
    manualSubmission: '<%= t("applicantResultManualSubmission") %>',
    scoreObtained: '<%= t("applicantResultScoreObtained") %>',
    scoreRemaining: '<%= t("applicantResultScoreRemaining") %>',
    noCategoryData: '<%= t("applicantResultNoCategoryData") %>',
    noQuestionsInCategory: '<%= t("applicantResultNoQuestionsInCategory") %>',
    questionNumber: '<%= t("applicantResultQuestionNumber") %>',
    correct: '<%= t("applicantResultFilterCorrect") %>',
    wrong: '<%= t("applicantResultFilterWrong") %>',
    notAnswered: '<%= t("applicantResultNotAnswered") %>',
    points: '<%= t("applicantResultPoints") %>',
    explanation: '<%= t("applicantResultExplanation") %>',
    yourAnswer: '<%= t("applicantResultYourAnswer") %>',
    correctAnswer: '<%= t("applicantResultCorrectAnswer") %>',
    notProvided: '<%= t("applicantResultNotProvided") %>',
    cannotDisplayAnswer: '<%= t("applicantResultCannotDisplayAnswer") %>',
    trueFalseTrue: '<%= t("applicantResultTrue") %>',
    trueFalseFalse: '<%= t("applicantResultFalse") %>',
    congratulations: '<%= t("applicantResultCongratulations") %>',
    hrWillContact: '<%= t("applicantResultHrWillContact") %>',
    certificateTitle: '<%= t("applicantResultCertificateReceive") %>',
    certificateDescription: '<%= t("applicantResultCertificateDescription") %>',
    studyMore: '<%= t("applicantResultStudyMore") %>',
    studyMoreDesc: '<%= t("applicantResultStudyMoreDesc") %>',
    retakeTest: '<%= t("applicantResultRetakeTest") %>',
    retakeTestDesc: '<%= t("applicantResultRetakeTestDesc") %>',
    takeTraining: '<%= t("applicantResultTakeTraining") %>',
    takeTrainingDesc: '<%= t("applicantResultTakeTrainingDesc") %>',
    ruxchaiLearningHub: '<%= t("applicantResultRuxchaiLearningHub") %>',
    certificateOfCompletion: '<%= t("applicantResultCertificateOfCompletion") %>',
    certificateMain: '<%= t("applicantResultCertificateMain") %>',
    certificateCongrats: '<%= t("applicantResultCertificateCongrats") %>',
    certificatePassed: '<%= t("applicantResultCertificatePassed") %>',
    certificateForPosition: '<%= t("applicantResultCertificateForPosition") %>',
    certificateWithScore: '<%= t("applicantResultCertificateWithScore") %>',
    certificateIssueDate: '<%= t("applicantResultCertificateIssueDate") %>',
    certificateDirector: '<%= t("applicantResultCertificateDirector") %>',
    certificateNumber: '<%= t("applicantResultCertificateNumber") %>',
    preparingDownload: '<%= t("applicantResultPreparingDownload") %>',
    downloadComplete: '<%= t("applicantResultDownloadComplete") %>',
    linkCopied: '<%= t("applicantResultLinkCopied") %>',
    testNotFound: '<%= t("applicantResultTestNotFound") %>',
    errorLoadingData: '<%= t("applicantResultErrorLoadingData") %>',
    shareMessage: '<%= t("applicantResultShareMessage") %>'
};

// Global variables
let resultData = {};
let questions = [];
let currentFilter = 'all';

// Initialize page
document.addEventListener('DOMContentLoaded', function() {
    loadTestResult();
    setupEventListeners();
});

// Event listeners
function setupEventListeners() {
    // Filter buttons
    document.getElementById('showAllBtn').addEventListener('click', () => filterQuestions('all'));
    document.getElementById('showCorrectBtn').addEventListener('click', () => filterQuestions('correct'));
    document.getElementById('showWrongBtn').addEventListener('click', () => filterQuestions('wrong'));
    document.getElementById('showMarkedBtn').addEventListener('click', () => filterQuestions('marked'));

    // Action buttons
    document.getElementById('printResultBtn').addEventListener('click', printResult);
    document.getElementById('shareResultBtn').addEventListener('click', () => {
        document.getElementById('resultUrl').value = window.location.href;
        document.getElementById('shareModal').classList.remove('hidden');
    });

    // Modal close buttons
    document.getElementById('closeCertificateModal').addEventListener('click', () => {
        document.getElementById('certificateModal').classList.add('hidden');
    });

    document.getElementById('closeShareModal').addEventListener('click', () => {
        document.getElementById('shareModal').classList.add('hidden');
    });

    // Certificate actions
    document.getElementById('downloadCertificateBtn').addEventListener('click', downloadCertificate);
    document.getElementById('printCertificateBtn').addEventListener('click', printCertificate);
}

// Load test result
async function loadTestResult() {
    try {
        const resultId = getResultIdFromUrl();
        const response = await fetch(`/applicants/api/results/${resultId}`);
        const data = await response.json();

        if (data.success) {
            resultData = data.result;
            questions = data.questions;
            displayResult();
            displayChart();
            displayQuestions();
            displayRecommendations();

            // Show certificate if passed
            if (resultData.passed) {
                setTimeout(() => showCertificate(), 2000);
            }
        } else {
            showMessage(i18n.testNotFound, 'error');
            setTimeout(() => window.location.href = '/applicants', 2000);
        }
    } catch (error) {
        console.error('Error loading test result:', error);
        showMessage(i18n.errorLoadingData, 'error');
    }
}

// Display result
function displayResult() {
    const score = resultData.score || 0;
    const passed = resultData.passed;

    // Update result icon and message
    const resultIcon = document.getElementById('resultIcon');
    const resultMessage = document.getElementById('resultMessage');

    if (passed) {
        resultIcon.className = 'fas fa-check-circle text-4xl text-green-500';
        resultMessage.textContent = `${i18n.congratsPassedWith} ${score}%`;
        resultMessage.className = 'text-xl opacity-90 text-green-100';
    } else {
        resultIcon.className = 'fas fa-times-circle text-4xl text-red-500';
        resultMessage.textContent = `${i18n.sorryFailedWith} ${score}% ${i18n.notMeetCriteria}`;
        resultMessage.className = 'text-xl opacity-90 text-red-100';
    }

    // Update score display
    document.getElementById('totalScore').textContent = `${score}%`;
    document.getElementById('correctAnswers').textContent = resultData.correct_answers || 0;
    document.getElementById('wrongAnswers').textContent = resultData.wrong_answers || 0;
    document.getElementById('timeTaken').textContent = Math.round((resultData.time_taken || 0) / 60);

    // Update pass/fail status
    const passStatus = document.getElementById('passStatus');
    if (passed) {
        passStatus.className = 'inline-flex items-center px-6 py-3 rounded-full text-lg font-medium bg-green-100 text-green-800';
        passStatus.innerHTML = `<i class="fas fa-check-circle mr-2"></i><span>${i18n.passed}</span>`;
    } else {
        passStatus.className = 'inline-flex items-center px-6 py-3 rounded-full text-lg font-medium bg-red-100 text-red-800';
        passStatus.innerHTML = `<i class="fas fa-times-circle mr-2"></i><span>${i18n.failed}</span>`;
    }

    // Update test information
    document.getElementById('testTitle').textContent = resultData.test_title || '-';
    document.getElementById('positionTitle').textContent = resultData.position_title || '-';
    document.getElementById('totalQuestions').textContent = `${resultData.total_questions || 0} ${i18n.questionsUnit}`;
    document.getElementById('passingScore').textContent = `${resultData.passing_score || 0}%`;
    document.getElementById('testDate').textContent = formatDate(resultData.started_at);
    document.getElementById('startTime').textContent = formatTime(resultData.started_at);
    document.getElementById('endTime').textContent = formatTime(resultData.completed_at);

    const submissionType = resultData.submission_type === 'auto' ? i18n.autoSubmission : i18n.manualSubmission;
    document.getElementById('submissionType').textContent = submissionType;
}

// Display chart
function displayChart() {
    const ctx = document.getElementById('scoreChart').getContext('2d');

    const score = resultData.score || 0;
    const passingScore = resultData.passing_score || 70;

    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: [i18n.scoreObtained, i18n.scoreRemaining],
            datasets: [{
                data: [score, 100 - score],
                backgroundColor: [
                    score >= passingScore ? '#10B981' : '#EF4444',
                    '#E5E7EB'
                ],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            },
            cutout: '70%'
        }
    });

    // Display category performance
    displayCategoryPerformance();
}

// Display category performance
function displayCategoryPerformance() {
    const container = document.getElementById('categoryPerformance');

    if (resultData.category_scores && resultData.category_scores.length > 0) {
        container.innerHTML = resultData.category_scores.map(category => `
            <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex justify-between items-center mb-2">
                    <h4 class="font-medium text-gray-900">${category.name}</h4>
                    <span class="text-sm font-medium ${category.score >= 70 ? 'text-green-600' : 'text-red-600'}">
                        ${category.score}%
                    </span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="h-2 rounded-full ${category.score >= 70 ? 'bg-green-500' : 'bg-red-500'}"
                         style="width: ${category.score}%"></div>
                </div>
                <p class="text-sm text-gray-500 mt-2">
                    ${category.correct}/${category.total} ${i18n.questionsUnit}
                </p>
            </div>
        `).join('');
    } else {
        container.innerHTML = `<p class="text-gray-500">${i18n.noCategoryData}</p>`;
    }
}

// Display questions
function displayQuestions() {
    filterQuestions('all');
}

// Filter questions
function filterQuestions(filter) {
    currentFilter = filter;

    // Update button states
    document.querySelectorAll('[id$="Btn"]').forEach(btn => {
        btn.classList.remove('bg-ruxchai-primary', 'text-white');
        btn.classList.add('bg-gray-100', 'text-gray-700');
    });

    const activeBtn = document.getElementById(`show${filter.charAt(0).toUpperCase() + filter.slice(1)}Btn`);
    if (activeBtn) {
        activeBtn.classList.remove('bg-gray-100', 'text-gray-700');
        activeBtn.classList.add('bg-ruxchai-primary', 'text-white');
    }

    // Filter and display questions
    let filteredQuestions = questions;

    switch (filter) {
        case 'correct':
            filteredQuestions = questions.filter(q => q.is_correct);
            break;
        case 'wrong':
            filteredQuestions = questions.filter(q => !q.is_correct && q.user_answer !== null);
            break;
        case 'marked':
            filteredQuestions = questions.filter(q => q.is_marked);
            break;
    }

    displayFilteredQuestions(filteredQuestions);
}

// Display filtered questions
function displayFilteredQuestions(questions) {
    const container = document.getElementById('questionsReview');

    if (questions.length === 0) {
        container.innerHTML = `<p class="text-center text-gray-500 py-8">${i18n.noQuestionsInCategory}</p>`;
        return;
    }

    container.innerHTML = questions.map((question, index) => createQuestionReview(question, index)).join('');
}

// Create question review
function createQuestionReview(question, index) {
    const isCorrect = question.is_correct;
    const hasAnswer = question.user_answer !== null && question.user_answer !== '';

    return `
        <div class="border border-gray-200 rounded-lg p-6">
            <div class="flex justify-between items-start mb-4">
                <h3 class="text-lg font-medium text-gray-900">
                    ${i18n.questionNumber} ${question.question_number}
                    ${question.is_marked ? '<i class="fas fa-flag text-orange-500 ml-2"></i>' : ''}
                </h3>
                <div class="flex items-center space-x-2">
                    ${hasAnswer ? `
                        <span class="px-2 py-1 rounded-full text-xs font-medium ${
                            isCorrect ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'
                        }">
                            ${isCorrect ? i18n.correct : i18n.wrong}
                        </span>
                    ` : `
                        <span class="px-2 py-1 bg-gray-100 text-gray-800 rounded-full text-xs font-medium">
                            ${i18n.notAnswered}
                        </span>
                    `}
                    <span class="text-sm text-gray-500">${question.points || 1} ${i18n.points}</span>
                </div>
            </div>

            <!-- Question Content -->
            <div class="prose max-w-none mb-4">
                ${question.question_text}
                ${question.question_image ? `<img src="${question.question_image}" alt="Question image" class="mt-2 max-w-full h-auto rounded-lg">` : ''}
            </div>

            <!-- Answer Options -->
            <div class="space-y-3 mb-4">
                ${displayQuestionAnswers(question)}
            </div>

            <!-- Explanation -->
            ${question.explanation ? `
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <h4 class="font-medium text-blue-900 mb-2">${i18n.explanation}:</h4>
                    <p class="text-blue-800">${question.explanation}</p>
                </div>
            ` : ''}
        </div>
    `;
}

// Display question answers
function displayQuestionAnswers(question) {
    switch (question.type) {
        case 'multiple_choice':
            return question.options.map((option, index) => {
                const isUserAnswer = question.user_answer == index;
                const isCorrectAnswer = question.correct_answer == index;

                let className = 'p-3 border rounded-lg ';
                if (isCorrectAnswer) {
                    className += 'bg-green-50 border-green-300 text-green-900';
                } else if (isUserAnswer) {
                    className += 'bg-red-50 border-red-300 text-red-900';
                } else {
                    className += 'bg-gray-50 border-gray-200 text-gray-700';
                }

                return `
                    <div class="${className}">
                        <div class="flex items-center justify-between">
                            <span>${option}</span>
                            <div class="flex space-x-2">
                                ${isUserAnswer ? `<i class="fas fa-user text-blue-600" title="${i18n.yourAnswer}"></i>` : ''}
                                ${isCorrectAnswer ? `<i class="fas fa-check text-green-600" title="${i18n.correctAnswer}"></i>` : ''}
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

        case 'true_false':
            const userAnswer = question.user_answer;
            const correctAnswer = question.correct_answer;

            return ['true', 'false'].map(value => {
                const label = value === 'true' ? i18n.trueFalseTrue : i18n.trueFalseFalse;
                const isUserAnswer = userAnswer === value;
                const isCorrectAnswer = correctAnswer === value;

                let className = 'p-3 border rounded-lg ';
                if (isCorrectAnswer) {
                    className += 'bg-green-50 border-green-300 text-green-900';
                } else if (isUserAnswer) {
                    className += 'bg-red-50 border-red-300 text-red-900';
                } else {
                    className += 'bg-gray-50 border-gray-200 text-gray-700';
                }

                return `
                    <div class="${className}">
                        <div class="flex items-center justify-between">
                            <span>${label}</span>
                            <div class="flex space-x-2">
                                ${isUserAnswer ? `<i class="fas fa-user text-blue-600" title="${i18n.yourAnswer}"></i>` : ''}
                                ${isCorrectAnswer ? `<i class="fas fa-check text-green-600" title="${i18n.correctAnswer}"></i>` : ''}
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

        case 'fill_blank':
        case 'essay':
            return `
                <div class="space-y-3">
                    <div class="p-3 border border-blue-200 rounded-lg bg-blue-50">
                        <h5 class="font-medium text-blue-900 mb-1">${i18n.yourAnswer}:</h5>
                        <p class="text-blue-800">${question.user_answer || i18n.notAnswered}</p>
                    </div>
                    <div class="p-3 border border-green-200 rounded-lg bg-green-50">
                        <h5 class="font-medium text-green-900 mb-1">${i18n.correctAnswer}:</h5>
                        <p class="text-green-800">${question.correct_answer || i18n.notProvided}</p>
                    </div>
                </div>
            `;

        default:
            return `<p class="text-gray-500">${i18n.cannotDisplayAnswer}</p>`;
    }
}

