function quickInsertImage() {
    // Create a simple file input
    const input = document.createElement('input');
    input.type = 'file';
    input.accept = 'image/*';
    input.onchange = async function(e) {
        const file = e.target.files[0];
        if (!file) return;

        // Validate file
        if (!file.type.startsWith('image/')) {
            showToast('กรุณาเลือกไฟล์รูปภาพ', 'error');
            return;
        }

        if (file.size > 10 * 1024 * 1024) {
            showToast('ไฟล์ใหญ่เกินไป (สูงสุด 10MB)', 'error');
            return;
        }

        // Show loading
        showToast('กำลังอัปโหลดรูปภาพ...', 'info');

        try {
            // Upload to server
            const formData = new FormData();
            formData.append('image', file);

            const response = await fetch('/articles/api/upload/image', {
                method: 'POST',
                headers: {
                    'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || ''
                },
                body: formData
            });

            const result = await response.json();

            if (result.success && result.url) {
                // Insert image centered
                insertImageToEditor(result.url, file.name);
                showToast('แทรกรูปภาพสำเร็จ', 'success');
            } else {
                throw new Error(result.message || 'Upload failed');
            }
        } catch (error) {
            console.error('Upload error:', error);
            showToast('เกิดข้อผิดพลาดในการอัปโหลด', 'error');
        }
    };
    input.click();
}

