<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Skip Link for Accessibility -->
    <a href="#article-form" class="skip-link"><%= t('skipToForm') || 'ข้ามไปยังฟอร์ม' %></a>

    <!-- Header -->
    <div class="rounded-2xl p-6 mb-8 text-white shadow-lg" style="background: linear-gradient(to right, <%= systemSettings.primary_color || '#3b82f6' %>, <%= systemSettings.secondary_color || '#10b981' %>);">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
            <div class="mb-4 md:mb-0">
                <h1 class="text-3xl font-bold text-white"><%= t('createNewArticle') || 'สร้างบทความใหม่' %></h1>
                <p class="text-white/80 mt-2"><%= t('shareKnowledgeDesc') || 'แบ่งปันความรู้และประสบการณ์กับชุมชน' %></p>
            </div>
            <div class="flex space-x-3">
                <button type="button" onclick="previewArticle()" class="bg-white/20 hover:bg-white/30 text-white font-medium py-2 px-4 rounded-lg transition-all duration-200 flex items-center">
                    <i class="fas fa-eye mr-2"></i><%= t('preview') || 'ดูตัวอย่าง' %>
                </button>
                <button type="button" onclick="saveDraft()" class="bg-white/20 hover:bg-white/30 text-white font-medium py-2 px-4 rounded-lg transition-all duration-200 flex items-center">
                    <i class="fas fa-save mr-2"></i><%= t('saveDraft') || 'บันทึกแบบร่าง' %>
                </button>
                <a href="/articles" class="bg-white/20 hover:bg-white/30 text-white font-medium py-2 px-4 rounded-lg transition-all duration-200 flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i><%= t('backToArticles') || 'กลับ' %>
                </a>
            </div>
        </div>
    </div>

    <!-- Screen Reader Announcements -->
    <div id="sr-announcements" class="sr-only" aria-live="polite" aria-atomic="true"></div>

    <!-- Progress Steps -->
    <nav class="mb-8" aria-label="<%= t('formSteps') || 'ขั้นตอนการกรอกฟอร์ม' %>">
        <ol class="flex items-center space-x-4" role="list">
            <li class="step-indicator active" data-step="1" role="listitem" aria-current="step">
                <div class="step-circle" aria-hidden="true">1</div>
                <span class="step-label"><%= t('basicInformation') || 'ข้อมูลพื้นฐาน' %></span>
            </li>
            <li class="step-line" role="presentation" aria-hidden="true"></li>
            <li class="step-indicator" data-step="2" role="listitem">
                <div class="step-circle" aria-hidden="true">2</div>
                <span class="step-label"><%= t('contentAndMedia') || 'เนื้อหาและสื่อ' %></span>
            </li>
            <li class="step-line" role="presentation" aria-hidden="true"></li>
            <li class="step-indicator" data-step="3" role="listitem">
                <div class="step-circle" aria-hidden="true">3</div>
                <span class="step-label"><%= t('settingsAndTags') || 'การตั้งค่าและแท็ก' %></span>
            </li>
            <li class="step-line" role="presentation" aria-hidden="true"></li>
            <li class="step-indicator" data-step="4" role="listitem">
                <div class="step-circle" aria-hidden="true">4</div>
                <span class="step-label"><%= t('reviewAndPublish') || 'ตรวจสอบและเผยแพร่' %></span>
            </li>
        </ol>
    </nav>

    <form id="article-form" enctype="multipart/form-data" aria-label="<%= t('createArticleForm') || 'ฟอร์มสร้างบทความ' %>">
        <!-- Step 1: Basic Information -->
        <div id="step-1" class="step-content active" role="region" aria-labelledby="step-1-heading">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h3 id="step-1-heading" class="text-lg font-semibold text-gray-900 mb-4"><%= t('basicInformation') || 'ข้อมูลพื้นฐาน' %></h3>

                <div class="space-y-6">
                    <!-- Article Title -->
                    <div>
                        <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
                            <%= t('articleTitle') || 'หัวข้อบทความ' %> <span class="text-red-500" aria-hidden="true">*</span>
                            <span class="sr-only">(<%= t('required') || 'จำเป็น' %>)</span>
                        </label>
                        <input type="text" id="title" name="title" required
                               aria-describedby="title-hint"
                               aria-required="true"
                               maxlength="100"
                               class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="<%= t('enterEngagingTitle') || 'ใส่หัวข้อที่น่าสนใจสำหรับบทความของคุณ' %>">
                        <div id="title-hint" class="mt-1 text-sm text-gray-500">
                            <span id="title-count">0</span>/100 <%= t('characters') || 'ตัวอักษร' %> • <%= t('goodTitleDesc') || 'หัวข้อที่ดีควรชัดเจนและอธิบายได้' %>
                        </div>
                    </div>

                    <!-- Article Summary -->
                    <div>
                        <label for="summary" class="block text-sm font-medium text-gray-700 mb-2">
                            <%= t('summary') || 'สรุปเนื้อหา' %> <span class="text-red-500" aria-hidden="true">*</span>
                            <span class="sr-only">(<%= t('required') || 'จำเป็น' %>)</span>
                        </label>
                        <textarea id="summary" name="summary" rows="3" required
                                  aria-describedby="summary-hint"
                                  aria-required="true"
                                  maxlength="300"
                                  class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                  placeholder="<%= t('writeBriefSummary') || 'เขียนสรุปสั้นๆ ของบทความ (จะแสดงในรายการบทความ)' %>"></textarea>
                        <div id="summary-hint" class="mt-1 text-sm text-gray-500">
                            <span id="summary-count">0</span>/300 <%= t('characters') || 'ตัวอักษร' %> • <%= t('summaryHelpDesc') || 'ช่วยให้ผู้อ่านเข้าใจว่าบทความของคุณเกี่ยวกับอะไร' %>
                        </div>
                    </div>

                    <!-- Category - Pill/Tag Selection -->
                    <div>
                        <label id="category-label" class="block text-sm font-medium text-gray-700 mb-3">
                            <%= t('category') || 'หมวดหมู่' %> <span class="text-red-500" aria-hidden="true">*</span>
                        </label>
                        <div class="category-pills-container" id="category-list">
                            <label class="category-pill" data-value="technology" style="--pill-color: #3b82f6;">
                                <input type="radio" name="category_radio" value="technology" class="category-radio sr-only">
                                <i class="fas fa-microchip"></i>
                                <span><%= t('technology') || 'เทคโนโลยี' %></span>
                            </label>
                            <label class="category-pill" data-value="business" style="--pill-color: #10b981;">
                                <input type="radio" name="category_radio" value="business" class="category-radio sr-only">
                                <i class="fas fa-briefcase"></i>
                                <span><%= t('business') || 'ธุรกิจ' %></span>
                            </label>
                            <label class="category-pill" data-value="design" style="--pill-color: #f59e0b;">
                                <input type="radio" name="category_radio" value="design" class="category-radio sr-only">
                                <i class="fas fa-palette"></i>
                                <span><%= t('design') || 'ดีไซน์' %></span>
                            </label>
                            <label class="category-pill" data-value="marketing" style="--pill-color: #ef4444;">
                                <input type="radio" name="category_radio" value="marketing" class="category-radio sr-only">
                                <i class="fas fa-bullhorn"></i>
                                <span><%= t('marketing') || 'การตลาด' %></span>
                            </label>
                            <label class="category-pill" data-value="development" style="--pill-color: #8b5cf6;">
                                <input type="radio" name="category_radio" value="development" class="category-radio sr-only">
                                <i class="fas fa-code"></i>
                                <span><%= t('development') || 'การพัฒนา' %></span>
                            </label>
                            <label class="category-pill" data-value="data-science" style="--pill-color: #06b6d4;">
                                <input type="radio" name="category_radio" value="data-science" class="category-radio sr-only">
                                <i class="fas fa-chart-bar"></i>
                                <span><%= t('dataScience') || 'Data Science' %></span>
                            </label>
                            <label class="category-pill" data-value="project-management" style="--pill-color: #ec4899;">
                                <input type="radio" name="category_radio" value="project-management" class="category-radio sr-only">
                                <i class="fas fa-tasks"></i>
                                <span><%= t('projectManagement') || 'จัดการโครงการ' %></span>
                            </label>
                            <label class="category-pill" data-value="leadership" style="--pill-color: #f97316;">
                                <input type="radio" name="category_radio" value="leadership" class="category-radio sr-only">
                                <i class="fas fa-users"></i>
                                <span><%= t('leadership') || 'ความเป็นผู้นำ' %></span>
                            </label>
                            <label class="category-pill" data-value="career" style="--pill-color: #14b8a6;">
                                <input type="radio" name="category_radio" value="career" class="category-radio sr-only">
                                <i class="fas fa-rocket"></i>
                                <span><%= t('careerDevelopment') || 'พัฒนาอาชีพ' %></span>
                            </label>
                            <label class="category-pill" data-value="other" style="--pill-color: #6b7280;">
                                <input type="radio" name="category_radio" value="other" class="category-radio sr-only">
                                <i class="fas fa-ellipsis-h"></i>
                                <span><%= t('other') || 'อื่นๆ' %></span>
                            </label>
                        </div>
                        <input type="hidden" id="category" name="category" required>
                        <div id="category-error" class="mt-2 text-sm text-red-500 hidden"><%= t('pleaseSelectCategory') || 'กรุณาเลือกหมวดหมู่' %></div>
                    </div>

                    <!-- Reading Time -->
                    <div class="mt-6">
                        <label for="reading_time" class="block text-sm font-medium text-gray-700 mb-2">
                            <%= t('estimatedReadingTime') || 'เวลาอ่านโดยประมาณ' %>
                        </label>
                        <div class="flex items-center space-x-3">
                            <div class="relative flex-1 max-w-xs">
                                <input type="number" id="reading_time" name="reading_time" min="1" max="60"
                                       class="w-full border border-gray-300 rounded-lg px-4 py-2 pr-12 focus:ring-2 focus:ring-blue-500">
                                <span class="absolute right-3 top-1/2 -translate-y-1/2 text-sm text-gray-500"><%= t('minutes') || 'นาที' %></span>
                            </div>
                            <span class="text-sm text-gray-400"><i class="fas fa-magic mr-1"></i><%= t('autoCalculatedIfBlank') || 'คำนวณอัตโนมัติ' %></span>
                        </div>
                    </div>

                    <!-- Featured Image -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('featuredImage') || 'รูปปก' %></label>
                        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-gray-400 transition-colors">
                            <div class="space-y-1 text-center">
                                <div id="image-preview" class="hidden">
                                    <img id="preview-img" class="mx-auto h-32 w-auto rounded-lg" src="" alt="Preview">
                                </div>
                                <div id="upload-placeholder">
                                    <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                                        <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                                    </svg>
                                </div>
                                <div class="flex text-sm text-gray-600">
                                    <label for="featured_image" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                                        <span><%= t('uploadImage') || 'อัปโหลดรูปภาพ' %></span>
                                        <input id="featured_image" name="featured_image" type="file" class="sr-only" accept="image/*">
                                    </label>
                                    <p class="pl-1"><%= t('orDragAndDrop') || 'หรือลากและวาง' %></p>
                                </div>
                                <p class="text-xs text-gray-500"><%= t('imageFormatSupport') || 'รองรับ PNG, JPG, GIF สูงสุด 5MB' %></p>
                            </div>
                        </div>
                        <button type="button" onclick="removeImage()" class="mt-2 text-sm text-red-600 hover:text-red-800 hidden" id="remove-image-btn">
                            <%= t('removeImage') || 'ลบรูปภาพ' %>
                        </button>
                    </div>
                </div>

                <div class="flex justify-between mt-6">
                    <div></div>
                    <button type="button" onclick="nextStep()" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700">
                        <%= t('next') || 'ถัดไป' %> <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Step 2: Content & Media -->
        <div id="step-2" class="step-content" role="region" aria-labelledby="step-2-heading">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h3 id="step-2-heading" class="text-lg font-semibold text-gray-900 mb-4"><%= t('contentAndMedia') || 'เนื้อหาและสื่อ' %></h3>

                <!-- Professional Editor Toolbar - Word Style -->
                <div class="word-toolbar" role="toolbar" aria-label="<%= t('textFormatting') || 'การจัดรูปแบบข้อความ' %>">
                    <!-- Row 1: Main Tools -->
                    <div class="toolbar-row">
                        <!-- Undo/Redo -->
                        <div class="tool-group">
                            <button type="button" onclick="formatText('undo')" class="tool-btn" title="ย้อนกลับ (Ctrl+Z)">
                                <i class="fas fa-undo"></i>
                            </button>
                            <button type="button" onclick="formatText('redo')" class="tool-btn" title="ทำซ้ำ (Ctrl+Y)">
                                <i class="fas fa-redo"></i>
                            </button>
                        </div>

                        <div class="tool-divider"></div>

                        <!-- Font Style -->
                        <div class="tool-group">
                            <select id="font-size-select" onchange="changeFontSize(this.value)" class="tool-select" title="ขนาดตัวอักษร">
                                <option value="1">8</option>
                                <option value="2">10</option>
                                <option value="3" selected>12</option>
                                <option value="4">14</option>
                                <option value="5">18</option>
                                <option value="6">24</option>
                                <option value="7">36</option>
                            </select>
                        </div>

                        <div class="tool-divider"></div>

                        <!-- Text Format -->
                        <div class="tool-group">
                            <button type="button" onclick="formatText('bold')" class="tool-btn" title="ตัวหนา (Ctrl+B)" data-command="bold">
                                <i class="fas fa-bold"></i>
                            </button>
                            <button type="button" onclick="formatText('italic')" class="tool-btn" title="ตัวเอียง (Ctrl+I)" data-command="italic">
                                <i class="fas fa-italic"></i>
                            </button>
                            <button type="button" onclick="formatText('underline')" class="tool-btn" title="ขีดเส้นใต้ (Ctrl+U)" data-command="underline">
                                <i class="fas fa-underline"></i>
                            </button>
                            <button type="button" onclick="formatText('strikeThrough')" class="tool-btn" title="ขีดฆ่า" data-command="strikeThrough">
                                <i class="fas fa-strikethrough"></i>
                            </button>
                        </div>

                        <div class="tool-divider"></div>

                        <!-- Text Color -->
                        <div class="tool-group">
                            <div class="color-picker-wrap">
                                <button type="button" onclick="document.getElementById('text-color-input').click()" class="tool-btn color-btn" title="สีตัวอักษร">
                                    <i class="fas fa-font"></i>
                                    <span class="color-bar" id="text-color-bar" style="background: #000000;"></span>
                                </button>
                                <input type="color" id="text-color-input" value="#000000" onchange="changeTextColor(this.value)" style="display:none;">
                            </div>
                            <div class="color-picker-wrap">
                                <button type="button" onclick="document.getElementById('bg-color-input').click()" class="tool-btn color-btn" title="สีพื้นหลัง">
                                    <i class="fas fa-highlighter"></i>
                                    <span class="color-bar" id="bg-color-bar" style="background: #ffff00;"></span>
                                </button>
                                <input type="color" id="bg-color-input" value="#ffff00" onchange="changeBackgroundColor(this.value)" style="display:none;">
                            </div>
                        </div>

                        <div class="tool-divider"></div>

                        <!-- Headings -->
                        <div class="tool-group">
                            <select id="heading-select" onchange="formatHeading(this.value); this.value='';" class="tool-select" title="หัวข้อ">
                                <option value="">หัวข้อ</option>
                                <option value="p">ย่อหน้าปกติ</option>
                                <option value="h1">หัวข้อ 1</option>
                                <option value="h2">หัวข้อ 2</option>
                                <option value="h3">หัวข้อ 3</option>
                                <option value="h4">หัวข้อ 4</option>
                            </select>
                        </div>

                        <div class="tool-divider"></div>

                        <!-- Alignment -->
                        <div class="tool-group">
                            <button type="button" onclick="formatText('justifyLeft')" class="tool-btn" title="ชิดซ้าย" data-command="justifyLeft">
                                <i class="fas fa-align-left"></i>
                            </button>
                            <button type="button" onclick="formatText('justifyCenter')" class="tool-btn" title="กึ่งกลาง" data-command="justifyCenter">
                                <i class="fas fa-align-center"></i>
                            </button>
                            <button type="button" onclick="formatText('justifyRight')" class="tool-btn" title="ชิดขวา" data-command="justifyRight">
                                <i class="fas fa-align-right"></i>
                            </button>
                            <button type="button" onclick="formatText('justifyFull')" class="tool-btn" title="เต็มบรรทัด" data-command="justifyFull">
                                <i class="fas fa-align-justify"></i>
                            </button>
                        </div>

                        <div class="tool-divider"></div>

                        <!-- Lists -->
                        <div class="tool-group">
                            <button type="button" onclick="formatText('insertUnorderedList')" class="tool-btn" title="รายการแบบจุด">
                                <i class="fas fa-list-ul"></i>
                            </button>
                            <button type="button" onclick="formatText('insertOrderedList')" class="tool-btn" title="รายการแบบตัวเลข">
                                <i class="fas fa-list-ol"></i>
                            </button>
                            <button type="button" onclick="formatText('indent')" class="tool-btn" title="เพิ่มย่อหน้า">
                                <i class="fas fa-indent"></i>
                            </button>
                            <button type="button" onclick="formatText('outdent')" class="tool-btn" title="ลดย่อหน้า">
                                <i class="fas fa-outdent"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Row 2: Insert Tools -->
                    <div class="toolbar-row toolbar-row-2">
                        <!-- Insert Items -->
                        <div class="tool-group">
                            <button type="button" onclick="quickInsertImage()" class="tool-btn-label" title="แทรกรูปภาพ">
                                <i class="fas fa-image"></i>
                                <span>รูปภาพ</span>
                            </button>
                            <button type="button" onclick="insertLink()" class="tool-btn-label" title="แทรกลิงก์">
                                <i class="fas fa-link"></i>
                                <span>ลิงก์</span>
                            </button>
                            <button type="button" onclick="insertTable()" class="tool-btn-label" title="แทรกตาราง">
                                <i class="fas fa-table"></i>
                                <span>ตาราง</span>
                            </button>
                            <button type="button" onclick="insertQuote()" class="tool-btn-label" title="อ้างอิง">
                                <i class="fas fa-quote-left"></i>
                                <span>อ้างอิง</span>
                            </button>
                            <button type="button" onclick="insertCodeBlock()" class="tool-btn-label" title="บล็อกโค้ด">
                                <i class="fas fa-code"></i>
                                <span>โค้ด</span>
                            </button>
                            <button type="button" onclick="insertHorizontalRule()" class="tool-btn-label" title="เส้นคั่น">
                                <i class="fas fa-minus"></i>
                                <span>เส้นคั่น</span>
                            </button>
                        </div>

                        <!-- Spacer -->
                        <div style="flex: 1;"></div>

                        <!-- View Options -->
                        <div class="tool-group">
                            <button type="button" onclick="toggleFullscreen()" class="tool-btn" title="เต็มหน้าจอ">
                                <i class="fas fa-expand"></i>
                            </button>
                            <button type="button" onclick="clearFormatting()" class="tool-btn" title="ล้างการจัดรูปแบบ">
                                <i class="fas fa-eraser"></i>
                            </button>
                            <button type="button" onclick="clearAllContent()" class="tool-btn tool-btn-danger" title="ลบข้อความทั้งหมด">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Content Editor -->
                <div>
                    <label for="content-editor" class="sr-only"><%= t('articleContent') || 'เนื้อหาบทความ' %></label>
                    <div id="content-editor" contenteditable="true"
                         role="textbox"
                         aria-multiline="true"
                         aria-label="<%= t('articleContent') || 'เนื้อหาบทความ' %>"
                         aria-describedby="content-hint"
                         aria-required="true"
                         class="content-editor-area"
                         data-placeholder="<%= t('startWritingContent') || 'เริ่มเขียนเนื้อหาบทความของคุณที่นี่...' %>">
                    </div>
                    <input type="hidden" id="content" name="content">
                </div>

                <!-- Word Count -->
                <div id="content-hint" class="mt-2 flex justify-between text-sm text-gray-500">
                    <span><%= t('useToolbarDesc') || 'ใช้แถบเครื่องมือด้านบนเพื่อจัดรูปแบบเนื้อหา' %></span>
                    <span id="word-count">0 <%= t('words') || 'คำ' %></span>
                </div>

                <div class="flex justify-between mt-6">
