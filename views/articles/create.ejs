// Resize variables
let isResizing = false;
let resizeImgId = null;
let resizeDirection = null;
let resizeStartX = 0;
let resizeStartY = 0;
let resizeStartWidth = 0;
let resizeStartHeight = 0;
let resizeAspectRatio = 1;

function startResize(e, imgId, direction) {
    e.preventDefault();
    e.stopPropagation();

    const figure = document.getElementById(imgId);
    if (!figure) return;

    const img = figure.querySelector('img');
    if (!img) return;

    isResizing = true;
    resizeImgId = imgId;
    resizeDirection = direction;
    resizeStartX = e.clientX;
    resizeStartY = e.clientY;
    resizeStartWidth = img.offsetWidth;
    resizeStartHeight = img.offsetHeight;
    resizeAspectRatio = resizeStartWidth / resizeStartHeight;

    document.addEventListener('mousemove', doResize);
    document.addEventListener('mouseup', stopResize);

    // Prevent text selection while resizing
    document.body.style.userSelect = 'none';
}

function doResize(e) {
    if (!isResizing || !resizeImgId) return;

    const figure = document.getElementById(resizeImgId);
    if (!figure) return;

    const img = figure.querySelector('img');
    if (!img) return;

    const deltaX = e.clientX - resizeStartX;
    const deltaY = e.clientY - resizeStartY;

    let newWidth = resizeStartWidth;
    let newHeight = resizeStartHeight;

    // Calculate new size based on direction
    switch (resizeDirection) {
        case 'e':
            newWidth = resizeStartWidth + deltaX;
            newHeight = newWidth / resizeAspectRatio;
            break;
        case 'w':
            newWidth = resizeStartWidth - deltaX;
            newHeight = newWidth / resizeAspectRatio;
            break;
        case 's':
            newHeight = resizeStartHeight + deltaY;
            newWidth = newHeight * resizeAspectRatio;
            break;
        case 'n':
            newHeight = resizeStartHeight - deltaY;
            newWidth = newHeight * resizeAspectRatio;
            break;
        case 'se':
            newWidth = resizeStartWidth + deltaX;
            newHeight = newWidth / resizeAspectRatio;
            break;
        case 'sw':
            newWidth = resizeStartWidth - deltaX;
            newHeight = newWidth / resizeAspectRatio;
            break;
        case 'ne':
            newWidth = resizeStartWidth + deltaX;
            newHeight = newWidth / resizeAspectRatio;
            break;
        case 'nw':
            newWidth = resizeStartWidth - deltaX;
            newHeight = newWidth / resizeAspectRatio;
            break;
    }

    // Minimum size
    if (newWidth < 50) {
        newWidth = 50;
        newHeight = newWidth / resizeAspectRatio;
    }

    // Maximum size (editor width)
    const editor = document.getElementById('content-editor');
    const maxWidth = editor ? editor.offsetWidth - 50 : 800;
    if (newWidth > maxWidth) {
        newWidth = maxWidth;
        newHeight = newWidth / resizeAspectRatio;
    }

    // Apply new size
    img.style.width = newWidth + 'px';
    img.style.height = newHeight + 'px';
    img.style.maxWidth = 'none';

    // Update figure width to fit image
    figure.style.width = newWidth + 'px';

    // Update handle positions
    updateHandlePositions(resizeImgId);
}

function updateHandlePositions(imgId) {
    const figure = document.getElementById(imgId);
    if (!figure) return;

    const img = figure.querySelector('img');
    if (!img) return;

    const imgRect = img.getBoundingClientRect();
    const figRect = figure.getBoundingClientRect();
    const offsetLeft = imgRect.left - figRect.left;
    const offsetTop = imgRect.top - figRect.top;
    const imgWidth = img.offsetWidth;
    const imgHeight = img.offsetHeight;

    const positions = {
        'nw': { top: offsetTop - 4, left: offsetLeft - 4 },
        'n': { top: offsetTop - 4, left: offsetLeft + imgWidth/2 - 4 },
        'ne': { top: offsetTop - 4, left: offsetLeft + imgWidth - 4 },
        'w': { top: offsetTop + imgHeight/2 - 4, left: offsetLeft - 4 },
        'e': { top: offsetTop + imgHeight/2 - 4, left: offsetLeft + imgWidth - 4 },
        'sw': { top: offsetTop + imgHeight - 4, left: offsetLeft - 4 },
        's': { top: offsetTop + imgHeight - 4, left: offsetLeft + imgWidth/2 - 4 },
        'se': { top: offsetTop + imgHeight - 4, left: offsetLeft + imgWidth - 4 }
    };

    Object.keys(positions).forEach(dir => {
        const handle = figure.querySelector(`.resize-${dir}`);
        if (handle) {
            handle.style.top = positions[dir].top + 'px';
            handle.style.left = positions[dir].left + 'px';
        }
    });

    // Update toolbar position
    const toolbar = figure.querySelector('.img-edit-toolbar');
    if (toolbar) {
        toolbar.style.top = (offsetTop - 45) + 'px';
        toolbar.style.left = (offsetLeft + imgWidth/2) + 'px';
    }
}

function stopResize() {
    if (isResizing) {
        isResizing = false;
        document.removeEventListener('mousemove', doResize);
        document.removeEventListener('mouseup', stopResize);
        document.body.style.userSelect = '';

        if (resizeImgId) {
            const figure = document.getElementById(resizeImgId);
            if (figure) {
                const img = figure.querySelector('img');
