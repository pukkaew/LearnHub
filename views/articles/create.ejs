<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="rounded-2xl p-6 mb-8 text-white shadow-lg" style="background: linear-gradient(to right, <%= systemSettings.primary_color || '#3b82f6' %>, <%= systemSettings.secondary_color || '#10b981' %>);">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
            <div class="mb-4 md:mb-0">
                <h1 class="text-3xl font-bold text-white"><%= t('createNewArticle') || 'สร้างบทความใหม่' %></h1>
                <p class="text-white/80 mt-2"><%= t('shareKnowledgeDesc') || 'แบ่งปันความรู้และประสบการณ์กับชุมชน' %></p>
            </div>
            <div class="flex space-x-3">
                <button type="button" onclick="previewArticle()" class="bg-white/20 hover:bg-white/30 text-white font-medium py-2 px-4 rounded-lg transition-all duration-200 flex items-center">
                    <i class="fas fa-eye mr-2"></i><%= t('preview') || 'ดูตัวอย่าง' %>
                </button>
                <button type="button" onclick="saveDraft()" class="bg-white/20 hover:bg-white/30 text-white font-medium py-2 px-4 rounded-lg transition-all duration-200 flex items-center">
                    <i class="fas fa-save mr-2"></i><%= t('saveDraft') || 'บันทึกแบบร่าง' %>
                </button>
                <a href="/articles" class="bg-white/20 hover:bg-white/30 text-white font-medium py-2 px-4 rounded-lg transition-all duration-200 flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i><%= t('backToArticles') || 'กลับ' %>
                </a>
            </div>
        </div>
    </div>

    <!-- Progress Steps -->
    <div class="mb-8">
        <div class="flex items-center space-x-4">
            <div class="step-indicator active" data-step="1">
                <div class="step-circle">1</div>
                <span class="step-label"><%= t('basicInformation') || 'ข้อมูลพื้นฐาน' %></span>
            </div>
            <div class="step-line"></div>
            <div class="step-indicator" data-step="2">
                <div class="step-circle">2</div>
                <span class="step-label"><%= t('contentAndMedia') || 'เนื้อหาและสื่อ' %></span>
            </div>
            <div class="step-line"></div>
            <div class="step-indicator" data-step="3">
                <div class="step-circle">3</div>
                <span class="step-label"><%= t('settingsAndTags') || 'การตั้งค่าและแท็ก' %></span>
            </div>
            <div class="step-line"></div>
            <div class="step-indicator" data-step="4">
                <div class="step-circle">4</div>
                <span class="step-label"><%= t('reviewAndPublish') || 'ตรวจสอบและเผยแพร่' %></span>
            </div>
        </div>
    </div>

    <form id="article-form" enctype="multipart/form-data">
        <!-- Step 1: Basic Information -->
        <div id="step-1" class="step-content active">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('basicInformation') || 'ข้อมูลพื้นฐาน' %></h3>

                <div class="space-y-6">
                    <!-- Article Title -->
                    <div>
                        <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
                            <%= t('articleTitle') || 'หัวข้อบทความ' %> <span class="text-red-500">*</span>
                        </label>
                        <input type="text" id="title" name="title" required
                               class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="<%= t('enterEngagingTitle') || 'ใส่หัวข้อที่น่าสนใจสำหรับบทความของคุณ' %>">
                        <div class="mt-1 text-sm text-gray-500">
                            <span id="title-count">0</span>/100 <%= t('characters') || 'ตัวอักษร' %> • <%= t('goodTitleDesc') || 'หัวข้อที่ดีควรชัดเจนและอธิบายได้' %>
                        </div>
                    </div>

                    <!-- Article Summary -->
                    <div>
                        <label for="summary" class="block text-sm font-medium text-gray-700 mb-2">
                            <%= t('summary') || 'สรุปเนื้อหา' %> <span class="text-red-500">*</span>
                        </label>
                        <textarea id="summary" name="summary" rows="3" required
                                  class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                  placeholder="<%= t('writeBriefSummary') || 'เขียนสรุปสั้นๆ ของบทความ (จะแสดงในรายการบทความ)' %>"></textarea>
                        <div class="mt-1 text-sm text-gray-500">
                            <span id="summary-count">0</span>/300 <%= t('characters') || 'ตัวอักษร' %> • <%= t('summaryHelpDesc') || 'ช่วยให้ผู้อ่านเข้าใจว่าบทความของคุณเกี่ยวกับอะไร' %>
                        </div>
                    </div>

                    <!-- Category -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="category" class="block text-sm font-medium text-gray-700 mb-2">
                                <%= t('category') || 'หมวดหมู่' %> <span class="text-red-500">*</span>
                            </label>
                            <select id="category" name="category" required
                                    class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500">
                                <option value=""><%= t('selectCategory') || 'เลือกหมวดหมู่' %></option>
                                <option value="technology"><%= t('technology') || 'เทคโนโลยี' %></option>
                                <option value="business"><%= t('business') || 'ธุรกิจ' %></option>
                                <option value="design"><%= t('design') || 'ดีไซน์' %></option>
                                <option value="marketing"><%= t('marketing') || 'การตลาด' %></option>
                                <option value="development"><%= t('development') || 'การพัฒนา' %></option>
                                <option value="data-science"><%= t('dataScience') || 'วิทยาศาสตร์ข้อมูล' %></option>
                                <option value="project-management"><%= t('projectManagement') || 'การจัดการโครงการ' %></option>
                                <option value="leadership"><%= t('leadership') || 'ความเป็นผู้นำ' %></option>
                                <option value="career"><%= t('careerDevelopment') || 'การพัฒนาอาชีพ' %></option>
                                <option value="other"><%= t('other') || 'อื่นๆ' %></option>
                            </select>
                        </div>

                        <!-- Reading Time -->
                        <div>
                            <label for="reading_time" class="block text-sm font-medium text-gray-700 mb-2">
                                <%= t('estimatedReadingTime') || 'เวลาอ่านโดยประมาณ' %>
                            </label>
                            <div class="flex items-center space-x-2">
                                <input type="number" id="reading_time" name="reading_time" min="1" max="60"
                                       class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500">
                                <span class="text-sm text-gray-500"><%= t('minutes') || 'นาที' %></span>
                            </div>
                            <div class="mt-1 text-sm text-gray-500"><%= t('autoCalculatedIfBlank') || 'จะคำนวณอัตโนมัติหากไม่ได้กรอก' %></div>
                        </div>
                    </div>

                    <!-- Featured Image -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('featuredImage') || 'รูปปก' %></label>
                        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-gray-400 transition-colors">
                            <div class="space-y-1 text-center">
                                <div id="image-preview" class="hidden">
                                    <img id="preview-img" class="mx-auto h-32 w-auto rounded-lg" src="" alt="Preview">
                                </div>
                                <div id="upload-placeholder">
                                    <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                                        <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                                    </svg>
                                </div>
                                <div class="flex text-sm text-gray-600">
                                    <label for="featured_image" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                                        <span><%= t('uploadImage') || 'อัปโหลดรูปภาพ' %></span>
                                        <input id="featured_image" name="featured_image" type="file" class="sr-only" accept="image/*">
                                    </label>
                                    <p class="pl-1"><%= t('orDragAndDrop') || 'หรือลากและวาง' %></p>
                                </div>
                                <p class="text-xs text-gray-500"><%= t('imageFormatSupport') || 'รองรับ PNG, JPG, GIF สูงสุด 5MB' %></p>
                            </div>
                        </div>
                        <button type="button" onclick="removeImage()" class="mt-2 text-sm text-red-600 hover:text-red-800 hidden" id="remove-image-btn">
                            <%= t('removeImage') || 'ลบรูปภาพ' %>
                        </button>
                    </div>
                </div>

                <div class="flex justify-between mt-6">
                    <div></div>
                    <button type="button" onclick="nextStep()" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700">
                        <%= t('next') || 'ถัดไป' %> <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Step 2: Content & Media -->
        <div id="step-2" class="step-content">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('contentAndMedia') || 'เนื้อหาและสื่อ' %></h3>

                <!-- Editor Toolbar -->
                <div class="border border-gray-300 rounded-t-lg bg-gray-50 p-3">
                    <div class="flex items-center space-x-2 flex-wrap">
                        <button type="button" onclick="formatText('bold')" class="editor-btn" title="<%= t('bold') || 'ตัวหนา' %>">
                            <i class="fas fa-bold"></i>
                        </button>
                        <button type="button" onclick="formatText('italic')" class="editor-btn" title="<%= t('italic') || 'ตัวเอียง' %>">
                            <i class="fas fa-italic"></i>
                        </button>
                        <button type="button" onclick="formatText('underline')" class="editor-btn" title="<%= t('underline') || 'ขีดเส้นใต้' %>">
                            <i class="fas fa-underline"></i>
                        </button>
                        <div class="w-px h-6 bg-gray-300"></div>
                        <button type="button" onclick="formatText('insertUnorderedList')" class="editor-btn" title="<%= t('bulletList') || 'รายการหัวข้อย่อย' %>">
                            <i class="fas fa-list-ul"></i>
                        </button>
                        <button type="button" onclick="formatText('insertOrderedList')" class="editor-btn" title="<%= t('numberedList') || 'รายการตัวเลข' %>">
                            <i class="fas fa-list-ol"></i>
                        </button>
                        <div class="w-px h-6 bg-gray-300"></div>
                        <button type="button" onclick="insertLink()" class="editor-btn" title="<%= t('insertLink') || 'แทรกลิงก์' %>">
                            <i class="fas fa-link"></i>
                        </button>
                        <button type="button" onclick="insertImage()" class="editor-btn" title="<%= t('insertImage') || 'แทรกรูปภาพ' %>">
                            <i class="fas fa-image"></i>
                        </button>
                        <button type="button" onclick="insertCodeBlock()" class="editor-btn" title="<%= t('codeBlock') || 'บล็อกโค้ด' %>">
                            <i class="fas fa-code"></i>
                        </button>
                        <div class="w-px h-6 bg-gray-300"></div>
                        <select onchange="formatHeading(this.value)" class="text-sm border border-gray-300 rounded px-2 py-1">
                            <option value=""><%= t('heading') || 'หัวข้อ' %></option>
                            <option value="h1"><%= t('heading') || 'หัวข้อ' %> 1</option>
                            <option value="h2"><%= t('heading') || 'หัวข้อ' %> 2</option>
                            <option value="h3"><%= t('heading') || 'หัวข้อ' %> 3</option>
                            <option value="h4"><%= t('heading') || 'หัวข้อ' %> 4</option>
                        </select>
                    </div>
                </div>

                <!-- Content Editor -->
                <div>
                    <div id="content-editor" contenteditable="true"
                         class="w-full min-h-96 border border-t-0 border-gray-300 rounded-b-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 prose prose-blue max-w-none"
                         data-placeholder="<%= t('startWritingContent') || 'เริ่มเขียนเนื้อหาบทความของคุณที่นี่...' %>">
                    </div>
                    <input type="hidden" id="content" name="content">
                </div>

                <!-- Word Count -->
                <div class="mt-2 flex justify-between text-sm text-gray-500">
                    <span><%= t('useToolbarDesc') || 'ใช้แถบเครื่องมือด้านบนเพื่อจัดรูปแบบเนื้อหา' %></span>
                    <span id="word-count">0 <%= t('words') || 'คำ' %></span>
                </div>

                <div class="flex justify-between mt-6">
                    <button type="button" onclick="prevStep()" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600">
                        <i class="fas fa-arrow-left mr-2"></i><%= t('previous') || 'ก่อนหน้า' %>
                    </button>
                    <button type="button" onclick="nextStep()" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700">
                        <%= t('next') || 'ถัดไป' %> <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Step 3: Settings & Tags -->
        <div id="step-3" class="step-content">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('settingsAndTags') || 'การตั้งค่าและแท็ก' %></h3>

                <div class="space-y-6">
                    <!-- Tags -->
                    <div>
                        <label for="tags-input" class="block text-sm font-medium text-gray-700 mb-2"><%= t('tags') || 'แท็ก' %></label>
                        <div class="border border-gray-300 rounded-lg px-3 py-2 focus-within:ring-2 focus-within:ring-blue-500">
                            <div class="flex flex-wrap gap-2 mb-2" id="tags-container"></div>
                            <input type="text" id="tags-input"
                                   class="w-full border-0 focus:outline-none focus:ring-0 text-sm"
                                   placeholder="<%= t('addTagsPlaceholder') || 'เพิ่มแท็ก (กด Enter เพื่อเพิ่ม)' %>">
                        </div>
                        <div class="mt-1 text-sm text-gray-500"><%= t('addRelevantTags') || 'เพิ่มแท็กที่เกี่ยวข้องเพื่อช่วยให้ผู้อ่านค้นหาบทความของคุณ' %></div>
                        <input type="hidden" id="tags" name="tags">
                    </div>

                    <!-- Article Settings -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Difficulty Level -->
                        <div>
                            <label for="difficulty" class="block text-sm font-medium text-gray-700 mb-2"><%= t('difficultyLevel') || 'ระดับความยาก' %></label>
                            <select id="difficulty" name="difficulty"
                                    class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500">
                                <option value="beginner"><%= t('beginner') || 'เริ่มต้น' %></option>
                                <option value="intermediate" selected><%= t('intermediate') || 'ปานกลาง' %></option>
                                <option value="advanced"><%= t('advanced') || 'ขั้นสูง' %></option>
                                <option value="expert"><%= t('expert') || 'ผู้เชี่ยวชาญ' %></option>
                            </select>
                        </div>

                        <!-- Language -->
                        <div>
                            <label for="language" class="block text-sm font-medium text-gray-700 mb-2"><%= t('language') || 'ภาษา' %></label>
                            <select id="language" name="language"
                                    class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500">
                                <option value="th" selected><%= t('thaiLanguage') || 'ไทย' %></option>
                                <option value="en">English</option>
                                <option value="zh">中文 (Chinese)</option>
                                <option value="ja">日本語 (Japanese)</option>
                            </select>
                        </div>
                    </div>

                    <!-- Visibility Settings -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-3"><%= t('visibility') || 'การมองเห็น' %></label>
                        <div class="space-y-3">
                            <label class="flex items-center">
                                <input type="radio" name="visibility" value="public" checked class="mr-2">
                                <div>
                                    <span class="font-medium"><%= t('public') || 'สาธารณะ' %></span>
                                    <p class="text-sm text-gray-500"><%= t('publicDesc') || 'ทุกคนสามารถดูบทความนี้ได้' %></p>
                                </div>
                            </label>
                            <label class="flex items-center">
                                <input type="radio" name="visibility" value="members" class="mr-2">
                                <div>
                                    <span class="font-medium"><%= t('membersOnly') || 'สมาชิกเท่านั้น' %></span>
                                    <p class="text-sm text-gray-500"><%= t('membersOnlyDesc') || 'เฉพาะสมาชิกที่ลงทะเบียนเท่านั้นที่สามารถดูได้' %></p>
                                </div>
                            </label>
                            <label class="flex items-center">
                                <input type="radio" name="visibility" value="private" class="mr-2">
                                <div>
                                    <span class="font-medium"><%= t('private') || 'ส่วนตัว' %></span>
                                    <p class="text-sm text-gray-500"><%= t('privateDesc') || 'เฉพาะคุณเท่านั้นที่สามารถดูบทความนี้ได้' %></p>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- Comments and Feedback -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-3"><%= t('commentsAndFeedback') || 'ความคิดเห็นและข้อเสนอแนะ' %></label>
                        <div class="space-y-3">
                            <label class="flex items-center">
                                <input type="checkbox" name="allow_comments" checked class="mr-2">
                                <span class="text-sm"><%= t('allowComments') || 'อนุญาตให้แสดงความคิดเห็นในบทความนี้' %></span>
                            </label>
                            <label class="flex items-center">
                                <input type="checkbox" name="allow_likes" checked class="mr-2">
                                <span class="text-sm"><%= t('allowLikes') || 'อนุญาตให้กดถูกใจ/รีแอค' %></span>
                            </label>
                            <label class="flex items-center">
                                <input type="checkbox" name="moderate_comments" class="mr-2">
                                <span class="text-sm"><%= t('moderateComments') || 'ตรวจสอบความคิดเห็นก่อนเผยแพร่' %></span>
                            </label>
                        </div>
                    </div>

                    <!-- SEO Settings -->
                    <div class="border-t border-gray-200 pt-6">
                        <h4 class="text-md font-semibold text-gray-900 mb-3"><%= t('seoSettings') || 'การตั้งค่า SEO' %></h4>
                        <div class="space-y-4">
                            <div>
                                <label for="meta_description" class="block text-sm font-medium text-gray-700 mb-2"><%= t('metaDescription') || 'คำอธิบายสำหรับ SEO' %></label>
                                <textarea id="meta_description" name="meta_description" rows="2"
                                          class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500"
                                          placeholder="<%= t('descriptionForSearchEngines') || 'คำอธิบายสั้นๆ สำหรับเครื่องมือค้นหา' %>"></textarea>
                                <div class="mt-1 text-sm text-gray-500">
                                    <span id="meta-count">0</span>/160 <%= t('charactersRecommended') || 'ตัวอักษรที่แนะนำ' %>
                                </div>
                            </div>
                            <div>
                                <label for="slug" class="block text-sm font-medium text-gray-700 mb-2">URL Slug</label>
                                <input type="text" id="slug" name="slug"
                                       class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500"
                                       placeholder="article-url-slug">
                                <div class="mt-1 text-sm text-gray-500"><%= t('willBeUsedAsURL') || 'จะใช้เป็น URL ของบทความ' %></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex justify-between mt-6">
                    <button type="button" onclick="prevStep()" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600">
                        <i class="fas fa-arrow-left mr-2"></i><%= t('previous') || 'ก่อนหน้า' %>
                    </button>
                    <button type="button" onclick="nextStep()" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700">
                        <%= t('next') || 'ถัดไป' %> <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Step 4: Review & Publish -->
        <div id="step-4" class="step-content">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('reviewAndPublish') || 'ตรวจสอบและเผยแพร่' %></h3>

                <!-- Article Preview -->
                <div class="border border-gray-200 rounded-lg p-6 mb-6 bg-gray-50">
                    <div id="article-preview">
                        <!-- Preview will be populated here -->
                    </div>
                </div>

                <!-- Publication Options -->
                <div class="space-y-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-3"><%= t('publicationStatus') || 'สถานะการเผยแพร่' %></label>
                        <div class="space-y-3">
                            <label class="flex items-center">
                                <input type="radio" name="status" value="published" class="mr-2">
                                <div>
