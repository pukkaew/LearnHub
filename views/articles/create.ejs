    if (selectedEditorImage) {
        deselectEditorImage();
    }

    const figure = document.getElementById(imgId);
    if (!figure) return;

    const img = figure.querySelector('img');
    if (!img) return;

    // Remove any existing handles/toolbar (safety check)
    figure.querySelectorAll('.resize-handle').forEach(el => el.remove());
    figure.querySelectorAll('.img-edit-toolbar').forEach(el => el.remove());

    // Select new
    selectedEditorImage = imgId;

    // Save original styles
    img.dataset.originalBorderRadius = img.style.borderRadius || '8px';
    figure.dataset.originalWidth = figure.style.width || '';

    // Style the image with border (fits exactly)
    img.style.border = '2px solid #0090D3';
    img.style.boxSizing = 'border-box';
    img.style.borderRadius = '4px';
    img.style.position = 'relative';

    // Position figure for absolute positioning of handles
    figure.style.position = 'relative';

    // Get image position within figure
    const imgRect = img.getBoundingClientRect();
    const figRect = figure.getBoundingClientRect();
    const offsetLeft = imgRect.left - figRect.left;
    const offsetTop = imgRect.top - figRect.top;

    // Add resize handles (8 points like Word)
    const handles = ['nw', 'n', 'ne', 'w', 'e', 'sw', 's', 'se'];
    const handleStyle = 'position: absolute; width: 8px; height: 8px; background: #0090D3; border: 1px solid #fff; border-radius: 1px; z-index: 15;';
    const cursors = {
        'nw': 'nw-resize', 'n': 'n-resize', 'ne': 'ne-resize',
        'w': 'w-resize', 'e': 'e-resize',
        'sw': 'sw-resize', 's': 's-resize', 'se': 'se-resize'
    };

    const positions = {
        'nw': `top: ${offsetTop - 4}px; left: ${offsetLeft - 4}px;`,
        'n': `top: ${offsetTop - 4}px; left: ${offsetLeft + img.offsetWidth/2 - 4}px;`,
