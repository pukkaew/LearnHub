                                <input type="radio" name="status" value="published" class="mr-2" aria-describedby="publish-now-desc">
                                <div>
                                    <span class="font-medium text-green-600"><%= t('publishNow') || 'เผยแพร่ทันที' %></span>
                                    <p id="publish-now-desc" class="text-sm text-gray-500"><%= t('publishNowDesc') || 'ทำให้บทความนี้ใช้งานได้ทันที' %></p>
                                </div>
                            </label>
                            <label class="flex items-center cursor-pointer">
                                <input type="radio" name="status" value="scheduled" class="mr-2" aria-describedby="schedule-desc">
                                <div>
                                    <span class="font-medium text-blue-600"><%= t('scheduleForLater') || 'กำหนดเวลาเผยแพร่' %></span>
                                    <p id="schedule-desc" class="text-sm text-gray-500"><%= t('scheduleForLaterDesc') || 'เลือกเวลาที่จะเผยแพร่บทความนี้' %></p>
                                </div>
                            </label>
                            <label class="flex items-center cursor-pointer">
                                <input type="radio" name="status" value="draft" checked class="mr-2" aria-describedby="draft-desc">
                                <div>
                                    <span class="font-medium text-gray-600"><%= t('saveAsDraft') || 'บันทึกเป็นร่าง' %></span>
                                    <p id="draft-desc" class="text-sm text-gray-500"><%= t('saveAsDraftDesc') || 'บันทึกไว้แก้ไขภายหลัง' %></p>
                                </div>
                            </label>
                        </div>
                    </fieldset>

                    <!-- Scheduled Publication -->
                    <div id="schedule-options" class="hidden">
                        <label for="publish_date" class="block text-sm font-medium text-gray-700 mb-2"><%= t('publishDateTime') || 'วันและเวลาเผยแพร่' %></label>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <input type="date" id="publish_date" name="publish_date"
                                   class="border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500">
                            <input type="time" id="publish_time" name="publish_time"
                                   class="border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500">
                        </div>
                    </div>

                    <!-- Notification Options -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-3"><%= t('notifications') || 'การแจ้งเตือน' %></label>
                        <div class="space-y-3">
                            <label class="flex items-center">
                                <input type="checkbox" name="notify_followers" checked class="mr-2">
                                <span class="text-sm"><%= t('notifyFollowers') || 'แจ้งเตือนผู้ติดตามของคุณ' %></span>
                            </label>
                            <label class="flex items-center">
                                <input type="checkbox" name="share_social" class="mr-2">
                                <span class="text-sm"><%= t('shareOnSocial') || 'แชร์บนโซเชียลมีเดีย' %></span>
                            </label>
                            <label class="flex items-center">
                                <input type="checkbox" name="feature_article" class="mr-2">
                                <span class="text-sm"><%= t('submitForFeatured') || 'ส่งเพื่อติดบทความแนะนำ' %></span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="flex justify-between mt-6">
                    <button type="button" onclick="prevStep()" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600">
                        <i class="fas fa-arrow-left mr-2"></i><%= t('previous') || 'ก่อนหน้า' %>
                    </button>
                    <div class="flex space-x-3">
                        <button type="button" onclick="saveDraft()" class="bg-yellow-600 text-white px-6 py-2 rounded-lg hover:bg-yellow-700">
                            <i class="fas fa-save mr-2"></i><%= t('saveDraft') || 'บันทึกแบบร่าง' %>
                        </button>
                        <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700">
                            <i class="fas fa-rocket mr-2"></i><%= t('publishArticle') || 'เผยแพร่บทความ' %>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

