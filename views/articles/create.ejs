// =============================================
// Toast Notification System
// =============================================
function showToast(message, type = 'info', duration = 3000) {
    // Remove existing toast
    const existingToast = document.getElementById('toast-notification');
    if (existingToast) existingToast.remove();

    // Create toast
    const toast = document.createElement('div');
    toast.id = 'toast-notification';

    // Icon based on type
    const icons = {
        success: 'fa-check-circle',
        error: 'fa-times-circle',
        warning: 'fa-exclamation-circle',
        info: 'fa-info-circle'
    };

    // Colors based on type
    const colors = {
        success: { bg: '#dcfce7', border: '#86efac', text: '#166534', icon: '#22c55e' },
        error: { bg: '#fef2f2', border: '#fecaca', text: '#991b1b', icon: '#ef4444' },
        warning: { bg: '#fefce8', border: '#fde047', text: '#854d0e', icon: '#eab308' },
        info: { bg: '#e0f7fa', border: '#80deea', text: '#006994', icon: '#0090D3' }
    };

    const color = colors[type] || colors.info;
    const icon = icons[type] || icons.info;

    toast.style.cssText = `
        position: fixed;
        top: 20px;
        right: 20px;
        padding: 14px 20px;
        background: ${color.bg};
        border: 1px solid ${color.border};
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
        z-index: 10000;
        display: flex;
        align-items: center;
        gap: 12px;
        max-width: 400px;
        animation: toastSlideIn 0.3s ease;
    `;

    toast.innerHTML = `
        <i class="fas ${icon}" style="color: ${color.icon}; font-size: 18px;"></i>
        <span style="color: ${color.text}; font-weight: 500;">${message}</span>
    `;

    // Add animation keyframes
    if (!document.getElementById('toast-styles')) {
        const style = document.createElement('style');
        style.id = 'toast-styles';
        style.textContent = `
            @keyframes toastSlideIn {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
            @keyframes toastSlideOut {
                from { transform: translateX(0); opacity: 1; }
                to { transform: translateX(100%); opacity: 0; }
            }
        `;
        document.head.appendChild(style);
    }

    document.body.appendChild(toast);

    // Auto remove
    setTimeout(() => {
        toast.style.animation = 'toastSlideOut 0.3s ease';
        setTimeout(() => toast.remove(), 300);
    }, duration);
}

// Current language for date formatting
const currentLanguage = '<%= currentLanguage || "th" %>';

// Format date based on current language
function formatDate(dateString) {
    const locale = currentLanguage === 'en' ? 'en-US' : 'th-TH';
    const options = {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    };
    return new Date(dateString).toLocaleDateString(locale, options);
}

let currentStep = 1;
let totalSteps = 4;
let tags = [];

// =============================================
// Auto-save System
// =============================================
let autoSaveTimer = null;
let lastSavedData = null;
let articleDraftId = null;
const AUTO_SAVE_INTERVAL = 30000; // 30 seconds
const LOCAL_STORAGE_KEY = 'article_draft_create';

function initializeAutoSave() {
    // Load from localStorage first
    loadDraftFromLocalStorage();

    // Start auto-save timer
    startAutoSaveTimer();

    // Save to localStorage on input changes (debounced)
    const fieldsToWatch = ['title', 'summary', 'content-editor', 'meta_description'];
    fieldsToWatch.forEach(id => {
        const el = document.getElementById(id);
        if (el) {
            el.addEventListener('input', debouncedLocalSave);
        }
    });

    // Warn before leaving page with unsaved changes
    window.addEventListener('beforeunload', (e) => {
        saveDraftToLocalStorage();
        if (hasUnsavedChanges()) {
            e.preventDefault();
            e.returnValue = translations.unsavedChanges || 'คุณมีการเปลี่ยนแปลงที่ยังไม่ได้บันทึก';
            return e.returnValue;
        }
    });
}

function startAutoSaveTimer() {
    if (autoSaveTimer) clearInterval(autoSaveTimer);
    autoSaveTimer = setInterval(autoSaveDraft, AUTO_SAVE_INTERVAL);
}

async function autoSaveDraft() {
    const currentData = getCurrentFormData();

    // Only save if title exists and there are changes
    if (!currentData.title.trim() || !hasDataChanged(currentData)) {
        return;
    }

    try {
        showAutoSaveIndicator('saving');
        saveDraftToLocalStorage();

        // Save to server if we have an article ID
        if (articleDraftId) {
            await fetch(`/articles/api/${articleDraftId}/autosave`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(currentData)
            });
        }

        lastSavedData = { ...currentData };
        showAutoSaveIndicator('saved');

    } catch (error) {
        console.error('Auto-save failed:', error);
        showAutoSaveIndicator('error');
    }
}

function saveDraftToLocalStorage() {
    try {
        const data = getCurrentFormData();
        data.timestamp = new Date().toISOString();
        data.articleDraftId = articleDraftId;
        localStorage.setItem(LOCAL_STORAGE_KEY, JSON.stringify(data));
    } catch (e) {
        console.error('Failed to save to localStorage:', e);
    }
}

const debouncedLocalSave = debounce(saveDraftToLocalStorage, 2000);

function loadDraftFromLocalStorage() {
    try {
        const saved = localStorage.getItem(LOCAL_STORAGE_KEY);
        if (!saved) return;

        const data = JSON.parse(saved);
        const saveTime = new Date(data.timestamp);
        const hoursDiff = (Date.now() - saveTime.getTime()) / (1000 * 60 * 60);

        // Only load if saved within 24 hours
        if (hoursDiff > 24) {
            localStorage.removeItem(LOCAL_STORAGE_KEY);
            return;
        }

        // Check if there's actually data to restore
        if (!data.title && !data.content) {
            localStorage.removeItem(LOCAL_STORAGE_KEY);
            return;
        }

        const restore = confirm(
            `${translations.foundDraft || 'พบร่างบทความที่บันทึกไว้'} (${formatTimeAgo(saveTime)})\n\n${translations.restoreDraft || 'ต้องการกู้คืนหรือไม่?'}`
        );

        if (restore) {
            restoreDraftData(data);
            articleDraftId = data.articleDraftId || null;
            showSuccess(translations.draftRestored || 'กู้คืนร่างบทความสำเร็จ');
        } else {
            localStorage.removeItem(LOCAL_STORAGE_KEY);
        }
    } catch (error) {
        console.error('Failed to load draft:', error);
        localStorage.removeItem(LOCAL_STORAGE_KEY);
    }
}

function restoreDraftData(data) {
    if (data.title) {
        document.getElementById('title').value = data.title;
        updateTitleCount();
    }
    if (data.summary) {
        document.getElementById('summary').value = data.summary;
        updateSummaryCount();
    }
    if (data.content) {
        document.getElementById('content-editor').innerHTML = data.content;
        document.getElementById('content').value = data.content;
    }
    if (data.category) {
        document.getElementById('category').value = data.category;
        const categoryItem = document.querySelector(`[data-value="${data.category}"]`);
        if (categoryItem) {
            document.querySelectorAll('.category-pill').forEach(i => i.classList.remove('selected'));
            categoryItem.classList.add('selected');
            const radio = categoryItem.querySelector('.category-radio');
            if (radio) radio.checked = true;
        }
    }
    if (data.tags) {
        tags = data.tags.split(',').filter(t => t.trim());
        renderTags();
        updateTagsField();
    }
    if (data.difficulty) {
        document.getElementById('difficulty').value = data.difficulty;
    }
    if (data.language) {
        document.getElementById('language').value = data.language;
    }
    if (data.meta_description) {
        document.getElementById('meta_description').value = data.meta_description;
        updateMetaCount();
    }
    if (data.slug) {
        document.getElementById('slug').value = data.slug;
    }

    updateWordCount();
    lastSavedData = { ...data };
}

function getCurrentFormData() {
    return {
        title: document.getElementById('title')?.value || '',
        summary: document.getElementById('summary')?.value || '',
        content: document.getElementById('content-editor')?.innerHTML || '',
        category: document.getElementById('category')?.value || '',
        tags: tags.join(','),
        difficulty: document.getElementById('difficulty')?.value || 'intermediate',
        language: document.getElementById('language')?.value || 'th',
        meta_description: document.getElementById('meta_description')?.value || '',
        slug: document.getElementById('slug')?.value || ''
    };
}

function hasDataChanged(currentData) {
