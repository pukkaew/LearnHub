        figure.removeAttribute('class');
        // Remove cursor: pointer from style
        figure.style.cursor = '';
        // Remove position: relative if not needed for float
        if (figure.style.float === 'none' || !figure.style.float) {
            figure.style.position = '';
        }
        // Remove dataset attributes
        Object.keys(figure.dataset).forEach(key => {
            delete figure.dataset[key];
        });
    });

    return clone.innerHTML;
}

