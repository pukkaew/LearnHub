<!DOCTYPE html>
<html lang="<%= typeof currentLanguage !== 'undefined' ? currentLanguage : 'th' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%
        const siteName = typeof getSetting === 'function' ? getSetting('site_name', 'Rukchai Hongyen LearnHub') : 'Rukchai Hongyen LearnHub';
        const logoUrl = typeof getSetting === 'function' ? getSetting('logo_url', '/images/logo.png') : '/images/logo.png';
        const primaryColor = typeof getSetting === 'function' ? getSetting('primary_color', '#0090D3') : '#0090D3';
        const currentLang = typeof currentLanguage !== 'undefined' ? currentLanguage : 'th';
    %>
    <title><%= currentLang === 'en' ? 'Forgot Password' : 'ลืมรหัสผ่าน' %> - <%= siteName %></title>
    <link href="/css/tailwind.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+Thai:wght@300;400;500;600;700&display=swap');

        :root {
            --primary-color: <%= primaryColor %>;
            --primary-color-dark: color-mix(in srgb, <%= primaryColor %> 80%, #000 20%);
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Noto Sans Thai', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        .page-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: stretch;
        }

        .branding-section {
            display: none;
            flex: 1;
            background: linear-gradient(135deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.1) 100%);
            padding: 3rem;
            color: white;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .branding-logo {
            width: 120px;
            height: 120px;
            background: white;
            border-radius: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2rem;
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }

        .branding-logo img {
            width: 80%;
            height: 80%;
            object-fit: contain;
        }

        .branding-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        }

        .branding-subtitle {
            font-size: 1.25rem;
            opacity: 0.9;
            margin-bottom: 3rem;
            max-width: 400px;
        }

        .branding-features {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            text-align: left;
        }

        .branding-feature {
            display: flex;
            align-items: center;
            gap: 1rem;
            font-size: 1rem;
            opacity: 0.95;
        }

        .branding-feature i {
            width: 40px;
            height: 40px;
            background: rgba(255,255,255,0.2);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
        }

        .form-section {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .container {
            width: 100%;
            max-width: 420px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            position: relative;
            animation: slideUp 0.5s ease-out;
        }

        .language-selector {
            position: absolute;
            top: 1rem;
            right: 1rem;
            z-index: 10;
        }

        .auth-language-button {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px 14px;
            border-radius: 10px;
            background: color-mix(in srgb, var(--primary-color) 10%, transparent);
            border: 1px solid color-mix(in srgb, var(--primary-color) 20%, transparent);
            color: var(--primary-color);
            transition: all 0.25s ease;
            cursor: pointer;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .auth-language-button:hover {
            background: color-mix(in srgb, var(--primary-color) 15%, transparent);
        }

        .auth-language-dropdown {
            position: absolute;
            top: calc(100% + 8px);
            right: 0;
            min-width: 140px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            padding: 6px;
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.25s ease;
        }

        .auth-language-dropdown.open {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .auth-language-option {
            display: block;
            padding: 10px 14px;
            border-radius: 6px;
            color: #374151;
            font-size: 0.8rem;
            font-weight: 500;
            transition: all 0.2s ease;
            cursor: pointer;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
        }

        .auth-language-option:hover {
            background: #f8fafc;
            color: var(--primary-color);
        }

        .auth-language-option.active {
            background: color-mix(in srgb, var(--primary-color) 10%, transparent);
            color: var(--primary-color);
        }

        .header {
            text-align: center;
            margin-bottom: 1.5rem;
            margin-top: 2rem;
        }

        .logo {
            width: 100%;
            max-width: 200px;
            margin: 0 auto 1rem;
        }

        .logo img {
            width: 100%;
            height: auto;
        }

        .title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .subtitle {
            color: #6b7280;
            font-size: 0.95rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .label {
            display: block;
            font-size: 0.875rem;
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
        }

        .input-group {
            position: relative;
        }

        .input {
            width: 100%;
            padding: 0.875rem 1rem 0.875rem 3rem;
            border: 2px solid #e5e7eb;
            border-radius: 0.75rem;
            font-size: 1rem;
            transition: border-color 0.2s;
        }

        .input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px color-mix(in srgb, var(--primary-color) 10%, transparent);
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
        }

        .submit-btn {
            width: 100%;
            background: var(--primary-color);
            color: white;
            border: none;
            border-radius: 0.75rem;
            padding: 1rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .submit-btn:hover {
            background: var(--primary-color-dark);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px color-mix(in srgb, var(--primary-color) 40%, transparent);
        }

        .submit-btn:disabled {
            background: #9ca3af;
            cursor: not-allowed;
            transform: none;
        }

        .links {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.9rem;
        }

        .links a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
        }

        .links a:hover {
            text-decoration: underline;
        }

        .alert {
            border-radius: 0.75rem;
            padding: 1rem;
            margin-bottom: 1rem;
            font-size: 0.875rem;
            display: none;
            align-items: center;
            gap: 0.5rem;
        }

        .alert.show { display: flex; }

        .alert-success {
            background: #dcfce7;
            border: 1px solid #86efac;
            color: #166534;
        }

        .alert-error {
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
        }

        .info-box {
            background: #eff6ff;
            border: 1px solid #bfdbfe;
            border-radius: 0.75rem;
            padding: 1rem;
            margin-top: 1.5rem;
        }

        .info-box h4 {
            font-size: 0.875rem;
            font-weight: 600;
            color: #1e40af;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .info-box ul {
            list-style: disc;
            padding-left: 1.5rem;
            font-size: 0.8rem;
            color: #1e40af;
            line-height: 1.6;
        }

        .loading-spinner {
            width: 1rem;
            height: 1rem;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin { to { transform: rotate(360deg); } }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @media (min-width: 1024px) {
            .branding-section { display: flex; }
            .form-section {
                background: rgba(255,255,255,0.1);
                backdrop-filter: blur(10px);
            }
            .container { max-width: 450px; }
        }

        @media (min-width: 1440px) {
            .branding-section { padding: 4rem; }
            .branding-logo { width: 150px; height: 150px; }
            .branding-title { font-size: 3rem; }
            .container { max-width: 480px; padding: 2.5rem; }
        }

        @media (min-width: 1920px) {
            .branding-section { padding: 5rem; }
            .branding-logo { width: 180px; height: 180px; border-radius: 32px; }
            .branding-title { font-size: 3.5rem; }
            .branding-subtitle { font-size: 1.5rem; }
            .container { max-width: 520px; padding: 3rem; }
            .title { font-size: 2rem; }
        }

        @media (max-width: 640px) {
            .form-section { padding: 1rem 0.75rem; }
            .container { padding: 1.5rem; border-radius: 12px; }
            .title { font-size: 1.5rem; }
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <!-- Branding Section -->
        <div class="branding-section">
            <div class="branding-logo">
                <img src="<%= logoUrl %>" alt="<%= siteName %>">
            </div>
            <h1 class="branding-title"><%= siteName.replace('Rukchai Hongyen ', '') %></h1>
            <p class="branding-subtitle">
                <span data-th="ระบบการเรียนรู้ออนไลน์ พัฒนาทักษะบุคลากร" data-en="Online Learning System for Staff Development">
                    <%= currentLang === 'en' ? 'Online Learning System for Staff Development' : 'ระบบการเรียนรู้ออนไลน์ พัฒนาทักษะบุคลากร' %>
                </span>
            </p>
            <div class="branding-features">
                <div class="branding-feature">
                    <i class="fas fa-shield-alt"></i>
                    <span data-th="ระบบรักษาความปลอดภัยสูง" data-en="High Security System">
                        <%= currentLang === 'en' ? 'High Security System' : 'ระบบรักษาความปลอดภัยสูง' %>
                    </span>
                </div>
                <div class="branding-feature">
                    <i class="fas fa-envelope"></i>
                    <span data-th="ยืนยันตัวตนผ่านอีเมล" data-en="Email Verification">
                        <%= currentLang === 'en' ? 'Email Verification' : 'ยืนยันตัวตนผ่านอีเมล' %>
                    </span>
                </div>
                <div class="branding-feature">
                    <i class="fas fa-clock"></i>
                    <span data-th="รีเซ็ตรหัสผ่านรวดเร็ว" data-en="Quick Password Reset">
                        <%= currentLang === 'en' ? 'Quick Password Reset' : 'รีเซ็ตรหัสผ่านรวดเร็ว' %>
                    </span>
                </div>
            </div>
        </div>

        <!-- Form Section -->
        <div class="form-section">
            <div class="container">
                <!-- Language Selector -->
                <div class="language-selector">
                    <button id="auth-language-switcher" class="auth-language-button">
                        <span id="auth-current-language-text"><%= currentLang === 'en' ? 'EN' : 'TH' %></span>
                        <i class="fas fa-chevron-down" style="font-size: 0.7rem;"></i>
                    </button>
                    <div id="auth-language-menu" class="auth-language-dropdown">
                        <button class="auth-language-option <%= currentLang === 'th' ? 'active' : '' %>" data-lang="th">ไทย</button>
                        <button class="auth-language-option <%= currentLang === 'en' ? 'active' : '' %>" data-lang="en">English</button>
                    </div>
                </div>

                <!-- Header -->
                <div class="header">
                    <div class="logo">
                        <img src="<%= logoUrl %>" alt="<%= siteName %>">
                    </div>
                    <h1 class="title" data-th="ลืมรหัสผ่าน" data-en="Forgot Password">
                        <%= currentLang === 'en' ? 'Forgot Password' : 'ลืมรหัสผ่าน' %>
                    </h1>
                    <p class="subtitle" data-th="กรอกอีเมลเพื่อรับลิงก์รีเซ็ตรหัสผ่าน" data-en="Enter your email to receive reset link">
                        <%= currentLang === 'en' ? 'Enter your email to receive reset link' : 'กรอกอีเมลเพื่อรับลิงก์รีเซ็ตรหัสผ่าน' %>
                    </p>
                </div>

                <!-- Alerts -->
                <div id="success-alert" class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    <span data-th="ส่งลิงก์รีเซ็ตรหัสผ่านไปยังอีเมลของคุณแล้ว" data-en="Reset link sent to your email">
                        <%= currentLang === 'en' ? 'Reset link sent to your email' : 'ส่งลิงก์รีเซ็ตรหัสผ่านไปยังอีเมลของคุณแล้ว' %>
                    </span>
                </div>
                <div id="error-alert" class="alert alert-error">
                    <i class="fas fa-exclamation-circle"></i>
                    <span id="error-text"></span>
                </div>

                <!-- Form -->
                <form id="forgot-form" action="/auth/forgot-password" method="POST">
                    <div class="form-group">
                        <label for="email" class="label" data-th="อีเมล" data-en="Email">
                            <%= currentLang === 'en' ? 'Email' : 'อีเมล' %>
                        </label>
                        <div class="input-group">
                            <i class="fas fa-envelope input-icon"></i>
                            <input type="email" id="email" name="email" class="input" required
                                   data-th-placeholder="กรอกอีเมลของคุณ" data-en-placeholder="Enter your email"
                                   placeholder="<%= currentLang === 'en' ? 'Enter your email' : 'กรอกอีเมลของคุณ' %>">
                        </div>
                    </div>

                    <button type="submit" class="submit-btn" id="submit-btn">
                        <i class="fas fa-paper-plane"></i>
                        <span id="btn-text" data-th="ส่งลิงก์รีเซ็ตรหัสผ่าน" data-en="Send Reset Link">
                            <%= currentLang === 'en' ? 'Send Reset Link' : 'ส่งลิงก์รีเซ็ตรหัสผ่าน' %>
                        </span>
                        <span id="btn-loading" style="display: none;">
                            <div class="loading-spinner"></div>
                            <span data-th="กำลังส่ง..." data-en="Sending...">
                                <%= currentLang === 'en' ? 'Sending...' : 'กำลังส่ง...' %>
                            </span>
                        </span>
                    </button>
                </form>

                <div class="links">
                    <p>
                        <a href="/auth/login">
                            <i class="fas fa-arrow-left"></i>
                            <span data-th="กลับไปหน้าเข้าสู่ระบบ" data-en="Back to Sign In">
                                <%= currentLang === 'en' ? 'Back to Sign In' : 'กลับไปหน้าเข้าสู่ระบบ' %>
                            </span>
                        </a>
                    </p>
                    <p style="margin-top: 0.75rem; color: #6b7280;">
                        <span data-th="ไม่มีบัญชีผู้ใช้?" data-en="Don't have an account?">
                            <%= currentLang === 'en' ? "Don't have an account?" : 'ไม่มีบัญชีผู้ใช้?' %>
                        </span>
                        <a href="/auth/register" data-th="สมัครสมาชิก" data-en="Register">
                            <%= currentLang === 'en' ? 'Register' : 'สมัครสมาชิก' %>
                        </a>
                    </p>
                </div>

                <div class="info-box">
                    <h4>
                        <i class="fas fa-info-circle"></i>
                        <span data-th="ข้อมูลสำคัญ" data-en="Important Information">
                            <%= currentLang === 'en' ? 'Important Information' : 'ข้อมูลสำคัญ' %>
                        </span>
                    </h4>
                    <ul>
                        <li data-th="ลิงก์รีเซ็ตรหัสผ่านจะหมดอายุใน 1 ชั่วโมง" data-en="Reset link expires in 1 hour">
                            <%= currentLang === 'en' ? 'Reset link expires in 1 hour' : 'ลิงก์รีเซ็ตรหัสผ่านจะหมดอายุใน 1 ชั่วโมง' %>
                        </li>
                        <li data-th="หากไม่พบอีเมล ลองตรวจสอบใน Spam" data-en="Check Spam folder if not found">
                            <%= currentLang === 'en' ? 'Check Spam folder if not found' : 'หากไม่พบอีเมล ลองตรวจสอบใน Spam' %>
                        </li>
                        <li data-th="หากยังมีปัญหา ติดต่อ IT Support" data-en="Contact IT Support if issues persist">
                            <%= currentLang === 'en' ? 'Contact IT Support if issues persist' : 'หากยังมีปัญหา ติดต่อ IT Support' %>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentLang = '<%= currentLang %>';

        const LanguageManager = {
            init() {
                const switcher = document.getElementById('auth-language-switcher');
                const menu = document.getElementById('auth-language-menu');
                const options = document.querySelectorAll('.auth-language-option');

                if (switcher && menu) {
                    switcher.addEventListener('click', (e) => {
                        e.stopPropagation();
                        menu.classList.toggle('open');
                    });
                    document.addEventListener('click', () => menu.classList.remove('open'));
                }

                options.forEach(opt => {
                    opt.addEventListener('click', () => this.changeLanguage(opt.dataset.lang));
                });
            },

            async changeLanguage(lang) {
                if (lang === currentLang) return;
                currentLang = lang;
                localStorage.setItem('ruxchai_language', lang);

                try {
                    await fetch('/language/switch', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ language: lang })
                    });
                } catch (e) {}

                this.updateUI();
                document.getElementById('auth-language-menu').classList.remove('open');
            },

            updateUI() {
                document.getElementById('auth-current-language-text').textContent = currentLang === 'en' ? 'EN' : 'TH';
                document.querySelectorAll('.auth-language-option').forEach(opt => {
                    opt.classList.toggle('active', opt.dataset.lang === currentLang);
                });
                document.querySelectorAll('[data-th][data-en]').forEach(el => {
                    el.textContent = currentLang === 'th' ? el.dataset.th : el.dataset.en;
                });
                document.querySelectorAll('[data-th-placeholder][data-en-placeholder]').forEach(el => {
                    el.placeholder = currentLang === 'th' ? el.dataset.thPlaceholder : el.dataset.enPlaceholder;
                });
                document.documentElement.lang = currentLang;
            }
        };

        document.addEventListener('DOMContentLoaded', function() {
            LanguageManager.init();

            const form = document.getElementById('forgot-form');
            const submitBtn = document.getElementById('submit-btn');
            const btnText = document.getElementById('btn-text');
            const btnLoading = document.getElementById('btn-loading');
            const successAlert = document.getElementById('success-alert');
            const errorAlert = document.getElementById('error-alert');
            const errorText = document.getElementById('error-text');

            form.addEventListener('submit', async function(e) {
                e.preventDefault();

                submitBtn.disabled = true;
                btnText.style.display = 'none';
                btnLoading.style.display = 'flex';
                successAlert.classList.remove('show');
                errorAlert.classList.remove('show');

                try {
                    const formData = new FormData(form);
                    const response = await fetch('/auth/forgot-password', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email: formData.get('email') })
                    });

                    const data = await response.json();

                    if (data.success) {
                        successAlert.classList.add('show');
                        form.reset();
                    } else {
                        throw new Error(data.message || (currentLang === 'en' ? 'Error sending email' : 'เกิดข้อผิดพลาดในการส่งอีเมล'));
                    }
                } catch (error) {
                    errorText.textContent = error.message;
                    errorAlert.classList.add('show');
                } finally {
                    submitBtn.disabled = false;
                    btnText.style.display = 'inline';
                    btnLoading.style.display = 'none';
                }
            });

            form.addEventListener('input', () => {
                successAlert.classList.remove('show');
                errorAlert.classList.remove('show');
            });
        });
    </script>
</body>
</html>
