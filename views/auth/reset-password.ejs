

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <div class="mx-auto h-12 w-auto flex justify-center">
                <img class="h-12 w-auto" src="/images/ruxchai-logo.png" alt="Ruxchai">
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                รีเซ็ตรหัสผ่าน
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                กรอกรหัสผ่านใหม่ของคุณ
            </p>
        </div>

        <form id="reset-password-form" class="mt-8 space-y-6" action="/auth/reset-password" method="POST">
            <input type="hidden" name="token" value="<%= token %>">

            <div class="space-y-4">
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700">รหัสผ่านใหม่</label>
                    <input id="password" name="password" type="password" required minlength="8"
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-ruxchai-primary focus:border-ruxchai-primary sm:text-sm"
                           placeholder="กรอกรหัสผ่านใหม่">
                    <p class="mt-1 text-xs text-gray-500">รหัสผ่านต้องมีอย่างน้อย 8 ตัวอักษร</p>
                </div>

                <div>
                    <label for="confirm_password" class="block text-sm font-medium text-gray-700">ยืนยันรหัสผ่านใหม่</label>
                    <input id="confirm_password" name="confirm_password" type="password" required minlength="8"
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-ruxchai-primary focus:border-ruxchai-primary sm:text-sm"
                           placeholder="กรอกรหัสผ่านใหม่อีกครั้ง">
                </div>

                <!-- Password Requirements -->
                <div class="bg-gray-50 p-4 rounded-md">
                    <h4 class="text-sm font-medium text-gray-700 mb-2">ข้อกำหนดรหัสผ่าน:</h4>
                    <ul class="text-xs text-gray-600 space-y-1">
                        <li id="length-check" class="flex items-center">
                            <i class="fas fa-times text-red-500 mr-2"></i>
                            <span>อย่างน้อย 8 ตัวอักษร</span>
                        </li>
                        <li id="uppercase-check" class="flex items-center">
                            <i class="fas fa-times text-red-500 mr-2"></i>
                            <span>มีตัวอักษรพิมพ์ใหญ่อย่างน้อย 1 ตัว</span>
                        </li>
                        <li id="lowercase-check" class="flex items-center">
                            <i class="fas fa-times text-red-500 mr-2"></i>
                            <span>มีตัวอักษรพิมพ์เล็กอย่างน้อย 1 ตัว</span>
                        </li>
                        <li id="number-check" class="flex items-center">
                            <i class="fas fa-times text-red-500 mr-2"></i>
                            <span>มีตัวเลขอย่างน้อย 1 ตัว</span>
                        </li>
                        <li id="match-check" class="flex items-center">
                            <i class="fas fa-times text-red-500 mr-2"></i>
                            <span>รหัสผ่านตรงกัน</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div>
                <button type="submit" id="reset-btn"
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white ruxchai-gradient hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ruxchai-primary disabled:opacity-50 disabled:cursor-not-allowed">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <i class="fas fa-key text-blue-300 group-hover:text-blue-200"></i>
                    </span>
                    <span id="reset-text">รีเซ็ตรหัสผ่าน</span>
                    <span id="reset-loading" class="hidden">
                        <i class="fas fa-spinner fa-spin mr-2"></i>กำลังรีเซ็ต...
                    </span>
                </button>
            </div>

            <div class="text-center">
                <p class="text-sm text-gray-600">
                    <a href="/auth/login" class="font-medium text-ruxchai-primary hover:text-ruxchai-blue-700">
                        <i class="fas fa-arrow-left mr-1"></i>กลับไปหน้าเข้าสู่ระบบ
                    </a>
                </p>
            </div>
        </form>

        <!-- Error Display -->
        <div id="error-message" class="hidden mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            <div class="flex">
                <div class="py-1">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                </div>
                <div>
                    <p id="error-text" class="text-sm"></p>
                </div>
            </div>
        </div>

        <!-- Token Invalid Message -->
        <% if (locals.tokenInvalid) { %>
        <div class="mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            <div class="flex">
                <div class="py-1">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                </div>
                <div>
                    <p class="text-sm">ลิงก์รีเซ็ตรหัสผ่านไม่ถูกต้องหรือหมดอายุแล้ว</p>
                    <p class="text-sm mt-1">
                        <a href="/auth/forgot-password" class="font-medium underline">ขอลิงก์ใหม่</a>
                    </p>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('reset-password-form');
    const resetBtn = document.getElementById('reset-btn');
    const resetText = document.getElementById('reset-text');
    const resetLoading = document.getElementById('reset-loading');
    const errorDiv = document.getElementById('error-message');
    const errorText = document.getElementById('error-text');
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirm_password');

    // Password validation elements
    const lengthCheck = document.getElementById('length-check');
    const uppercaseCheck = document.getElementById('uppercase-check');
    const lowercaseCheck = document.getElementById('lowercase-check');
    const numberCheck = document.getElementById('number-check');
    const matchCheck = document.getElementById('match-check');

    // Password validation
    password.addEventListener('input', validatePassword);
    confirmPassword.addEventListener('input', validatePassword);

    function validatePassword() {
        const pwd = password.value;
        const confirmPwd = confirmPassword.value;

        // Length check
        updateCheck(lengthCheck, pwd.length >= 8);

        // Uppercase check
        updateCheck(uppercaseCheck, /[A-Z]/.test(pwd));

        // Lowercase check
        updateCheck(lowercaseCheck, /[a-z]/.test(pwd));

        // Number check
        updateCheck(numberCheck, /\d/.test(pwd));

        // Match check
        updateCheck(matchCheck, pwd && confirmPwd && pwd === confirmPwd);

        // Enable/disable submit button
        const allValid = lengthCheck.querySelector('i').classList.contains('fa-check') &&
                         uppercaseCheck.querySelector('i').classList.contains('fa-check') &&
                         lowercaseCheck.querySelector('i').classList.contains('fa-check') &&
                         numberCheck.querySelector('i').classList.contains('fa-check') &&
                         matchCheck.querySelector('i').classList.contains('fa-check');

        resetBtn.disabled = !allValid;
    }

    function updateCheck(element, isValid) {
        const icon = element.querySelector('i');
        if (isValid) {
            icon.className = 'fas fa-check text-green-500 mr-2';
        } else {
            icon.className = 'fas fa-times text-red-500 mr-2';
        }
    }

    form.addEventListener('submit', async function(e) {
        e.preventDefault();

        // Validate passwords match
        if (password.value !== confirmPassword.value) {
            showError('รหัสผ่านไม่ตรงกัน');
            return;
        }

        // Show loading state
        resetBtn.disabled = true;
        resetText.classList.add('hidden');
        resetLoading.classList.remove('hidden');
        errorDiv.classList.add('hidden');

        try {
            const formData = new FormData(form);
            const response = await fetch('/auth/reset-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    token: formData.get('token'),
                    password: formData.get('password'),
                    confirm_password: formData.get('confirm_password')
                })
            });

            const data = await response.json();

            if (data.success) {
                window.location.href = '/auth/login?message=รีเซ็ตรหัสผ่านสำเร็จ กรุณาเข้าสู่ระบบด้วยรหัสผ่านใหม่';
            } else {
                throw new Error(data.message || 'เกิดข้อผิดพลาดในการรีเซ็ตรหัสผ่าน');
            }
        } catch (error) {
            showError(error.message);
        } finally {
            // Reset loading state
            resetBtn.disabled = false;
            resetText.classList.remove('hidden');
            resetLoading.classList.add('hidden');
        }
    });

    function showError(message) {
        errorText.textContent = message;
        errorDiv.classList.remove('hidden');
    }

    // Hide error on input change
    form.addEventListener('input', function() {
        errorDiv.classList.add('hidden');
    });
});
</script>