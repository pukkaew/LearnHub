function startYoutubeProgressTracking() {
    if (ytProgressInterval) return;

    let lastCheckedTime = 0;
    let isResettingPosition = false;
    let lastReportProgress = lastYtProgress;

    ytProgressInterval = setInterval(async () => {
        if (!ytPlayer || !ytPlayer.getCurrentTime || !ytPlayer.getDuration) return;

        try {
            const currentTime = ytPlayer.getCurrentTime();
            const duration = ytPlayer.getDuration();

            if (duration > 0) {
                // Force playback speed to 1x (check every interval)
                if (ytPlayer.getPlaybackRate && ytPlayer.getPlaybackRate() !== 1.0) {
                    ytPlayer.setPlaybackRate(1.0);
                    showToast('à¹„à¸¡à¹ˆà¸ªà¸²à¸¡à¸²à¸£à¸–à¹€à¸›à¸¥à¸µà¹ˆà¸¢à¸™à¸„à¸§à¸²à¸¡à¹€à¸£à¹‡à¸§à¸à¸²à¸£à¹€à¸¥à¹ˆà¸™à¹„à¸”à¹‰', 'warning');
                }

                // Anti-skip: Detect if user jumped forward beyond watched content
                const allowedTime = Math.max(maxYtWatchedTime, 0);
                const jumpThreshold = 2; // 2 seconds buffer (stricter)

                // Check if user skipped forward (current time jumped too much)
                if (!isResettingPosition && currentTime > allowedTime + jumpThreshold) {
                    console.log(`Skip detected! Current: ${currentTime}s, Allowed: ${allowedTime}s`);
                    isResettingPosition = true;

                    // Seek back to allowed position
                    ytPlayer.seekTo(allowedTime, true);
                    ytPlayer.pauseVideo(); // Pause to make it more obvious
                    showToast('à¹„à¸¡à¹ˆà¸ªà¸²à¸¡à¸²à¸£à¸–à¸‚à¹‰à¸²à¸¡à¹„à¸›à¸‚à¹‰à¸²à¸‡à¸«à¸™à¹‰à¸²à¹„à¸”à¹‰ à¸à¸£à¸¸à¸“à¸²à¸”à¸¹à¸§à¸´à¸”à¸µà¹‚à¸­à¸•à¸²à¸¡à¸¥à¸³à¸”à¸±à¸š', 'error');

                    setTimeout(() => {
                        isResettingPosition = false;
                        ytPlayer.playVideo(); // Resume playing
                    }, 300);
                    return;
                }

                // Update max watched time (only if playing normally, not after a reset)
                if (!isResettingPosition && currentTime > maxYtWatchedTime) {
                    maxYtWatchedTime = currentTime;
                }

                lastCheckedTime = currentTime;
                const progress = Math.round((currentTime / duration) * 100);

                // Update progress bar UI
                updateVideoProgressUI(progress);

                // Report every 10% progress
                if (progress >= lastReportProgress + 10) {
                    lastReportProgress = progress;
                    lastYtProgress = progress;
                    await trackVideoProgress(progress, currentTime);
                    await loadLessonProgress();
                }
            }
        } catch (error) {
            console.log('YouTube progress tracking error:', error);
        }
    }, 250); // Check every 250ms for faster skip detection
}

// Update video progress bar UI (never show less than highest progress)
function updateVideoProgressUI(progress) {
    const progressBar = document.getElementById('video-progress-bar');
    const progressText = document.getElementById('video-progress-text');

    // Update highest progress in session (never decrease)
    if (progress > highestProgressInSession) {
        highestProgressInSession = progress;
    }

    // Use the highest value between current, saved, and session highest
    const displayProgress = Math.max(progress, savedVideoProgress, highestProgressInSession);

    if (progressBar) {
        progressBar.style.width = displayProgress + '%';

        // Change color based on progress
        if (displayProgress >= 80) {
            progressBar.classList.remove('bg-blue-500', 'bg-yellow-500');
            progressBar.classList.add('bg-green-500');
        } else if (displayProgress >= 50) {
            progressBar.classList.remove('bg-blue-500', 'bg-green-500');
            progressBar.classList.add('bg-yellow-500');
        } else {
            progressBar.classList.remove('bg-green-500', 'bg-yellow-500');
            progressBar.classList.add('bg-blue-500');
        }
    }

    if (progressText) {
        progressText.textContent = displayProgress + '%';
    }
}

