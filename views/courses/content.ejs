<script>
// i18n translations
const i18n = {
    videoContent: '<%= t("videoContent") %>',
    documentContent: '<%= t("documentContent") %>',
    articleContent: '<%= t("articleContent") %>',
    quizContent: '<%= t("quizContent") %>',
    loadingContent: '<%= t("loadingContent") %>',
    errorLoadingContent: '<%= t("errorLoadingContent") %>',
    markedComplete: '<%= t("markedComplete") %>',
    notesSaved: '<%= t("notesSaved") %>',
    commentPosted: '<%= t("commentPosted") %>',
    noComments: '<%= t("noComments") %>',
    startQuiz: '<%= t("startQuiz") %>',
    viewDocument: '<%= t("viewDocument") %>',
    downloadFile: '<%= t("downloadFile") %>'
};

// State
let courseId = '<%= courseId %>';
let materials = [];
let allMaterials = []; // Keep all materials including documents for Resources tab
let currentIndex = 0;
let currentMaterial = null;
let playbackSpeed = 1;
let autoplayEnabled = true;
let timeTrackerInterval = null;
let sessionStartTime = Date.now();

// Initialize
document.addEventListener('DOMContentLoaded', async function() {
    await loadMaterials();
    setupEventListeners();
    startTimeTracker();

    // Check URL for specific content
    const params = new URLSearchParams(window.location.search);
    const contentId = params.get('content');
    if (contentId) {
        const index = materials.findIndex(m => m.material_id == contentId);
        if (index !== -1) currentIndex = index;
    }

    if (materials.length > 0) {
        loadContent(currentIndex);
    }
});

// Load Materials
async function loadMaterials() {
    try {
        const response = await fetch(`/courses/api/${courseId}/materials`);
        const result = await response.json();

        if (result.success && result.data) {
            // Keep all materials for Resources tab
            allMaterials = result.data;

            // Filter out document types - documents are for Resources tab only, not course content navigation
            materials = result.data.filter(m => {
                const type = (m.material_type || m.file_type || '').toLowerCase();
                // Only show lessons/videos/text content, not documents
                // Exclude both 'document' (course docs) and 'lesson_document' (lesson attachments)
                return type !== 'document' && type !== 'lesson_document';
            });
            buildNavigation();
            updateProgress();
        }
    } catch (error) {
        console.error('Error loading materials:', error);
    }
}

// Build Navigation
function buildNavigation() {
    const nav = document.getElementById('course-nav');

    if (materials.length === 0) {
        nav.innerHTML = `
            <div class="p-6 text-center text-gray-500">
                <i class="fas fa-inbox text-3xl mb-2"></i>
                <p><%= t('noContentAvailable') %></p>
            </div>
        `;
        return;
    }

    // Group by module/section if available
    let html = '';
    materials.forEach((item, index) => {
        const isActive = index === currentIndex;
        const isCompleted = item.is_completed;

        html += `
            <div class="content-nav-item ${isActive ? 'active' : ''} ${isCompleted ? 'completed' : ''}"
                 data-index="${index}" onclick="loadContent(${index})">
                <div class="nav-icon w-8 h-8 rounded-full flex items-center justify-center mr-3 ${
                    isCompleted ? 'bg-green-100 text-green-600' :
                    isActive ? 'bg-blue-100 text-blue-600' : 'bg-gray-100 text-gray-400'
                }">
                    ${isCompleted ? '<i class="fas fa-check text-sm"></i>' :
                      `<span class="text-xs font-medium">${index + 1}</span>`}
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium truncate ${isActive ? 'text-blue-600' : 'text-gray-900'}">${item.title}</p>
                    <p class="text-xs text-gray-500">${getContentTypeLabel(item.material_type)} ${item.duration ? 'â€¢ ' + item.duration : ''}</p>
                </div>
                <i class="fas ${getContentIcon(item.material_type)} text-gray-400 text-sm"></i>
            </div>
        `;
    });

    nav.innerHTML = html;
    document.getElementById('total-count').textContent = materials.length;
}

function getContentIcon(type) {
    const icons = {
        'video': 'fa-play-circle',
        'document': 'fa-file-pdf',
        'text': 'fa-file-alt',
        'quiz': 'fa-question-circle',
        'audio': 'fa-headphones',
        'image': 'fa-image',
        'link': 'fa-external-link-alt'
    };
    return icons[type] || 'fa-file';
}

// Get YouTube embed URL from various YouTube URL formats
function getYoutubeEmbedUrl(url) {
    if (!url) return '';

    let videoId = '';

    // Handle various YouTube URL formats
    if (url.includes('youtube.com/watch')) {
        const urlParams = new URLSearchParams(url.split('?')[1]);
        videoId = urlParams.get('v');
    } else if (url.includes('youtu.be/')) {
        videoId = url.split('youtu.be/')[1].split('?')[0].split('/')[0];
    } else if (url.includes('youtube.com/embed/')) {
        videoId = url.split('embed/')[1].split('?')[0].split('/')[0];
    } else if (url.includes('youtube.com/v/')) {
        videoId = url.split('/v/')[1].split('?')[0].split('/')[0];
    }

    return videoId ? `https://www.youtube.com/embed/${videoId}` : '';
}

// Get Vimeo embed URL from Vimeo URL
function getVimeoEmbedUrl(url) {
    if (!url) return '';

    let videoId = '';

    // Handle various Vimeo URL formats
    if (url.includes('vimeo.com/')) {
        const parts = url.split('vimeo.com/')[1].split('/')[0].split('?')[0];
