// Video Player Setup with Progress Tracking and Anti-Skip Protection
let videoProgressInterval = null;

function setupVideoPlayer() {
    const video = document.getElementById('video-player');
    if (!video) return;

    console.log('ðŸŽ¬ Setting up video player with anti-skip protection');

    // Clear any existing interval
    if (videoProgressInterval) {
        clearInterval(videoProgressInterval);
        videoProgressInterval = null;
    }

    // Force playback speed to 1x
    video.playbackRate = 1.0;
    let lastVideoProgress = savedVideoProgress;
    let maxWatchedTime = 0;
    let isSeeking = false;
    let lastValidTime = 0;
    const jumpThreshold = 2;

    // Function to block skip
    function blockSkip(currentTime, allowedTime, source) {
        if (isSeeking) return;
        isSeeking = true;
        console.log(`â›” Skip blocked (${source})! current=${currentTime.toFixed(1)}s, allowed=${allowedTime.toFixed(1)}s`);
        video.pause();
        video.currentTime = allowedTime;
        showToast('à¹„à¸¡à¹ˆà¸ªà¸²à¸¡à¸²à¸£à¸–à¸‚à¹‰à¸²à¸¡à¹„à¸›à¸‚à¹‰à¸²à¸‡à¸«à¸™à¹‰à¸²à¹„à¸”à¹‰ à¸à¸£à¸¸à¸“à¸²à¸”à¸¹à¸§à¸´à¸”à¸µà¹‚à¸­à¸•à¸²à¸¡à¸¥à¸³à¸”à¸±à¸š', 'error');
        setTimeout(() => {
            isSeeking = false;
            video.play().catch(() => {});
        }, 500);
    }

    // Initialize maxWatchedTime from saved progress
    video.addEventListener('loadedmetadata', () => {
        if (savedVideoProgress > 0 && video.duration) {
            maxWatchedTime = (savedVideoProgress / 100) * video.duration;
            lastValidTime = maxWatchedTime;
            console.log(`âœ… Max watched: ${maxWatchedTime.toFixed(1)}s (${savedVideoProgress}%)`);
        }
    });

    // Prevent speed change
    video.addEventListener('ratechange', () => {
        if (video.playbackRate !== 1.0) {
            video.playbackRate = 1.0;
            showToast('à¹„à¸¡à¹ˆà¸ªà¸²à¸¡à¸²à¸£à¸–à¹€à¸›à¸¥à¸µà¹ˆà¸¢à¸™à¸„à¸§à¸²à¸¡à¹€à¸£à¹‡à¸§à¸à¸²à¸£à¹€à¸¥à¹ˆà¸™à¹„à¸”à¹‰', 'warning');
        }
    });

    // Anti-skip: seeking event
    video.addEventListener('seeking', () => {
        const currentTime = video.currentTime;
        const allowedTime = Math.max(maxWatchedTime, lastValidTime, 0);
        console.log(`ðŸ” Seeking: ${currentTime.toFixed(1)}s â†’ allowed: ${allowedTime.toFixed(1)}s`);

        if (currentTime > allowedTime + jumpThreshold) {
            blockSkip(currentTime, allowedTime, 'seeking');
        }
    });

    // Anti-skip: seeked event
    video.addEventListener('seeked', () => {
        const currentTime = video.currentTime;
        const allowedTime = Math.max(maxWatchedTime, lastValidTime, 0);

        if (currentTime > allowedTime + jumpThreshold) {
            blockSkip(currentTime, allowedTime, 'seeked');
        }
    });

    // Start continuous monitoring immediately (check even when paused)
    videoProgressInterval = setInterval(() => {
        if (!video || isSeeking) return;

        const currentTime = video.currentTime;
        const allowedTime = Math.max(maxWatchedTime, lastValidTime, 0);

        // Detect skip: current time jumped ahead of allowed (even when paused)
        if (currentTime > allowedTime + jumpThreshold) {
            blockSkip(currentTime, allowedTime, 'interval');
            return;
        }

        // Update progress normally only when playing AND only small increments
        if (!video.paused) {
            // Only allow 1 second increment max per check
            if (currentTime > maxWatchedTime && currentTime <= maxWatchedTime + 1) {
                maxWatchedTime = currentTime;
                lastValidTime = currentTime;
            } else if (currentTime <= allowedTime) {
                lastValidTime = currentTime;
            }
        }

    }, 200); // Check every 200ms

    video.addEventListener('ended', async () => {
        maxWatchedTime = video.duration;
        lastValidTime = video.duration;
        updateVideoProgressUI(100);
        await trackVideoProgress(100, video.duration);
        await loadLessonProgress();

        if (lessonProgress?.canComplete) {
            markAsComplete();
        }

        if (autoplayEnabled && currentIndex < materials.length - 1) {
            setTimeout(() => navigateNext(), 1500);
        }
    });

    video.addEventListener('timeupdate', async () => {
        if (isSeeking) return;

        const currentTime = video.currentTime;
        const duration = video.duration;

        // Skip if duration is not valid
        if (!duration || isNaN(duration) || duration <= 0) return;

        const allowedTime = Math.max(maxWatchedTime, lastValidTime, 0);

        // IMPORTANT: Only update maxWatchedTime if current time is valid (not a skip)
        // Allow small increments only (max 1 second jump)
        if (currentTime > maxWatchedTime && currentTime <= maxWatchedTime + 1) {
            maxWatchedTime = currentTime;
            lastValidTime = currentTime;
        } else if (currentTime <= allowedTime) {
            // Seeking backwards is OK, just update lastValidTime
            lastValidTime = currentTime;
        }
        // If currentTime > maxWatchedTime + 1, it's a skip - don't update!

        const progress = Math.min(100, Math.max(0, Math.round((currentTime / duration) * 100)));
        updateVideoProgressUI(progress);

        if (progress >= lastVideoProgress + 10) {
            lastVideoProgress = progress;
            await trackVideoProgress(progress, currentTime);
            await loadLessonProgress();
        }
    });

    console.log('âœ… Anti-skip protection active (interval running)');
}

