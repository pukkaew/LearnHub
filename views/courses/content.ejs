<style>
/* Course Content Page Styles */
.learning-container {
    display: grid;
    grid-template-columns: 320px 1fr;
    min-height: calc(100vh - 64px);
    background: #f8fafc;
}

@media (max-width: 1024px) {
    .learning-container {
        grid-template-columns: 1fr;
    }
    .course-sidebar {
        position: fixed;
        left: -320px;
        top: 64px;
        height: calc(100vh - 64px);
        z-index: 50;
        transition: left 0.3s ease;
    }
    .course-sidebar.open {
        left: 0;
    }
    .sidebar-overlay {
        display: none;
        position: fixed;
        inset: 0;
        top: 64px;
        background: rgba(0,0,0,0.5);
        z-index: 40;
    }
    .sidebar-overlay.open {
        display: block;
    }
}

.course-sidebar {
    width: 320px;
    background: white;
    border-right: 1px solid #e5e7eb;
    overflow-y: auto;
}

.sidebar-header {
    padding: 16px;
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
    position: sticky;
    top: 0;
    z-index: 10;
}

.content-nav-item {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    cursor: pointer;
    border-left: 3px solid transparent;
    transition: all 0.2s ease;
}

.content-nav-item:hover {
    background: #f3f4f6;
}

.content-nav-item.active {
    background: #eff6ff;
    border-left-color: #3b82f6;
}

.content-nav-item.completed .nav-icon {
    color: #10b981;
}

.content-main {
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.content-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 24px;
    background: white;
    border-bottom: 1px solid #e5e7eb;
    flex-shrink: 0;
}

.content-viewer-wrapper {
    flex: 1;
    overflow-y: auto;
    padding: 24px;
}

/* Video Player Enhancements */
.video-container {
    background: #000;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
}

.video-container video {
    width: 100%;
    display: block;
}

.video-controls-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0,0,0,0.8));
    padding: 20px;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.video-container:hover .video-controls-overlay {
    opacity: 1;
}

/* Progress Ring */
.progress-ring {
    transform: rotate(-90deg);
}

.progress-ring circle {
    transition: stroke-dashoffset 0.5s ease;
}

/* Notes Panel */
.notes-panel {
    background: #fffbeb;
    border: 1px solid #fcd34d;
    border-radius: 12px;
    padding: 16px;
}

.notes-textarea {
    background: transparent;
    border: none;
    resize: none;
    width: 100%;
    min-height: 100px;
}

.notes-textarea:focus {
    outline: none;
}

/* Tabs */
.content-tabs {
    display: flex;
    border-bottom: 1px solid #e5e7eb;
    background: white;
    border-radius: 12px 12px 0 0;
}

.content-tab {
    padding: 12px 24px;
    cursor: pointer;
    border-bottom: 2px solid transparent;
    font-weight: 500;
    color: #6b7280;
    transition: all 0.2s ease;
}

.content-tab:hover {
    color: #3b82f6;
}

.content-tab.active {
    color: #3b82f6;
    border-bottom-color: #3b82f6;
}

/* Module Section */
.module-section {
    margin-bottom: 8px;
}

.module-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    background: #f3f4f6;
    cursor: pointer;
    font-weight: 600;
}

.module-content {
    display: none;
}

.module-content.open {
    display: block;
}

/* Keyboard Shortcuts Badge */
.kbd {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 24px;
    height: 24px;
    padding: 0 6px;
    background: #f3f4f6;
    border: 1px solid #d1d5db;
    border-radius: 4px;
    font-size: 12px;
    font-family: monospace;
}

/* Floating Action Button */
.fab-menu {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 30;
}

/* Speed Selector */
.speed-selector {
    position: absolute;
    bottom: 100%;
    right: 0;
    background: white;
    border-radius: 8px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.2);
    padding: 8px 0;
    display: none;
}

.speed-selector.open {
    display: block;
}

.speed-option {
    padding: 8px 24px;
    cursor: pointer;
    white-space: nowrap;
}

.speed-option:hover {
    background: #f3f4f6;
}

.speed-option.active {
    color: #3b82f6;
    font-weight: 600;
}
</style>

