function startVimeoProgressTracking() {
    if (ytProgressInterval) return;

    ytProgressInterval = setInterval(async () => {
        if (!vimeoPlayer) return;

        try {
            const [currentTime, duration] = await Promise.all([
                vimeoPlayer.getCurrentTime(),
                vimeoPlayer.getDuration()
            ]);

            if (duration > 0) {
                // Update max watched time for anti-skip
                if (currentTime > maxVimeoWatchedTime) {
                    maxVimeoWatchedTime = currentTime;
