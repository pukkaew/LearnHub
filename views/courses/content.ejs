    return videoId ? `https://player.vimeo.com/video/${videoId}?api=1` : url;
}

// Get video MIME type from URL
function getVideoMimeType(url) {
    if (!url) return 'video/mp4';

    const ext = url.split('.').pop().toLowerCase().split('?')[0];
    const mimeTypes = {
        'mp4': 'video/mp4',
        'webm': 'video/webm',
