<script>
// i18n translations
const i18n = {
    videoContent: '<%= t("videoContent") %>',
    documentContent: '<%= t("documentContent") %>',
    articleContent: '<%= t("articleContent") %>',
    quizContent: '<%= t("quizContent") %>',
    loadingContent: '<%= t("loadingContent") %>',
    errorLoadingContent: '<%= t("errorLoadingContent") %>',
    markedComplete: '<%= t("markedComplete") %>',
    notesSaved: '<%= t("notesSaved") %>',
    commentPosted: '<%= t("commentPosted") %>',
    noComments: '<%= t("noComments") %>',
    startQuiz: '<%= t("startQuiz") %>',
    viewDocument: '<%= t("viewDocument") %>',
    downloadFile: '<%= t("downloadFile") %>'
};

// State
let courseId = '<%= courseId %>';
let materials = [];
let currentIndex = 0;
let currentMaterial = null;
let playbackSpeed = 1;
let autoplayEnabled = true;
let timeTrackerInterval = null;
let sessionStartTime = Date.now();

// Initialize
document.addEventListener('DOMContentLoaded', async function() {
    await loadMaterials();
    setupEventListeners();
    startTimeTracker();

    // Check URL for specific content
    const params = new URLSearchParams(window.location.search);
    const contentId = params.get('content');
    if (contentId) {
        const index = materials.findIndex(m => m.material_id == contentId);
        if (index !== -1) currentIndex = index;
    }

    if (materials.length > 0) {
        loadContent(currentIndex);
    }
});

// Load Materials
async function loadMaterials() {
    try {
        const response = await fetch(`/courses/api/${courseId}/materials`);
        const result = await response.json();

        if (result.success && result.data) {
            materials = result.data;
            buildNavigation();
            updateProgress();
        }
    } catch (error) {
        console.error('Error loading materials:', error);
    }
}

// Build Navigation
function buildNavigation() {
    const nav = document.getElementById('course-nav');

    if (materials.length === 0) {
        nav.innerHTML = `
            <div class="p-6 text-center text-gray-500">
                <i class="fas fa-inbox text-3xl mb-2"></i>
                <p><%= t('noContentAvailable') %></p>
            </div>
        `;
        return;
    }

    // Group by module/section if available
    let html = '';
    materials.forEach((item, index) => {
        const isActive = index === currentIndex;
        const isCompleted = item.is_completed;

        html += `
            <div class="content-nav-item ${isActive ? 'active' : ''} ${isCompleted ? 'completed' : ''}"
                 data-index="${index}" onclick="loadContent(${index})">
                <div class="nav-icon w-8 h-8 rounded-full flex items-center justify-center mr-3 ${
                    isCompleted ? 'bg-green-100 text-green-600' :
                    isActive ? 'bg-blue-100 text-blue-600' : 'bg-gray-100 text-gray-400'
                }">
                    ${isCompleted ? '<i class="fas fa-check text-sm"></i>' :
                      `<span class="text-xs font-medium">${index + 1}</span>`}
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium truncate ${isActive ? 'text-blue-600' : 'text-gray-900'}">${item.title}</p>
                    <p class="text-xs text-gray-500">${getContentTypeLabel(item.material_type)} ${item.duration ? 'â€¢ ' + item.duration : ''}</p>
                </div>
                <i class="fas ${getContentIcon(item.material_type)} text-gray-400 text-sm"></i>
            </div>
        `;
    });

    nav.innerHTML = html;
    document.getElementById('total-count').textContent = materials.length;
}

function getContentIcon(type) {
    const icons = {
        'video': 'fa-play-circle',
        'document': 'fa-file-pdf',
        'text': 'fa-file-alt',
        'quiz': 'fa-question-circle',
        'audio': 'fa-headphones',
        'image': 'fa-image',
        'link': 'fa-external-link-alt'
    };
    return icons[type] || 'fa-file';
}

function getContentTypeLabel(type) {
    const labels = {
        'video': '<%= t("video") %>',
        'document': '<%= t("document") %>',
        'text': '<%= t("article") %>',
        'quiz': '<%= t("quiz") %>',
        'audio': '<%= t("audio") %>',
        'image': '<%= t("image") %>'
    };
    return labels[type] || type;
}

// Load Content
function loadContent(index) {
    if (index < 0 || index >= materials.length) return;

    currentIndex = index;
    currentMaterial = materials[index];

    // Update navigation
    document.querySelectorAll('.content-nav-item').forEach((item, i) => {
        item.classList.toggle('active', i === index);
    });

    // Update header
    document.getElementById('content-title').textContent = currentMaterial.title;
    document.getElementById('content-subtitle').textContent = getContentTypeLabel(currentMaterial.material_type);
    document.getElementById('nav-indicator').textContent = `${index + 1}/${materials.length}`;

    // Update navigation buttons
    document.getElementById('prev-btn').disabled = index === 0;
    document.getElementById('next-btn').disabled = index === materials.length - 1;

    // Load content viewer
    renderContent(currentMaterial);

    // Update URL
    const url = new URL(window.location);
    url.searchParams.set('content', currentMaterial.material_id);
    history.replaceState({}, '', url);

    // Load notes for this content
    loadNotes();

    // Close sidebar on mobile
    if (window.innerWidth < 1024) {
        toggleSidebar(false);
    }
}

function renderContent(material) {
    const viewer = document.getElementById('content-viewer');

    switch (material.material_type) {
        case 'video':
            viewer.innerHTML = `
                <div class="video-container rounded-xl overflow-hidden">
                    <video id="video-player" class="w-full" controls playsinline
                           poster="${material.thumbnail || ''}"
                           data-material-id="${material.material_id}">
                        <source src="${material.file_url || material.video_url || ''}" type="video/mp4">
                        <%= t('browserNotSupportVideo') %>
                    </video>
                </div>
                <div class="mt-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-3">${material.title}</h2>
                    <div class="prose max-w-none text-gray-600">
                        ${material.description || '<%= t("noDescription") %>'}
                    </div>
                </div>
            `;
            setupVideoPlayer();
            break;

        case 'document':
            viewer.innerHTML = `
                <div class="bg-gray-50 rounded-xl p-8 text-center">
                    <div class="w-20 h-20 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-file-pdf text-red-500 text-3xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">${material.title}</h3>
                    <p class="text-gray-500 mb-6">${material.file_size || 'PDF Document'}</p>
                    <div class="flex justify-center space-x-3">
                        <button onclick="window.open('${material.file_url}', '_blank')"
                                class="px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition">
                            <i class="fas fa-external-link-alt mr-2"></i>${i18n.viewDocument}
                        </button>
                        <a href="${material.file_url}" download
                           class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition">
                            <i class="fas fa-download mr-2"></i>${i18n.downloadFile}
                        </a>
                    </div>
                </div>
                <div class="mt-6 prose max-w-none">
                    ${material.description || ''}
                </div>
            `;
            break;

        case 'text':
            viewer.innerHTML = `
                <article class="prose max-w-none">
                    <h1>${material.title}</h1>
                    ${material.content || material.description || '<%= t("noContent") %>'}
                </article>
            `;
            break;

        case 'quiz':
            viewer.innerHTML = `
                <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-8 text-center">
                    <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-question-circle text-blue-500 text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">${material.title}</h3>
                    <p class="text-gray-600 mb-2"><%= t('comprehensionQuiz') %></p>
                    <div class="flex justify-center space-x-4 text-sm text-gray-500 mb-6">
                        <span><i class="fas fa-list-ol mr-1"></i>${material.question_count || '?'} <%= t('questions') %></span>
                        <span><i class="fas fa-clock mr-1"></i>${material.time_limit || '?'} <%= t('minutes') %></span>
                        <span><i class="fas fa-percentage mr-1"></i>${material.passing_score || 60}% <%= t('toPass') %></span>
                    </div>
                    <button onclick="startQuiz('${material.quiz_id || material.test_id}')"
                            class="px-8 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition font-medium">
                        <i class="fas fa-play mr-2"></i>${i18n.startQuiz}
                    </button>
                </div>
                <div class="mt-6 prose max-w-none">
                    ${material.description || ''}
                </div>
            `;
            break;

        default:
            viewer.innerHTML = `
                <div class="text-center py-12">
                    <i class="fas fa-file text-gray-300 text-5xl mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">${material.title}</h3>
                    <p class="text-gray-500">${material.description || '<%= t("contentNotAvailable") %>'}</p>
                </div>
            `;
    }

    // Update duration display
    if (material.duration) {
        document.getElementById('content-duration').innerHTML =
            `<i class="fas fa-hourglass-half mr-2"></i><%= t('duration') %>: ${material.duration}`;
    }
}

// Video Player Setup
function setupVideoPlayer() {
    const video = document.getElementById('video-player');
    if (!video) return;

    video.playbackRate = playbackSpeed;

    video.addEventListener('ended', () => {
        markAsComplete();
        if (autoplayEnabled && currentIndex < materials.length - 1) {
            setTimeout(() => navigateNext(), 1500);
        }
    });

    video.addEventListener('timeupdate', () => {
        const progress = (video.currentTime / video.duration) * 100;
        if (progress > 80 && !currentMaterial.is_completed) {
            markAsComplete();
        }
    });
}

// Navigation
function navigatePrev() {
    if (currentIndex > 0) {
        loadContent(currentIndex - 1);
    }
}

function navigateNext() {
    if (currentIndex < materials.length - 1) {
        loadContent(currentIndex + 1);
    }
}

// Progress
function updateProgress() {
    const completed = materials.filter(m => m.is_completed).length;
    const total = materials.length;
    const percentage = total > 0 ? Math.round((completed / total) * 100) : 0;

    document.getElementById('progress-text').textContent = `${percentage}%`;
    document.getElementById('completed-count').textContent = completed;

    // Update progress circle
    const circle = document.getElementById('progress-circle');
    const circumference = 2 * Math.PI * 20;
    const offset = circumference - (percentage / 100) * circumference;
    circle.style.strokeDashoffset = offset;
}

async function markAsComplete() {
    if (!currentMaterial || currentMaterial.is_completed) return;

    try {
        const response = await fetch(`/courses/api/${courseId}/materials/${currentMaterial.material_id}/complete`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });

        if (response.ok) {
            currentMaterial.is_completed = true;
            materials[currentIndex].is_completed = true;
            buildNavigation();
            updateProgress();
            showToast(i18n.markedComplete, 'success');
        }
    } catch (error) {
        console.error('Error marking complete:', error);
    }
}

// Time Tracker
function startTimeTracker() {
    timeTrackerInterval = setInterval(() => {
        const elapsed = Math.floor((Date.now() - sessionStartTime) / 1000);
        const minutes = Math.floor(elapsed / 60);
        const seconds = elapsed % 60;
        document.getElementById('time-spent').textContent =
            `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
    }, 1000);
}

// Tabs
function switchTab(tabName) {
    document.querySelectorAll('.content-tab').forEach(tab => {
        tab.classList.toggle('active', tab.dataset.tab === tabName);
    });
    document.querySelectorAll('.tab-panel').forEach(panel => {
        panel.classList.toggle('hidden', panel.id !== `panel-${tabName}`);
    });

    if (tabName === 'discussion') loadComments();
}

// Notes
async function loadNotes() {
    // Load from localStorage for now
    const notes = localStorage.getItem(`notes_${courseId}_${currentMaterial?.material_id}`) || '';
    document.getElementById('notes-text').value = notes;
}

async function saveNotes() {
    const notes = document.getElementById('notes-text').value;
    localStorage.setItem(`notes_${courseId}_${currentMaterial?.material_id}`, notes);
    document.getElementById('notes-saved-status').innerHTML =
        '<i class="fas fa-check mr-1"></i><%= t("saved") %>';
    showToast(i18n.notesSaved, 'success');
}

// Comments
async function loadComments() {
    try {
        const response = await fetch(`/courses/api/${courseId}/discussions`);
        const result = await response.json();

        const container = document.getElementById('comments-list');
        if (result.success && result.data?.length > 0) {
            container.innerHTML = result.data.map(c => `
                <div class="flex space-x-4 p-4 bg-gray-50 rounded-lg">
                    <img src="${c.profile_image || '/images/default-avatar.png'}" class="w-10 h-10 rounded-full" alt="">
                    <div class="flex-1">
                        <div class="flex items-center space-x-2">
                            <span class="font-medium text-gray-900">${c.author_name || 'User'}</span>
                            <span class="text-xs text-gray-500">${formatDate(c.created_at)}</span>
                        </div>
                        <p class="mt-1 text-gray-700">${c.comment}</p>
                    </div>
                </div>
            `).join('');
        } else {
            container.innerHTML = `
                <div class="text-center py-8 text-gray-500">
                    <i class="fas fa-comments text-gray-300 text-4xl mb-3"></i>
                    <p>${i18n.noComments}</p>
                </div>
            `;
        }
    } catch (error) {
        console.error('Error loading comments:', error);
    }
}

// Settings
function toggleSettings() {
    document.getElementById('settings-menu').classList.toggle('hidden');
}

function setPlaybackSpeed(speed) {
    playbackSpeed = parseFloat(speed);
    const video = document.getElementById('video-player');
    if (video) video.playbackRate = playbackSpeed;

    document.querySelectorAll('.speed-btn').forEach(btn => {
        btn.classList.toggle('bg-blue-500', btn.dataset.speed == speed);
        btn.classList.toggle('text-white', btn.dataset.speed == speed);
        btn.classList.toggle('bg-gray-100', btn.dataset.speed != speed);
    });
}

// Sidebar
function toggleSidebar(open) {
    const sidebar = document.getElementById('course-sidebar');
    const overlay = document.getElementById('sidebar-overlay');

    if (typeof open === 'boolean') {
        sidebar.classList.toggle('open', open);
        overlay.classList.toggle('open', open);
    } else {
        sidebar.classList.toggle('open');
        overlay.classList.toggle('open');
    }
}

// Fullscreen
function toggleFullscreen() {
    const wrapper = document.getElementById('content-wrapper');

    if (!document.fullscreenElement) {
        wrapper.requestFullscreen?.() || wrapper.webkitRequestFullscreen?.();
        document.getElementById('fullscreen-icon').className = 'fas fa-compress';
    } else {
        document.exitFullscreen?.() || document.webkitExitFullscreen?.();
        document.getElementById('fullscreen-icon').className = 'fas fa-expand';
    }
}

// Shortcuts Modal
function toggleShortcutsModal() {
    document.getElementById('shortcuts-modal').classList.toggle('hidden');
}

// Quiz
function startQuiz(quizId) {
    if (quizId) {
        window.location.href = `/tests/${quizId}/take`;
    }
}

// Event Listeners
function setupEventListeners() {
    // Comment form
    document.getElementById('comment-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        const text = document.getElementById('comment-text').value.trim();
        if (!text) return;

        try {
            const response = await fetch(`/courses/api/${courseId}/discussions`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ comment: text, material_id: currentMaterial?.material_id })
            });

            if (response.ok) {
                document.getElementById('comment-text').value = '';
                loadComments();
                showToast(i18n.commentPosted, 'success');
            }
        } catch (error) {
            console.error('Error posting comment:', error);
        }
    });

    // Notes auto-save
    let saveTimeout;
    document.getElementById('notes-text').addEventListener('input', () => {
        document.getElementById('notes-saved-status').textContent = '<%= t("unsaved") %>';
        clearTimeout(saveTimeout);
        saveTimeout = setTimeout(saveNotes, 2000);
    });

    // Keyboard shortcuts
    document.addEventListener('keydown', (e) => {
        if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') return;

        switch(e.key.toLowerCase()) {
            case 'n':
            case 'arrowright':
                navigateNext();
                break;
            case 'p':
            case 'arrowleft':
                navigatePrev();
                break;
            case ' ':
                const video = document.getElementById('video-player');
                if (video) {
                    e.preventDefault();
                    video.paused ? video.play() : video.pause();
                }
                break;
            case 'f':
                toggleFullscreen();
                break;
            case 's':
                if (e.ctrlKey) {
                    e.preventDefault();
                    saveNotes();
                } else {
                    toggleSidebar();
                }
                break;
            case '?':
                toggleShortcutsModal();
                break;
            case 'escape':
                document.getElementById('shortcuts-modal').classList.add('hidden');
                document.getElementById('settings-menu').classList.add('hidden');
                break;
        }
    });

    // Click outside to close
    document.addEventListener('click', (e) => {
        if (!e.target.closest('#settings-menu') && !e.target.closest('[onclick*="toggleSettings"]')) {
            document.getElementById('settings-menu').classList.add('hidden');
        }
    });

    // Autoplay checkbox
    document.getElementById('autoplay-checkbox')?.addEventListener('change', (e) => {
        autoplayEnabled = e.target.checked;
    });
}

// Helpers
function formatDate(dateStr) {
    return new Date(dateStr).toLocaleDateString('th-TH', {
        year: 'numeric', month: 'short', day: 'numeric',
        hour: '2-digit', minute: '2-digit'
    });
}

function showToast(message, type = 'info') {
    const toast = document.createElement('div');
    toast.className = `fixed bottom-20 right-6 px-4 py-3 rounded-lg shadow-lg z-50 transition-all transform translate-y-2 opacity-0 ${
        type === 'success' ? 'bg-green-500 text-white' :
        type === 'error' ? 'bg-red-500 text-white' : 'bg-gray-800 text-white'
    }`;
    toast.innerHTML = `<i class="fas fa-${type === 'success' ? 'check' : type === 'error' ? 'times' : 'info'}-circle mr-2"></i>${message}`;
    document.body.appendChild(toast);

    setTimeout(() => {
        toast.classList.remove('translate-y-2', 'opacity-0');
    }, 10);

    setTimeout(() => {
        toast.classList.add('translate-y-2', 'opacity-0');
        setTimeout(() => toast.remove(), 300);
    }, 3000);
}

// Cleanup
window.addEventListener('beforeunload', () => {
    if (timeTrackerInterval) clearInterval(timeTrackerInterval);
});
</script>
