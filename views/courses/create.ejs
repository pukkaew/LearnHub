

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">
                    <i class="fas fa-plus-circle mr-3 text-ruxchai-primary"></i><%= t('createNewCourse') %>
                </h1>
                <p class="mt-2 text-gray-600"><%= t('createCourseDescription') %></p>
            </div>
            <a href="/courses" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                <i class="fas fa-arrow-left mr-2"></i><%= t('backToCourseList') %>
            </a>
        </div>
    </div>

    <!-- Step Progress Indicator -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <div class="relative">
                    <div class="absolute left-0 top-1/2 h-0.5 w-full bg-gray-200 -translate-y-1/2"></div>
                    <div id="progress-bar" class="absolute left-0 top-1/2 h-0.5 bg-ruxchai-primary -translate-y-1/2 transition-all duration-300" style="width: 25%"></div>
                    <ol class="relative z-10 flex justify-between text-sm">
                        <li class="flex flex-col items-center">
                            <div id="step-1-circle" class="w-10 h-10 bg-ruxchai-primary rounded-full flex items-center justify-center text-white font-semibold mb-2">
                                1
                            </div>
                            <span class="text-ruxchai-primary font-medium"><%= t('basicInformation') %></span>
                        </li>
                        <li class="flex flex-col items-center">
                            <div id="step-2-circle" class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center text-gray-600 font-semibold mb-2">
                                2
                            </div>
                            <span class="text-gray-500"><%= t('courseDetailsStep') %></span>
                        </li>
                        <li class="flex flex-col items-center">
                            <div id="step-3-circle" class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center text-gray-600 font-semibold mb-2">
                                3
                            </div>
                            <span class="text-gray-500"><%= t('contentAndMedia') %></span>
                        </li>
                        <li class="flex flex-col items-center">
                            <div id="step-4-circle" class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center text-gray-600 font-semibold mb-2">
                                4
                            </div>
                            <span class="text-gray-500"><%= t('assessmentStep') %></span>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Creation Wizard -->
    <div class="bg-white shadow rounded-lg">
        <form id="create-course-form" class="p-6">
            <!-- Step 1: Basic Information -->
            <div id="step-1" class="step-content">
                <div class="mb-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">
                        <i class="fas fa-info-circle mr-2 text-ruxchai-primary"></i><%= t('step') %> 1: <%= t('basicInformation') %>
                    </h3>
                    <p class="text-gray-600 mb-6"><%= t('enterBasicInfo') %></p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="md:col-span-2">
                        <label for="course_name" class="block text-sm font-medium text-gray-700 mb-2"><%= t('courseNameLabel') %> <span class="text-red-500">*</span></label>
                        <input type="text" id="course_name" name="course_name" required
                               class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                               placeholder="<%= t('enterCourseName') %>">
                    </div>

                    <div>
                        <label for="course_code" class="block text-sm font-medium text-gray-700 mb-2"><%= t('courseCodeLabel') %> <span class="text-red-500">*</span></label>
                        <div class="flex items-center">
                            <input type="text" id="course_code" name="course_code" required readonly
                                   class="flex-1 rounded-md border-gray-300 bg-gray-50 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                   value="CRS-2025-0001">
                            <button type="button" onclick="generateCourseCode()" class="ml-2 px-3 py-2 text-sm text-blue-600 hover:text-blue-800">
                                <i class="fas fa-sync-alt"></i> <%= t('generateNew') %>
                            </button>
                        </div>
                        <p class="text-xs text-gray-500 mt-1"><%= t('codeGeneratedAuto') %></p>
                    </div>

                    <div>
                        <label for="category_id" class="block text-sm font-medium text-gray-700 mb-2"><%= t('categoryLabel') %> <span class="text-red-500">*</span></label>
                        <select id="category_id" name="category_id" required
                                class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                            <option value=""><%= t('selectCategory') %></option>
                            <!-- Categories will be loaded here -->
                        </select>
                    </div>

                    <div>
                        <label for="difficulty_level" class="block text-sm font-medium text-gray-700 mb-2"><%= t('difficultyLabel') %> <span class="text-red-500">*</span></label>
                        <select id="difficulty_level" name="difficulty_level" required
                                class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                            <option value=""><%= t('selectLevel') %></option>
                            <option value="Beginner"><%= t('beginnerLevel') %></option>
                            <option value="Intermediate"><%= t('intermediateLevel') %></option>
                            <option value="Advanced"><%= t('advancedLevel') %></option>
                        </select>
                    </div>

                    <div>
                        <label for="course_type" class="block text-sm font-medium text-gray-700 mb-2"><%= t('courseTypeLabel') %> <span class="text-red-500">*</span></label>
                        <select id="course_type" name="course_type" required
                                class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                            <option value=""><%= t('selectType') %></option>
                            <option value="mandatory"><%= t('mandatory') %></option>
                            <option value="elective"><%= t('elective') %></option>
                            <option value="recommended"><%= t('recommended') %></option>
                        </select>
                    </div>

                    <div>
                        <label for="language" class="block text-sm font-medium text-gray-700 mb-2"><%= t('teachingLanguageLabel') %> <span class="text-red-500">*</span></label>
                        <select id="language" name="language" required
                                class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                            <option value=""><%= t('selectLanguage') %></option>
                            <option value="th"><%= t('thai') %></option>
                            <option value="en"><%= t('english') %></option>
                            <option value="th-en"><%= t('thaiEnglish') %></option>
                        </select>
                    </div>

                    <div class="md:col-span-2">
                        <label for="instructor_name" class="block text-sm font-medium text-gray-700 mb-2"><%= t('instructorNameLabel') %></label>
                        <input type="text" id="instructor_name" name="instructor_name"
                               class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                               placeholder="<%= t('instructorNamePlaceholder') %>">
                        <p class="text-xs text-gray-500 mt-1">
                            <i class="fas fa-info-circle"></i> <%= t('optionalField') %>
                        </p>
                    </div>

                </div>
            </div>

            <!-- Step 2: Course Details -->
            <div id="step-2" class="step-content" style="display: none;">
                <div class="mb-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">
                        <i class="fas fa-book mr-2 text-ruxchai-primary"></i><%= t('step') %> 2: <%= t('courseDetailsStep') %>
                    </h3>
                    <p class="text-gray-600 mb-6"><%= t('specifyDetailsAndTarget') %></p>
                </div>

                <div class="space-y-6">
                    <!-- Course Description with Rich Text Editor -->
                    <div>
                        <label for="description" class="block text-sm font-medium text-gray-700 mb-2"><%= t('courseDescriptionLabel') %> <span class="text-red-500">*</span></label>
                        <div class="border border-gray-300 rounded-md">
                            <div class="bg-gray-50 px-3 py-2 border-b border-gray-300">
                                <div class="flex space-x-2">
                                    <button type="button" onclick="formatText('bold')" class="px-2 py-1 text-gray-700 hover:bg-white rounded">
                                        <i class="fas fa-bold"></i>
                                    </button>
                                    <button type="button" onclick="formatText('italic')" class="px-2 py-1 text-gray-700 hover:bg-white rounded">
                                        <i class="fas fa-italic"></i>
                                    </button>
                                    <button type="button" onclick="formatText('underline')" class="px-2 py-1 text-gray-700 hover:bg-white rounded">
                                        <i class="fas fa-underline"></i>
                                    </button>
                                    <div class="border-l border-gray-300 mx-1"></div>
                                    <button type="button" onclick="formatText('insertUnorderedList')" class="px-2 py-1 text-gray-700 hover:bg-white rounded">
                                        <i class="fas fa-list-ul"></i>
                                    </button>
                                    <button type="button" onclick="formatText('insertOrderedList')" class="px-2 py-1 text-gray-700 hover:bg-white rounded">
                                        <i class="fas fa-list-ol"></i>
                                    </button>
                                </div>
                            </div>
                            <div id="description" contenteditable="true" class="p-3 min-h-[150px] focus:outline-none"
                                 data-placeholder="<%= t('courseDescriptionPlaceholder') %>"></div>
                            <input type="hidden" id="description-input" name="description">
                        </div>
                        <div class="flex justify-between mt-1">
                            <span class="text-xs text-gray-500"><%= t('useEditorTools') %></span>
                            <span id="char-count" class="text-xs text-gray-500">0/1000 <%= t('characters') %></span>
                        </div>
                    </div>

                    <!-- Learning Objectives -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('learningObjectivesLabel') %> <span class="text-red-500">*</span> (<%= t('atLeast3Items') %>)</label>
                        <div id="learning-objectives" class="space-y-2">
                            <div class="flex items-start space-x-2">
                                <span class="text-gray-400 mt-2">1.</span>
                                <input type="text" name="objectives[]" required
                                       class="flex-1 rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                       placeholder="<%= t('learningObjectivesPlaceholder') %>">
                                <button type="button" onclick="removeObjective(this)" class="mt-2 text-red-600 hover:text-red-800 opacity-0">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="flex items-start space-x-2">
                                <span class="text-gray-400 mt-2">2.</span>
                                <input type="text" name="objectives[]" required
                                       class="flex-1 rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                       placeholder="<%= t('learningObjectivesPlaceholder') %>">
                                <button type="button" onclick="removeObjective(this)" class="mt-2 text-red-600 hover:text-red-800 opacity-0">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="flex items-start space-x-2">
                                <span class="text-gray-400 mt-2">3.</span>
                                <input type="text" name="objectives[]" required
                                       class="flex-1 rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                       placeholder="<%= t('learningObjectivesPlaceholder') %>">
                                <button type="button" onclick="removeObjective(this)" class="mt-2 text-red-600 hover:text-red-800 opacity-0">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <button type="button" onclick="addObjective()" class="mt-2 text-sm text-blue-600 hover:text-blue-800">
                            <i class="fas fa-plus"></i> <%= t('addObjective') %>
                        </button>
                    </div>

                    <!-- Target Audience -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="target_departments" class="block text-sm font-medium text-gray-700 mb-2">
                                <span class="inline-flex items-center">
                                    <span class="bg-blue-500 text-white rounded-full w-5 h-5 flex items-center justify-center text-xs mr-2">1</span>
                                    <%= t('targetAudienceLabel') %>
                                </span>
                                <span class="text-gray-400 text-xs ml-7">(<%= t('selectDepartmentFirst') %>)</span>
                            </label>
                            <select id="target_departments" name="target_departments" multiple size="10"
                                    class="w-full rounded-md border-2 border-gray-300 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-200 p-2"
                                    style="height: auto;">
                                <option value="" disabled class="text-gray-400"><%= t('loadingData') %></option>
                            </select>
                            <div class="mt-2 flex items-center justify-between">
                                <p class="text-xs text-gray-600">
                                    <i class="fas fa-mouse-pointer text-blue-500"></i> <strong><%= t('click') %></strong> <%= t('toSelectUnselect') %>
                                </p>
                                <button type="button" id="clear-departments-btn"
                                        class="text-xs text-red-600 hover:text-red-800 hover:underline">
                                    <i class="fas fa-times-circle"></i> <%= t('clearAll') %>
                                </button>
                            </div>
                        </div>

                        <div>
                            <label for="target_positions" class="block text-sm font-medium text-gray-700 mb-2">
                                <span class="inline-flex items-center">
                                    <span class="bg-green-500 text-white rounded-full w-5 h-5 flex items-center justify-center text-xs mr-2">2</span>
                                    <%= t('targetPositions') %>
                                </span>
                                <span class="text-gray-400 text-xs ml-7">(<%= t('noSelectionAllPositions') %>)</span>
                            </label>
                            <select id="target_positions" name="target_positions" multiple size="10"
                                    class="w-full rounded-md border-2 border-gray-300 shadow-sm focus:border-green-500 focus:ring-2 focus:ring-green-200 p-2"
                                    style="height: auto;">
                                <option value="" disabled class="text-gray-400"><%= t('loadingData') %></option>
                            </select>
                            <div class="mt-2 flex items-center justify-between">
                                <p class="text-xs text-gray-600">
                                    <i class="fas fa-filter text-green-500"></i> <%= t('filterBySelectedDepartments') %>
                                </p>
                                <button type="button" id="clear-positions-btn"
                                        class="text-xs text-red-600 hover:text-red-800 hover:underline">
                                    <i class="fas fa-times-circle"></i> <%= t('clearAll') %>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Prerequisites -->
                    <div>
                        <label for="prerequisite_knowledge" class="block text-sm font-medium text-gray-700 mb-2"><%= t('prerequisitesLabel') %></label>
                        <textarea id="prerequisite_knowledge" name="prerequisite_knowledge" rows="3"
                                  class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                  placeholder="<%= t('prerequisitesPlaceholder') %>"></textarea>
                    </div>

                    <!-- Duration and Max Enrollments -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="duration_hours" class="block text-sm font-medium text-gray-700 mb-2"><%= t('courseDuration') %> <span class="text-red-500">*</span></label>
                            <div class="flex space-x-2">
                                <input type="number" id="duration_hours" name="duration_hours" min="0"
                                       class="w-20 rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                       placeholder="0">
                                <span class="mt-2"><%= t('durationHoursLabel') %></span>
                                <input type="number" id="duration_minutes" name="duration_minutes" min="0" max="59"
                                       class="w-20 rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                       placeholder="0">
                                <span class="mt-2"><%= t('durationMinutesLabel') %></span>
                            </div>
                        </div>

                        <div>
                            <label for="max_enrollments" class="block text-sm font-medium text-gray-700 mb-2"><%= t('maxEnrollmentsLabel') %></label>
                            <input type="number" id="max_enrollments" name="max_enrollments" min="1"
                                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                   placeholder="<%= t('unlimited') %>">
                            <p class="text-xs text-gray-500 mt-1"><%= t('leaveBlankForUnlimited') %></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Step 3: Content and Media -->
            <div id="step-3" class="step-content" style="display: none;">
                <div class="mb-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">
                        <i class="fas fa-photo-video mr-2 text-ruxchai-primary"></i><%= t('step') %> 3: <%= t('courseContentLabel') %>
                    </h3>
                    <p class="text-gray-600 mb-6"><%= t('uploadMediaAndManageLessons') %></p>
                </div>

                <div class="space-y-6">
                    <!-- Course Cover Image -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('courseCoverImage') %> <span class="text-gray-400 text-xs">(<%= t('optional') %>)</span></label>
                        <div class="border-2 border-dashed border-gray-300 rounded-lg p-6">
                            <div class="flex items-center space-x-6">
                                <div class="flex-shrink-0">
                                    <img id="course-image-preview" class="h-40 w-64 object-cover rounded-lg bg-gray-100"
                                         src="/images/course-default.svg"
                                         alt="Course Cover">
                                    <p class="text-xs text-gray-500 mt-2 text-center"><%= t('defaultImageIfNotUploaded') %></p>
                                </div>
                                <div class="flex-1">
                                    <input type="file" id="course_image" name="course_image" accept="image/*"
                                           class="hidden" onchange="previewCourseImage(this)">
                                    <label for="course_image" class="cursor-pointer inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                                        <i class="fas fa-cloud-upload-alt mr-2"></i><%= t('selectImage') %>
                                    </label>
                                    <p class="text-xs text-gray-500 mt-2"><%= t('imageRequirements') %></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Introduction Video -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('introductionVideo') %></label>
                        <div class="border border-gray-300 rounded-lg p-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <input type="file" id="intro_video" name="intro_video" accept="video/*" class="hidden">
                                    <label for="intro_video" class="cursor-pointer inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-md text-sm text-gray-700 bg-white hover:bg-gray-50">
                                        <i class="fas fa-video mr-2"></i><%= t('uploadVideo') %>
                                    </label>
                                    <span class="ml-3 text-sm text-gray-600"><%= t('or') %></span>
                                    <input type="text" name="intro_video_url" placeholder="<%= t('enterYoutubeVimeoLink') %>"
                                           class="ml-3 px-3 py-1.5 border border-gray-300 rounded-md text-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                                </div>
                            </div>
                            <p class="text-xs text-gray-500 mt-2"><%= t('videoRequirements') %></p>
                        </div>
                    </div>

                    <!-- Lessons Management -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('lessonTitle') %> <span class="text-red-500">*</span></label>
                        <div id="lessons-container" class="space-y-4">
                            <div class="lesson-item border border-gray-200 rounded-lg p-4 bg-gray-50" data-lesson="1">
                                <div class="flex items-start justify-between mb-3">
                                    <div class="flex items-center">
                                        <i class="fas fa-grip-vertical text-gray-400 mr-3 cursor-move"></i>
                                        <span class="font-medium text-gray-700"><%= t('lessonNo') %> 1:</span>
                                    </div>
                                    <button type="button" onclick="removeLesson(this)" class="text-red-600 hover:text-red-800">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>

                                <!-- à¸Šà¸·à¹ˆà¸­à¹à¸¥à¸°à¸£à¸°à¸¢à¸°à¹€à¸§à¸¥à¸² -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-3">
                                    <input type="text" name="lesson_titles[]"
                                           class="rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                           placeholder="<%= t('lessonNamePlaceholder') %>">
                                    <input type="number" name="lesson_durations[]" min="1"
                                           class="rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                           placeholder="<%= t('durationMinutes') %>">
                                </div>

                                <!-- à¸„à¸³à¸­à¸˜à¸´à¸šà¸²à¸¢ -->
                                <textarea name="lesson_descriptions[]" rows="2"
                                          class="w-full mb-3 rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                          placeholder="<%= t('lessonDescriptionPlaceholder') %>"></textarea>

                                <!-- à¸§à¸´à¸”à¸µà¹‚à¸­à¸šà¸—à¹€à¸£à¸µà¸¢à¸™ -->
                                <div class="bg-white rounded-md border border-gray-200 p-3 mb-3">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <i class="fas fa-video mr-1 text-blue-600"></i><%= t('lessonVideo') %>
                                    </label>
                                    <div class="space-y-2">
                                        <div class="flex items-center gap-2">
                                            <input type="file" name="lesson_videos[]" accept="video/*"
                                                   class="hidden lesson-video-file" onchange="handleLessonVideoUpload(this)">
                                            <button type="button" onclick="this.previousElementSibling.click()"
                                                    class="inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-md text-sm text-gray-700 bg-white hover:bg-gray-50">
                                                <i class="fas fa-upload mr-2"></i><%= t('uploadVideo') %>
                                            </button>
                                            <span class="text-xs text-gray-500 lesson-video-name"></span>
                                        </div>
                                        <div class="flex items-center">
                                            <span class="text-xs text-gray-500 mr-2"><%= t('or') %></span>
                                            <input type="text" name="lesson_video_urls[]"
                                                   class="flex-1 px-3 py-1.5 text-sm border border-gray-300 rounded-md focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                                   placeholder="<%= t('lessonVideoUrlPlaceholder') %>">
                                        </div>
                                        <p class="text-xs text-gray-500">
                                            <i class="fas fa-info-circle mr-1"></i><%= t('lessonVideoRequirements') %>
                                        </p>
                                    </div>
                                </div>

                                <!-- à¹€à¸­à¸à¸ªà¸²à¸£à¸›à¸£à¸°à¸à¸­à¸šà¸šà¸—à¹€à¸£à¸µà¸¢à¸™ -->
                                <div class="bg-white rounded-md border border-gray-200 p-3">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <i class="fas fa-file-pdf mr-1 text-red-600"></i><%= t('supportingDocuments') %>
                                    </label>
                                    <div class="space-y-2">
                                        <input type="file" name="lesson_documents[]" multiple
                                               accept=".pdf,.ppt,.pptx,.doc,.docx,.xlsx,.xls"
