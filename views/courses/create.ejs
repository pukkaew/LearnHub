                    <div class="border border-gray-200 rounded-lg p-4">
                        <h4 class="font-medium text-gray-700 mb-3"><%= t('enrollmentDates') %></h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label for="enrollment_start" class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="far fa-calendar-alt mr-1"></i><%= t('enrollmentStartLabel') %>
                                </label>
                                <input type="text" id="enrollment_start" name="enrollment_start"
                                       placeholder="<%= t('selectDateAndTime') %>"
                                       class="flatpickr-datetime w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                       readonly>
                                <p class="text-xs text-gray-500 mt-1"><%= t('clickToSelectDateTime') %></p>
                            </div>
                            <div>
                                <label for="enrollment_end" class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="far fa-calendar-alt mr-1"></i><%= t('enrollmentEndLabel') %>
                                </label>
                                <input type="text" id="enrollment_end" name="enrollment_end"
                                       placeholder="<%= t('selectDateAndTime') %>"
                                       class="flatpickr-datetime w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
                                       readonly>
                                <p class="text-xs text-gray-500 mt-1"><%= t('clickToSelectDateTime') %></p>
                            </div>
                        </div>
                        <div class="mt-4">
                            <label class="flex items-center">
                                <input type="checkbox" name="auto_enroll"
                                       class="mr-2 rounded text-ruxchai-primary focus:ring-ruxchai-primary">
                                <span class="text-sm text-gray-700"><%= t('autoEnrollNewEmployees') %></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="flex justify-between items-center p-6 border-t border-gray-200">
                <div>
                    <button type="button" id="prev-btn" onclick="changeStep(-1)" style="display: none;"
                            class="px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                        <i class="fas fa-arrow-left mr-2"></i><%= t('previousStep') %>
                    </button>
                </div>
                <div class="flex space-x-3">
                    <button type="button" onclick="saveDraft()"
                            class="px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                        <i class="fas fa-save mr-2"></i><%= t('saveDraft') %>
                    </button>
                    <button type="button" id="next-btn" onclick="changeStep(1)"
                            class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white ruxchai-gradient hover:opacity-90">
                        <%= t('nextStep') %> <i class="fas fa-arrow-right ml-2"></i>
                    </button>
                    <button type="submit" id="submit-btn" style="display: none;"
                            class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700">
                        <i class="fas fa-check mr-2"></i><%= t('saveAndPublish') %>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

