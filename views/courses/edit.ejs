<script>
let courseId;

document.addEventListener('DOMContentLoaded', async function() {
    // Extract course ID from URL: /courses/:course_id/edit
    // Example: /courses/1/edit ‚Üí split('/') ‚Üí ['', 'courses', '1', 'edit']
    courseId = window.location.pathname.split('/')[2]; // Get course_id (index 2)

    // Initialize flatpickr FIRST before loading data
    initializeFlatpickr();

    // Load dropdown data first, then load course data
    await Promise.all([
        loadCategories(),
        loadTargetPositions(),
        loadTargetDepartments()
    ]);
    await loadCourseData();

    setupImagePreview();
    setupFormSubmit();
});

async function loadCourseData() {
    try {
        const response = await fetch(`/courses/api/${courseId}`);
        const result = await response.json();

        if (result.success) {
            const course = result.data;
            populateForm(course);
            loadCourseStats();
        } else {
            showError('<%= t("courseNotFound") %>');
            setTimeout(() => window.location.href = '/courses', 2000);
        }
    } catch (error) {
        showError('<%= t("errorLoadingData") %>');
    }
}

// Learning objectives management - MUST be declared before populateForm()
let objectiveCount = 0;

function addObjective(value = '') {
    objectiveCount++;
    const container = document.getElementById('objectives-container');
    console.log('üéØ addObjective called:', { value, objectiveCount, containerExists: !!container });

    if (!container) {
        console.error('‚ùå objectives-container not found!');
        return;
    }

    const div = document.createElement('div');
    div.className = 'flex gap-2';
    div.innerHTML = `
        <input type="text" class="objective-input flex-1 rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary"
