<script>
let courseId;

document.addEventListener('DOMContentLoaded', async function() {
    // Extract course ID from URL: /courses/:course_id/edit
    // Example: /courses/1/edit → split('/') → ['', 'courses', '1', 'edit']
    courseId = window.location.pathname.split('/')[2]; // Get course_id (index 2)

    // Load dropdown data first, then load course data
    await Promise.all([
        loadCategories(),
        loadTargetPositions(),
        loadTargetDepartments()
    ]);
    await loadCourseData();

    setupImagePreview();
    setupFormSubmit();
});

async function loadCourseData() {
    try {
        const response = await fetch(`/courses/api/${courseId}`);
        const result = await response.json();

        if (result.success) {
            const course = result.data;
            populateForm(course);
            loadCourseStats();
        } else {
            showError('ไม่พบข้อมูลหลักสูตร');
            setTimeout(() => window.location.href = '/courses', 2000);
        }
    } catch (error) {
        showError('เกิดข้อผิดพลาดในการโหลดข้อมูล');
    }
}

function populateForm(course) {
    document.getElementById('course_id').value = course.course_id;
    document.getElementById('course_name').value = course.course_name || course.title || '';
    document.getElementById('course_code').value = course.course_code || '';
    document.getElementById('description').value = course.description || '';
    document.getElementById('difficulty_level').value = course.difficulty_level || 'Beginner';

    // Map course_type values
    let courseType = course.course_type || 'Required';
    if (courseType === 'mandatory') courseType = 'Required';
    else if (courseType === 'elective') courseType = 'Elective';
    else if (courseType === 'recommended') courseType = 'Recommended';
    document.getElementById('course_type').value = courseType;

    // Map language values
    let language = course.language || 'Thai';
    if (language === 'th') language = 'Thai';
    else if (language === 'en') language = 'English';
    else if (language === 'both') language = 'Both';
    document.getElementById('language').value = language;

    document.getElementById('duration_hours').value = course.duration_hours || '';
    document.getElementById('duration_minutes').value = course.duration_minutes || '0';

    // Use max_students instead of max_enrollments
    document.getElementById('max_enrollments').value = course.max_enrollments || course.max_students || course.enrollment_limit || '';

    document.getElementById('passing_score').value = course.passing_score || '';
    document.getElementById('max_attempts').value = course.max_attempts || '';
    document.getElementById('certificate_validity').value = course.certificate_validity || '';
    document.getElementById('prerequisite_knowledge').value = course.prerequisite_knowledge || course.prerequisites_text || course.prerequisites || '';
    document.getElementById('status').value = course.status || 'Draft';

    // Set category - ไม่มี category_id ใน response จึงต้อง find จาก category_name
    if (course.category_name || course.category) {
        const categoryName = course.category_name || course.category;
        // Try to find matching option by text
        const categorySelect = document.getElementById('category_id');
        const options = categorySelect.options;
        for (let i = 0; i < options.length; i++) {
            if (options[i].textContent === categoryName) {
                options[i].selected = true;
                break;
            }
        }
    }

    // Set instructor (readonly field - show name, store ID)
    document.getElementById('instructor_id').value = course.instructor_id || '';
    document.getElementById('instructor_name_display').value =
        course.instructor_name || course.instructor_display_name || 'ไม่ระบุ';

    // Set learning objectives
    if (course.learning_objectives || course.objectives) {
        const objectives = course.learning_objectives || course.objectives;
        const objectivesArray = typeof objectives === 'string' ? JSON.parse(objectives) : objectives;
        if (Array.isArray(objectivesArray) && objectivesArray.length > 0) {
            objectivesArray.forEach(obj => addObjective(obj));
        }
    }

    // Set target audience (optional - may be empty)
    if (course.target_audience && typeof course.target_audience === 'object') {
        const targetAudience = typeof course.target_audience === 'string'
            ? JSON.parse(course.target_audience)
            : course.target_audience;

        // Check if target_audience has data (not empty object)
        if (targetAudience.positions && Array.isArray(targetAudience.positions) && targetAudience.positions.length > 0) {
            targetAudience.positions.forEach(pos => {
                const option = document.querySelector(`#target_positions option[value="${pos}"]`);
                if (option) option.selected = true;
            });
        }

        if (targetAudience.departments && Array.isArray(targetAudience.departments) && targetAudience.departments.length > 0) {
            targetAudience.departments.forEach(dept => {
                const option = document.querySelector(`#target_departments option[value="${dept}"]`);
                if (option) option.selected = true;
            });
        }
    }
    // If no target_audience data, leave selects empty (which is fine - optional field)

    // Set datetime fields - handle multiple field names
    if (course.enrollment_start || course.start_date) {
        const startDate = course.enrollment_start || course.start_date;
        document.getElementById('enrollment_start').value = new Date(startDate).toISOString().slice(0, 16);
    }
    if (course.enrollment_end || course.end_date) {
        const endDate = course.enrollment_end || course.end_date;
        document.getElementById('enrollment_end').value = new Date(endDate).toISOString().slice(0, 16);
    }

    // Set checkboxes
    document.getElementById('is_mandatory').checked = course.is_mandatory || false;
    document.getElementById('allow_certificate').checked = course.allow_certificate || false;
    document.getElementById('is_public').checked = course.is_public || false;

    // Set course image - use existing image or default (handle multiple field names)
    if (course.course_image) {
        document.getElementById('course-image-preview').src = course.course_image;
        document.getElementById('remove-image').classList.remove('hidden');
    } else if (course.thumbnail_image || course.thumbnail) {
        document.getElementById('course-image-preview').src = course.thumbnail_image || course.thumbnail;
        document.getElementById('remove-image').classList.remove('hidden');
    } else {
        document.getElementById('course-image-preview').src = '/images/default-avatar.png';
    }

    // Update page elements
    document.getElementById('course-title').textContent = course.course_name;
    document.getElementById('view-course-link').href = `/courses/${course.course_id}`;

    // Show status alert
    showStatusAlert(course.status);
}

function showStatusAlert(status) {
    const alert = document.getElementById('course-status-alert');
    const icon = document.getElementById('status-icon');
    const message = document.getElementById('status-message');

    alert.classList.remove('hidden', 'bg-yellow-50', 'bg-green-50', 'bg-red-50', 'bg-gray-50');

    switch (status) {
        case 'Draft':
            alert.classList.add('bg-yellow-50');
            icon.className = 'fas fa-exclamation-triangle text-yellow-400';
            message.textContent = 'หลักสูตรนี้อยู่ในสถานะร่าง ยังไม่เปิดให้ผู้ใช้ลงทะเบียน';
            message.className = 'text-sm font-medium text-yellow-800';
            break;
        case 'Published':
            alert.classList.add('bg-green-50');
            icon.className = 'fas fa-check-circle text-green-400';
            message.textContent = 'หลักสูตรนี้ถูกเผยแพร่แล้ว ผู้ใช้สามารถลงทะเบียนได้';
            message.className = 'text-sm font-medium text-green-800';
            break;
        case 'Archived':
            alert.classList.add('bg-gray-50');
            icon.className = 'fas fa-archive text-gray-400';
            message.textContent = 'หลักสูตรนี้ถูกเก็บถาวรแล้ว ไม่สามารถลงทะเบียนใหม่ได้';
            message.className = 'text-sm font-medium text-gray-800';
            break;
        case 'Suspended':
            alert.classList.add('bg-red-50');
            icon.className = 'fas fa-pause-circle text-red-400';
            message.textContent = 'หลักสูตรนี้ถูกหยุดชั่วคราว ไม่สามารถลงทะเบียนได้';
            message.className = 'text-sm font-medium text-red-800';
            break;
    }
}

