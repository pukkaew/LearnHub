<script>
const translations = {
    noCourses: '<%= t("noCourses") %>',
    noTitle: '<%= t("noTitle") %>',
    instructor: '<%= t("instructor") %>',
    completionProgress: '<%= t("completionProgress") %>',
    errorLoading: '<%= t("errorLoading") %>',
    noProgress: '<%= t("noProgress") %>',
    noArticles: '<%= t("noArticles") %>',
    noAuthor: '<%= t("noAuthor") %>',
    views: '<%= t("views") %>',
    noNotifications: '<%= t("noNotifications") %>',
    noBadges: '<%= t("noBadges") %>',
    justNow: '<%= t("justNow") %>',
    minutesAgo: '<%= t("minutesAgo") %>',
    hoursAgo: '<%= t("hoursAgo") %>',
    daysAgo: '<%= t("daysAgo") %>'
};

const currentLanguage = '<%= language %>';

document.getElementById('current-date').textContent = new Date().toLocaleDateString(currentLanguage === 'th' ? 'th-TH' : 'en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    weekday: 'long'
});

document.addEventListener('DOMContentLoaded', async function() {
    await loadDashboardData();
});

async function loadDashboardData() {
    try {
        const response = await fetch('/dashboard/api/stats');
        const data = await response.json();

        if (data.success) {
            updateStats(data.data);
        }
    } catch (error) {
        console.error('Error loading dashboard:', error);
    }

    loadRecentCourses();
    loadProgress();
    loadArticles();
    loadNotifications();
    loadBadges();
}

function updateStats(data) {
    document.getElementById('user-level').textContent = data.user_level || '1';
    document.getElementById('user-points').textContent = (data.total_points || 0).toLocaleString();
    document.getElementById('enrolled-courses').textContent = data.enrolled_courses || '0';
    document.getElementById('completed-courses').textContent = data.completed_courses || '0';
    document.getElementById('total-tests').textContent = data.total_tests || '0';
    document.getElementById('average-score').textContent = data.average_score ? data.average_score.toFixed(1) + '%' : '0%';
    document.getElementById('published-articles').textContent = data.published_articles || '0';
    document.getElementById('article-views').textContent = (data.article_views || 0).toLocaleString();
    document.getElementById('total-badges').textContent = data.total_badges || '0';
}

async function loadRecentCourses() {
    try {
        const response = await fetch('/dashboard/api/recent-courses');
        const data = await response.json();

        const container = document.getElementById('recent-courses');
        if (!data.success || !data.data || data.data.length === 0) {
            container.innerHTML = `<p class="text-center py-8 text-gray-500">${translations.noCourses}</p>`;
            return;
        }

        container.innerHTML = data.data.map(course => `
            <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="w-16 h-16 bg-ruxchai-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-8 h-8 text-ruxchai-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
                </div>
                <div class="flex-1">
                    <h4 class="font-medium text-gray-900">${course.title || translations.noTitle}</h4>
                    <p class="text-sm text-gray-500">${course.instructor_name || translations.instructor}</p>
                    <div class="mt-2">
                        <div class="w-full bg-gray-200 rounded-full h-2">
                            <div class="bg-ruxchai-blue h-2 rounded-full" style="width: ${course.progress_percentage || 0}%"></div>
                        </div>
                        <p class="text-xs text-gray-500 mt-1">${course.progress_percentage || 0}% ${translations.completionProgress}</p>
                    </div>
                </div>
                <a href="/courses/${course.course_id}" class="text-ruxchai-blue hover:text-ruxchai-primary">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                </a>
            </div>
        `).join('');
    } catch (error) {
        console.error('Error loading courses:', error);
        document.getElementById('recent-courses').innerHTML = `<p class="text-center py-8 text-gray-500">${translations.errorLoading}</p>`;
    }
}

async function loadProgress() {
    try {
        const response = await fetch('/dashboard/api/progress');
        const data = await response.json();

        const container = document.getElementById('learning-progress');
        if (!data.success || !data.data || data.data.length === 0) {
            container.innerHTML = `<p class="text-center py-8 text-gray-500">${translations.noProgress}</p>`;
            return;
        }

        container.innerHTML = data.data.map(item => `
            <div>
                <div class="flex justify-between items-center mb-2">
                    <span class="text-sm font-medium text-gray-900">${item.title}</span>
                    <span class="text-sm font-medium text-gray-600">${item.progress_percentage}%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-green-500 h-2 rounded-full transition-all" style="width: ${item.progress_percentage}%"></div>
                </div>
            </div>
        `).join('');
    } catch (error) {
        console.error('Error loading progress:', error);
    }
}

async function loadArticles() {
    try {
        const response = await fetch('/dashboard/api/recent-articles');
        const data = await response.json();

        const container = document.getElementById('recent-articles');
        if (!data.success || !data.data || data.data.length === 0) {
            container.innerHTML = `<p class="text-center py-8 text-gray-500">${translations.noArticles}</p>`;
            return;
        }

        container.innerHTML = data.data.map(article => `
            <div class="border-b border-gray-100 last:border-0 pb-4 last:pb-0">
                <h4 class="font-medium text-gray-900 hover:text-blue-600">
                    <a href="/articles/${article.article_id}">${article.title}</a>
                </h4>
                <p class="text-sm text-gray-500 mt-1 line-clamp-2">${article.excerpt || ''}</p>
                <div class="flex items-center gap-4 text-xs text-gray-400 mt-2">
                    <span>${article.author_name || translations.noAuthor}</span>
                    <span>${new Date(article.published_at || article.created_at).toLocaleDateString(currentLanguage === 'th' ? 'th-TH' : 'en-US')}</span>
                    <span>${article.view_count || 0} ${translations.views}</span>
                </div>
            </div>
        `).join('');
    } catch (error) {
        console.error('Error loading articles:', error);
    }
}

async function loadNotifications() {
    try {
        const response = await fetch('/dashboard/api/notifications');
        const data = await response.json();

        const container = document.getElementById('notifications');
        if (!data.success || !data.data || data.data.length === 0) {
            container.innerHTML = `<p class="text-center py-4 text-gray-500 text-sm">${translations.noNotifications}</p>`;
            return;
        }

        container.innerHTML = data.data.map(notif => `
            <div class="flex items-start gap-3 ${!notif.is_read ? 'bg-ruxchai-primary/10 -mx-3 px-3 py-2 rounded-lg' : ''}">
                <div class="w-8 h-8 bg-ruxchai-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-ruxchai-blue" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900">${notif.title}</p>
                    <p class="text-sm text-gray-600 mt-1">${notif.message}</p>
                    <p class="text-xs text-gray-400 mt-1">${timeAgo(notif.created_at)}</p>
                </div>
                ${!notif.is_read ? '<div class="w-2 h-2 bg-ruxchai-blue rounded-full flex-shrink-0 mt-2"></div>' : ''}
            </div>
        `).join('');
    } catch (error) {
        console.error('Error loading notifications:', error);
    }
}

async function loadBadges() {
    try {
        const response = await fetch('/dashboard/api/my-badges');
        const data = await response.json();

        const container = document.getElementById('my-badges');
        if (!data.success || !data.data || data.data.length === 0) {
            container.innerHTML = `<p class="col-span-3 text-center py-4 text-gray-500 text-sm">${translations.noBadges}</p>`;
            return;
        }

        container.innerHTML = data.data.slice(0, 6).map(badge => `
