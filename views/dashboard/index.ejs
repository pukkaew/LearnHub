function timeAgo(dateString) {
    const date = new Date(dateString);
    const now = new Date();
    const diff = Math.floor((now - date) / 1000);

    if (diff < 60) return translations.justNow;
    if (diff < 3600) return `${Math.floor(diff / 60)} ${translations.minutesAgo}`;
    if (diff < 86400) return `${Math.floor(diff / 3600)} ${translations.hoursAgo}`;
    return `${Math.floor(diff / 86400)} ${translations.daysAgo}`;
}
