<!DOCTYPE html>
<html lang="<%= currentLanguage || 'th' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%
        const currentLang = typeof currentLanguage !== 'undefined' ? currentLanguage : 'th';
        const isEnglish = currentLang === 'en';
        const siteNameTh = typeof getSetting === 'function' ? getSetting('system_name', 'Rukchai Hongyen LearnHub') : 'Rukchai Hongyen LearnHub';
        const siteNameEn = typeof getSetting === 'function' ? getSetting('system_name_en', 'Rukchai Hongyen LearnHub') : 'Rukchai Hongyen LearnHub';
        const siteName = isEnglish ? siteNameEn : siteNameTh;
        const companyNameTh = typeof getSetting === 'function' ? getSetting('company_name', 'Rukchai Hongyen LearnHub') : 'Rukchai Hongyen LearnHub';
        const companyNameEn = typeof getSetting === 'function' ? getSetting('company_name_en', 'Rukchai Hongyen Co., Ltd.') : 'Rukchai Hongyen Co., Ltd.';
        const companyName = isEnglish ? companyNameEn : companyNameTh;
        const logoUrl = typeof getSetting === 'function' ? getSetting('logo_url', '/images/logo.png') : '/images/logo.png';
        const primaryColor = typeof getSetting === 'function' ? getSetting('primary_color', '#0090D3') : '#0090D3';
        const secondaryColor = typeof getSetting === 'function' ? getSetting('secondary_color', '#3AAA35') : '#3AAA35';
    %>
    <title><%= t('pageNotFound') %> - <%= siteName %></title>
    <link href="/css/tailwind.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: <%= primaryColor %>;
            --secondary-color: <%= secondaryColor %>;
        }
        body {
            font-family: 'Sarabun', sans-serif;
        }
        .page-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: stretch;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
        }
        .branding-section {
            display: none;
            flex: 1;
            background: linear-gradient(135deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.1) 100%);
            padding: 3rem;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
        }
        .form-section {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        .error-container {
            width: 100%;
            max-width: 28rem;
            background: white;
            border-radius: 1.5rem;
            box-shadow: 0 25px 50px -12px rgba(0,0,0,0.25);
            padding: 2.5rem;
        }
        .error-code {
            font-size: 8rem;
            font-weight: 900;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            line-height: 1;
            margin-bottom: 1rem;
        }
        .feature-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background: rgba(255,255,255,0.1);
            border-radius: 1rem;
            backdrop-filter: blur(10px);
            margin-bottom: 1rem;
        }
        .feature-icon {
            width: 3rem;
            height: 3rem;
            background: rgba(255,255,255,0.2);
            border-radius: 0.75rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
        }
        .btn-primary {
            width: 100%;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            font-weight: 600;
            padding: 0.875rem 1.5rem;
            border-radius: 0.75rem;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        .btn-secondary {
            width: 100%;
            background: #4b5563;
            color: white;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            border-radius: 0.75rem;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-decoration: none;
        }
        .btn-secondary:hover {
            background: #374151;
        }
        .btn-outline {
            width: 100%;
            background: transparent;
            color: #374151;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            border-radius: 0.75rem;
            border: 1px solid #d1d5db;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-decoration: none;
        }
        .btn-outline:hover {
            background: #f9fafb;
        }
        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }
        .floating {
            animation: float 3s ease-in-out infinite;
        }
        @media (min-width: 1024px) {
            .branding-section {
                display: flex;
            }
            .form-section {
                flex: 1;
                max-width: 50%;
                background: rgba(255,255,255,0.1);
                backdrop-filter: blur(20px);
            }
            .error-container {
                max-width: 32rem;
            }
        }
        @media (min-width: 1440px) {
            .branding-section {
                padding: 4rem;
            }
            .form-section {
                padding: 3rem;
            }
            .error-container {
                max-width: 36rem;
                padding: 3rem;
            }
            .error-code {
                font-size: 10rem;
            }
            .feature-item {
                padding: 1.25rem;
            }
        }
        @media (min-width: 1920px) {
            .branding-section {
                padding: 5rem;
            }
            .form-section {
                padding: 4rem;
            }
            .error-container {
                max-width: 40rem;
                padding: 3.5rem;
            }
            .error-code {
                font-size: 12rem;
            }
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <!-- Branding Section (visible on large screens) -->
        <div class="branding-section">
            <!-- Logo -->
            <div class="mb-8">
                <div class="bg-white p-4 rounded-2xl shadow-2xl inline-block">
                    <img src="<%= logoUrl %>" alt="<%= siteName %>" class="h-20 w-auto">
                </div>
            </div>

            <!-- Title -->
            <h1 class="text-4xl font-bold mb-4"><%= siteName %></h1>
            <p class="text-xl text-white/80 mb-8"><%= companyName %></p>

            <!-- Error Illustration -->
            <div class="floating mb-8">
                <i class="fas fa-compass text-8xl text-white/60"></i>
            </div>

            <!-- Features -->
            <div class="w-full max-w-md">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <div class="text-left">
                        <div class="font-semibold" data-th="ตรวจสอบ URL" data-en="Check URL"><%= isEnglish ? 'Check URL' : 'ตรวจสอบ URL' %></div>
                        <div class="text-sm text-white/70" data-th="URL อาจพิมพ์ผิด" data-en="URL might be mistyped"><%= isEnglish ? 'URL might be mistyped' : 'URL อาจพิมพ์ผิด' %></div>
                    </div>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="text-left">
                        <div class="font-semibold" data-th="กลับหน้าหลัก" data-en="Go to Homepage"><%= isEnglish ? 'Go to Homepage' : 'กลับหน้าหลัก' %></div>
                        <div class="text-sm text-white/70" data-th="เริ่มต้นใหม่อีกครั้ง" data-en="Start fresh again"><%= isEnglish ? 'Start fresh again' : 'เริ่มต้นใหม่อีกครั้ง' %></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Error Form Section -->
        <div class="form-section">
            <div class="error-container text-center">
                <!-- Error Code -->
                <div class="error-code">404</div>

                <!-- Error Icon -->
                <div class="mx-auto flex items-center justify-center w-20 h-20 bg-yellow-100 rounded-full mb-6">
                    <i class="fas fa-search text-yellow-600 text-3xl"></i>
                </div>

                <!-- Error Title -->
                <h1 class="text-2xl font-bold text-gray-900 mb-4">
                    <%= t('pageNotFound') %>
                </h1>

                <!-- Error Message -->
                <p class="text-gray-600 mb-8">
                    <%= typeof message !== 'undefined' ? message : t('pageNotFoundMessage') %>
                </p>

                <!-- Action Buttons -->
                <div class="space-y-3">
                    <button onclick="history.back()" class="btn-primary">
                        <i class="fas fa-arrow-left"></i>
                        <%= t('goBack') %>
                    </button>

                    <a href="/dashboard" class="btn-secondary">
                        <i class="fas fa-home"></i>
                        <%= t('goHome') %>
                    </a>

                    <a href="/auth/login" class="btn-outline">
                        <i class="fas fa-sign-in-alt"></i>
                        <%= t('login') %>
                    </a>
                </div>

                <!-- Help Contact -->
                <div class="mt-8 pt-6 border-t border-gray-200">
                    <p class="text-sm text-gray-500">
                        <%= t('ifProblemPersists') %>
                        <a href="mailto:support@rukchaihongyen.com" class="text-blue-600 hover:text-blue-800">
                            <%= t('supportTeam') %>
                        </a>
                    </p>
                </div>

                <!-- Footer -->
                <div class="text-center mt-6">
                    <p class="text-xs text-gray-400">
                        &copy; <%= new Date().getFullYear() %> <%= companyName %>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Auto-redirect script for 404 errors -->
    <script>
        setTimeout(() => {
            if (confirm('<%= isEnglish ? "Do you want to return to the homepage?" : "ต้องการกลับหน้าหลักหรือไม่?" %>')) {
                window.location.href = '/dashboard';
            }
        }, 15000);
    </script>
</body>
</html>
