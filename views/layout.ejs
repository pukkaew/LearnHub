    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script>
        // Comprehensive Navigation JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
            const mobileMenuIcon = document.getElementById('mobile-menu-icon');
            const mobileMenu = document.getElementById('mobile-menu');
            const userMenuBtn = document.getElementById('user-menu-btn');
            const userMenu = document.getElementById('user-menu');
            const notificationsBtn = document.getElementById('notifications-btn');

            // Mobile menu toggle
            if (mobileMenuToggle && mobileMenu) {
                mobileMenuToggle.addEventListener('click', function() {
                    mobileMenu.classList.toggle('open');

                    if (mobileMenu.classList.contains('open')) {
                        mobileMenuIcon.classList.remove('fa-bars');
                        mobileMenuIcon.classList.add('fa-times');
                    } else {
                        mobileMenuIcon.classList.remove('fa-times');
                        mobileMenuIcon.classList.add('fa-bars');
                    }
                });
            }

            // User menu toggle
            if (userMenuBtn && userMenu) {
                userMenuBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userMenu.classList.toggle('open');

                    const chevron = userMenuBtn.querySelector('.fa-chevron-down');
                    if (chevron) {
                        if (userMenu.classList.contains('open')) {
                            chevron.style.transform = 'rotate(180deg)';
                        } else {
                            chevron.style.transform = 'rotate(0deg)';
                        }
                    }
                });

                // Close dropdown when clicking outside
                document.addEventListener('click', function() {
                    userMenu.classList.remove('open');
                    const chevron = userMenuBtn?.querySelector('.fa-chevron-down');
                    if (chevron) chevron.style.transform = 'rotate(0deg)';
                });

                // Prevent dropdown close when clicking inside
                userMenu.addEventListener('click', function(e) {
                    e.stopPropagation();
                });
            }

            // Language menu toggle only (event listeners handled by LanguageManager)
            const languageSwitcher = document.getElementById('language-switcher');
            const languageMenu = document.getElementById('language-menu');

            // Enhanced Language menu toggle
            if (languageSwitcher && languageMenu) {
                languageSwitcher.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const isOpen = !languageMenu.classList.contains('hidden');

                    if (isOpen) {
                        // Close menu
                        languageMenu.classList.add('hidden');
                        languageMenu.classList.remove('open');
                        languageSwitcher.classList.remove('active');
                    } else {
                        // Open menu
                        languageMenu.classList.remove('hidden');
                        languageMenu.classList.add('open');
                        languageSwitcher.classList.add('active');

                        // Close other menus
                        if (userMenu) {
                            userMenu.classList.remove('open');
                            const chevron = userMenuBtn?.querySelector('.fa-chevron-down');
                            if (chevron) chevron.style.transform = 'rotate(0deg)';
                        }
                    }
                });

                // Prevent dropdown close when clicking inside
                languageMenu.addEventListener('click', function(e) {
                    e.stopPropagation();
                });

                document.addEventListener('click', function() {
                    languageMenu.classList.add('hidden');
                    languageMenu.classList.remove('open');
                    languageSwitcher.classList.remove('active');
                });
            }

            // Auto-hide flash messages
            setTimeout(() => {
                const successMsg = document.getElementById('success-message');
                const errorMsg = document.getElementById('error-message');
                if (successMsg) successMsg.style.display = 'none';
                if (errorMsg) errorMsg.style.display = 'none';
            }, 5000);

            // Load notifications
            loadNotifications();
        });

        // Logout function
        async function logout() {
            try {
                // Use form submission instead of fetch to handle redirects properly
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/auth/logout';
                form.style.display = 'none';

                // Add CSRF token if available
                const csrfInput = document.createElement('input');
                csrfInput.type = 'hidden';
                csrfInput.name = '_csrf';
                csrfInput.value = '<%= locals.csrfToken || "" %>';
                form.appendChild(csrfInput);

                document.body.appendChild(form);

                // Clear any stored data before submitting
                localStorage.clear();
                sessionStorage.clear();

                // Submit the form - this will follow the redirect
                form.submit();
            } catch (error) {
                console.error('Logout error:', error);
                // Force redirect if there's an error
                window.location.href = '/auth/login';
            }
        }

        // Load notifications
        function loadNotifications() {
            <% if (locals.user) { %>
            fetch('/dashboard/api/notifications?limit=5')
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.unreadCount > 0) {
                        const badge = document.getElementById('notification-badge');
                        badge.textContent = data.unreadCount;
                        badge.classList.remove('hidden');
                    }
                });
            <% } %>
        }

        // Global utilities
        window.showSuccess = function(message) {
            const alert = document.createElement('div');
            alert.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
            alert.innerHTML = `<i class="fas fa-check-circle mr-2"></i>${message}`;
            document.body.appendChild(alert);
            setTimeout(() => alert.remove(), 3000);
        };

        window.showError = function(message) {
            const alert = document.createElement('div');
            alert.className = 'fixed top-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
            alert.innerHTML = `<i class="fas fa-exclamation-circle mr-2"></i>${message}`;
            document.body.appendChild(alert);
            setTimeout(() => alert.remove(), 3000);
        };

        // Enhanced Language System
        const LanguageManager = {
            current: 'th',
            languages: {
                th: { name: 'ไทย', native: 'ภาษาไทย' },
                en: { name: 'English', native: 'English' }
            },

            init() {
                console.log('🌐 Initializing Language Manager...');
                // Get current language from server-side template, then sync with localStorage
                const serverLang = '<%= currentLanguage %>' || 'th';
                const savedLang = this.getSavedLanguage();

                // If server and localStorage don't match, update localStorage to match server
                if (savedLang && savedLang !== serverLang) {
                    console.log(`🔄 Syncing localStorage (${savedLang}) with server (${serverLang})`);
                    localStorage.setItem('ruxchai_language', serverLang);
                    sessionStorage.setItem('ruxchai_language', serverLang);
                }

                this.current = serverLang;
                console.log('📍 Current language:', this.current);
                this.updateUI();
                this.bindEvents();
            },

            getSavedLanguage() {
                return localStorage.getItem('ruxchai_language') ||
                       sessionStorage.getItem('ruxchai_language');
            },

            updateUI() {
                const currentLangText = document.getElementById('current-language-text');
                const thBtn = document.getElementById('lang-th-btn');
                const enBtn = document.getElementById('lang-en-btn');
                const mobileThBtn = document.getElementById('mobile-lang-th-btn');
                const mobileEnBtn = document.getElementById('mobile-lang-en-btn');

                if (currentLangText) {
                    const lang = this.languages[this.current];
                    currentLangText.textContent = lang.name;
                    console.log('✅ Updated UI language text to:', lang.name);
                }

                // Update active states for desktop
                if (thBtn && enBtn) {
                    thBtn.classList.remove('active');
                    enBtn.classList.remove('active');
                    if (this.current === 'th') {
                        thBtn.classList.add('active');
                    } else {
                        enBtn.classList.add('active');
                    }
                    console.log('✅ Updated desktop active button states');
                }

                // Update active states for mobile
                if (mobileThBtn && mobileEnBtn) {
                    mobileThBtn.classList.remove('active');
                    mobileEnBtn.classList.remove('active');
                    if (this.current === 'th') {
                        mobileThBtn.classList.add('active');
                    } else {
                        mobileEnBtn.classList.add('active');
                    }
                    console.log('✅ Updated mobile active button states');
                }

                // Update document language
                document.documentElement.lang = this.current;
            },

            bindEvents() {
                const thBtn = document.getElementById('lang-th-btn');
                const enBtn = document.getElementById('lang-en-btn');
                const mobileThBtn = document.getElementById('mobile-lang-th-btn');
                const mobileEnBtn = document.getElementById('mobile-lang-en-btn');

                console.log('🔗 Binding language events...');
                console.log('TH Button:', thBtn);
                console.log('EN Button:', enBtn);
                console.log('Mobile TH Button:', mobileThBtn);
                console.log('Mobile EN Button:', mobileEnBtn);

                if (thBtn) {
                    thBtn.addEventListener('click', (e) => {
                        e.preventDefault();
                        e.stopPropagation();
                        console.log('🇹🇭 Thai button clicked');
                        this.changeLanguage('th');
                    });
                }

                if (enBtn) {
                    enBtn.addEventListener('click', (e) => {
                        e.preventDefault();
                        e.stopPropagation();
                        console.log('🇺🇸 English button clicked');
                        this.changeLanguage('en');
                    });
                }

                if (mobileThBtn) {
                    mobileThBtn.addEventListener('click', (e) => {
                        e.preventDefault();
                        e.stopPropagation();
                        console.log('📱🇹🇭 Mobile Thai button clicked');
                        this.changeLanguage('th');
                    });
                }

                if (mobileEnBtn) {
                    mobileEnBtn.addEventListener('click', (e) => {
                        e.preventDefault();
                        e.stopPropagation();
                        console.log('📱🇺🇸 Mobile English button clicked');
                        this.changeLanguage('en');
                    });
                }
            },

            async changeLanguage(lang) {
                console.log('🔄 Changing language to:', lang);
                if (lang === this.current) {
                    console.log('⏭️ Same language, skipping');
                    return;
                }

                try {
                    // Save to both localStorage and sessionStorage
                    localStorage.setItem('ruxchai_language', lang);
                    sessionStorage.setItem('ruxchai_language', lang);
                    this.current = lang;
                    this.updateUI();

                    console.log('📡 Sending language change to server...');

                    // Send to server
                    const response = await fetch('/language/switch', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: JSON.stringify({ language: lang })
                    });

                    console.log('📡 Server response:', response.status);

                    if (response.ok) {
                        const data = await response.json();
                        console.log('📄 Response data:', data);
                        if (data.success) {
                            // Show success message
                            this.showNotification(`เปลี่ยนภาษาเป็น ${this.languages[lang].native} เรียบร้อยแล้ว`, 'success');

                            // Reload page to apply server-side language changes
                            setTimeout(() => {
                                console.log('🔄 Reloading page...');
                                window.location.reload();
                            }, 1000);
                        }
                    } else {
                        throw new Error(`Server responded with ${response.status}`);
                    }
                } catch (error) {
                    console.error('❌ Error switching language:', error);
                    this.showNotification('เกิดข้อผิดพลาดในการเปลี่ยนภาษา', 'error');
                }
            },

            showNotification(message, type) {
                const notification = document.createElement('div');
                notification.className = `fixed top-4 right-4 px-6 py-3 rounded-lg shadow-lg z-50 transition-all duration-300 transform translate-x-full`;
                notification.className += type === 'success' ? ' bg-green-500 text-white' : ' bg-red-500 text-white';
                notification.innerHTML = `<i class="fas fa-${type === 'success' ? 'check' : 'exclamation'}-circle mr-2"></i>${message}`;

                document.body.appendChild(notification);

                // Animate in
                setTimeout(() => {
                    notification.style.transform = 'translateX(0)';
                }, 100);

                // Remove after 3 seconds
                setTimeout(() => {
                    notification.style.transform = 'translateX(100%)';
                    setTimeout(() => notification.remove(), 300);
                }, 3000);
            }
        };

        // Legacy function for compatibility - REMOVED to avoid conflicts

        // Initialize language system on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize the enhanced language manager after a small delay
            setTimeout(() => {
                LanguageManager.init();
            }, 100);
        });

        // Enhanced Responsive Navigation Handler
        const ResponsiveNavigationManager = {
            init() {
                this.setupResizeHandler();
                this.handleInitialLayout();
                this.clearConflictingStyles();
            },

            setupResizeHandler() {
                let resizeTimer;

                window.addEventListener('resize', () => {
                    // Clear previous timer
                    clearTimeout(resizeTimer);

                    // Immediate response for better UX
                    this.clearConflictingStyles();

                    // Debounce resize events for performance
                    resizeTimer = setTimeout(() => {
                        this.handleResize();
                    }, 50);
                });

                // Also listen for orientationchange on mobile
                window.addEventListener('orientationchange', () => {
                    setTimeout(() => {
                        this.handleResize();
                    }, 200);
                });
            },

            handleInitialLayout() {
                // Ensure proper layout on page load
                requestAnimationFrame(() => {
                    this.clearConflictingStyles();
                    this.updateNavigationLayout();
                    this.handleMenuVisibility();
                });
            },

            handleResize() {
                // Force layout recalculation for smooth transitions
                requestAnimationFrame(() => {
                    this.clearConflictingStyles();
                    this.updateNavigationLayout();
                    this.handleMenuVisibility();
                    this.forceStyleRefresh();
                });
            },

            clearConflictingStyles() {
                // Remove any inline styles that might conflict with CSS media queries
                const elements = [
                    '.nav-container-wrapper',
                    '.nav-main-container',
                    '.nav-menu',
                    '.nav-mobile-toggle',
                    '.nav-mobile-menu'
                ];

                elements.forEach(selector => {
                    const element = document.querySelector(selector);
                    if (element) {
                        // Remove conflicting inline display styles
                        element.style.removeProperty('display');
                        element.style.removeProperty('height');
                        element.style.removeProperty('padding');
                        element.style.removeProperty('margin');
                    }
                });
            },

            updateNavigationLayout() {
                const navContainer = document.querySelector('.nav-main-container');
                const mobileMenu = document.getElementById('mobile-menu');

                if (navContainer) {
                    // Let CSS media queries handle the display
                    navContainer.classList.add('nav-responsive-active');
                }

                // Hide mobile menu if screen size changes to desktop
                if (mobileMenu && window.innerWidth > 768) {
                    mobileMenu.classList.remove('open');
                }
            },

            handleMenuVisibility() {
                const currentWidth = window.innerWidth;
                console.log(`🔄 Screen width changed to: ${currentWidth}px`);

                // Force CSS re-evaluation by toggling a class
                const nav = document.querySelector('.ruxchai-nav');
                if (nav) {
                    nav.classList.add('responsive-update');
                    requestAnimationFrame(() => {
                        nav.classList.remove('responsive-update');
                    });
                }
            },

            forceStyleRefresh() {
                // Force browser to recalculate styles
                const nav = document.querySelector('.ruxchai-nav');
                if (nav) {
                    const display = nav.style.display;
                    nav.style.display = 'none';
                    nav.offsetHeight; // Force reflow
                    nav.style.display = display || '';
                }
            }
        };

        // Mobile Menu Toggle Handler
        function setupMobileMenuToggle() {
            const mobileToggle = document.getElementById('mobile-menu-toggle');
            const mobileMenu = document.getElementById('mobile-menu');
            const mobileMenuIcon = document.getElementById('mobile-menu-icon');

            if (mobileToggle && mobileMenu) {
                mobileToggle.addEventListener('click', function(e) {
                    e.preventDefault();

                    const isOpen = mobileMenu.classList.contains('open');

                    if (isOpen) {
                        mobileMenu.classList.remove('open');
                        mobileMenu.style.display = 'none';
                        if (mobileMenuIcon) {
                            mobileMenuIcon.className = 'fas fa-bars text-xl';
                        }
                    } else {
                        mobileMenu.classList.add('open');
                        mobileMenu.style.display = 'block';
                        if (mobileMenuIcon) {
                            mobileMenuIcon.className = 'fas fa-times text-xl';
                        }
                    }
                });
            }

            // Mobile HR Submenu Toggle
            const mobileHrToggle = document.getElementById('mobile-hr-menu-toggle');
            const mobileHrSubmenu = document.getElementById('mobile-hr-submenu');

            if (mobileHrToggle && mobileHrSubmenu) {
                mobileHrToggle.addEventListener('click', function(e) {
                    e.preventDefault();

                    const isOpen = mobileHrSubmenu.classList.contains('open');

                    if (isOpen) {
                        mobileHrSubmenu.classList.remove('open');
                        mobileHrToggle.classList.remove('open');
                    } else {
                        mobileHrSubmenu.classList.add('open');
                        mobileHrToggle.classList.add('open');
                    }
                });
            }
        }

        // Initialize responsive navigation on DOM ready
        document.addEventListener('DOMContentLoaded', function() {
            ResponsiveNavigationManager.init();
            setupMobileMenuToggle();
        });

    </script>

