<div class="bg-gradient-to-br from-ruxchai-primary/5 to-ruxchai-secondary/5 min-h-screen">
    <div class="container mx-auto px-6 py-8">
        <!-- Header Section -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div class="mb-4 md:mb-0">
                <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= t('positionManagement') %></h1>
                <p class="text-gray-600"><%= t('positionsInOrg') %></p>
            </div>
            <div class="flex space-x-3">
                <a href="/organization/positions/create" class="bg-ruxchai-primary text-white px-6 py-3 rounded-lg hover:bg-ruxchai-primary/90 transition-colors shadow-md">
                    <i class="fas fa-plus mr-2"></i><%= t('addPosition') %>
                </a>
                <a href="/organization" class="bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition-colors shadow-md">
                    <i class="fas fa-arrow-left mr-2"></i><%= t('back') %>
                </a>
            </div>
        </div>

        <!-- Stats Cards -->
        <% if (statistics) { %>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-center">
                        <div class="bg-blue-100 p-3 rounded-lg">
                            <i class="fas fa-briefcase text-blue-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-sm font-medium text-gray-500"><%= t('totalPositions') %></h3>
                            <p class="text-2xl font-bold text-gray-900"><%= statistics.total_positions || 0 %></p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-center">
                        <div class="bg-green-100 p-3 rounded-lg">
                            <i class="fas fa-users text-green-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-sm font-medium text-gray-500"><%= t('totalEmployees') %></h3>
                            <p class="text-2xl font-bold text-gray-900"><%= statistics.total_employees || 0 %></p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-center">
                        <div class="bg-purple-100 p-3 rounded-lg">
                            <i class="fas fa-user-tie text-purple-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-sm font-medium text-gray-500"><%= t('applicantPositions') %></h3>
                            <p class="text-2xl font-bold text-gray-900"><%= statistics.applicant_positions || 0 %></p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-center">
                        <div class="bg-yellow-100 p-3 rounded-lg">
                            <i class="fas fa-check-circle text-yellow-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-sm font-medium text-gray-500"><%= t('activePositions') %></h3>
                            <p class="text-2xl font-bold text-gray-900"><%= statistics.active_positions || 0 %></p>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>


        <!-- Filters and Search -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
            <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
                <div class="relative">
                    <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                    <input type="text" id="searchPositions" placeholder="<%= t('searchPosition') %>..."
                           class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-primary focus:border-transparent">
                </div>
                <select id="typeFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-primary focus:border-transparent">
                    <option value=""><%= t('allTypes') %></option>
                    <option value="EMPLOYEE"><%= t('employee') %></option>
                    <option value="APPLICANT"><%= t('applicant') %></option>
                </select>
                <select id="unitFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-primary focus:border-transparent">
                    <option value=""><%= t('allUnits') %></option>
                    <% if (units) { %>
                        <% units.forEach(unit => { %>
                            <option value="<%= unit.unit_id %>"><%= unit.unit_name_th %></option>
                        <% }); %>
                    <% } %>
                </select>
                <select id="statusFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-primary focus:border-transparent">
                    <option value=""><%= t('allStatuses') %></option>
                    <option value="true"><%= t('active') %></option>
                    <option value="false"><%= t('inactive') %></option>
                </select>
                <select id="sortBy" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-primary focus:border-transparent">
                    <option value="latest"><%= t('latest') %></option>
                    <option value="name_asc"><%= t('nameAZ') %></option>
                    <option value="name_desc"><%= t('nameZA') %></option>
                </select>
            </div>
        </div>

        <!-- Positions Grid -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <div class="flex items-center justify-between mb-6 pb-4 border-b border-gray-200">
                <div class="text-sm text-gray-500">
                    <%= t('showing') %> <span id="displayCount"><%= positions ? positions.length : 0 %></span> <%= t('positions') %>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="text-sm text-gray-500 mr-2"><%= t('viewMode') %>:</span>
                    <button id="listViewBtn" onclick="changeView('list')" class="px-3 py-1 bg-ruxchai-primary text-white rounded-lg transition-colors">
                        <i class="fas fa-list mr-1"></i><%= t('listView') %>
                    </button>
                    <button id="gridViewBtn" onclick="changeView('grid')" class="px-3 py-1 bg-gray-200 text-gray-600 rounded-lg hover:bg-gray-300 transition-colors">
                        <i class="fas fa-th-large mr-1"></i><%= t('gridView') %>
                    </button>
                </div>
            </div>

            <!-- Grid View -->
            <div id="gridView" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                <% if (positions && positions.length > 0) { %>
                    <% positions.forEach(position => { %>
                        <div class="bg-white border border-gray-200 rounded-xl p-5 hover:shadow-lg transition-all duration-300">
                            <!-- Position Icon and Info -->
                            <div class="flex flex-col items-center text-center mb-4">
                                <div class="w-16 h-16 rounded-full bg-<%=
                                    position.position_type === 'EMPLOYEE' ? 'blue-100' : 'purple-100'
                                %> flex items-center justify-center mb-3">
                                    <i class="fas fa-briefcase text-<%=
                                        position.position_type === 'EMPLOYEE' ? 'blue' : 'purple'
                                    %>-600 text-2xl"></i>
                                </div>

                                <h3 class="font-semibold text-gray-900 text-lg mb-1"><%= position.position_name %></h3>
                                <% if (position.unit_code) { %>
                                    <p class="text-xs text-gray-400"><i class="fas fa-tag mr-1"></i><%= position.unit_code %></p>
                                <% } %>
                            </div>

                            <!-- Type and Status Badges -->
                            <div class="flex justify-center space-x-2 mb-4">
                                <span class="px-2 py-1 bg-<%=
                                    position.position_type === 'EMPLOYEE' ? 'blue-100 text-blue-800' : 'purple-100 text-purple-800'
                                %> text-xs rounded-full">
                                    <%= position.position_type === 'EMPLOYEE' ? t('employee') : t('applicant') %>
                                </span>
                                <span class="px-2 py-1 bg-<%=
                                    position.is_active ? 'green-100 text-green-800' : 'red-100 text-red-800'
                                %> text-xs rounded-full">
                                    <%= position.is_active ? t('active') : t('inactive') %>
                                </span>
                            </div>

                            <!-- Unit and Level -->
                            <div class="bg-gray-50 rounded-lg p-3 mb-4 text-center">
                                <div class="text-sm">
                                    <div class="flex items-center justify-center mb-1">
                                        <i class="fas fa-building text-gray-400 mr-2 text-xs"></i>
                                        <span class="text-gray-700 font-medium"><%= position.unit_name_th || t('noUnit') %></span>
                                    </div>
                                    <% if (position.level || position.position_level) { %>
                                        <div class="flex items-center justify-center mb-1">
                                            <i class="fas fa-layer-group text-gray-400 mr-2 text-xs"></i>
                                            <span class="text-gray-500 text-xs"><%= t('level') %> <%= position.level || position.position_level %></span>
                                        </div>
                                    <% } %>
                                    <% if (position.employee_count !== undefined) { %>
                                        <div class="flex items-center justify-center">
                                            <i class="fas fa-users text-gray-400 mr-2 text-xs"></i>
                                            <span class="text-gray-600 text-xs font-medium"><%= position.employee_count || 0 %> <%= t('people') %></span>
                                        </div>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex justify-center space-x-2 pt-4 border-t border-gray-200">
                                <a href="/organization/positions/<%= position.position_id %>"
                                   class="flex-1 bg-blue-50 text-blue-600 hover:bg-blue-100 px-3 py-2 rounded-lg transition-colors text-sm font-medium text-center"
                                   title="<%= t('view') %>">
                                    <i class="fas fa-eye mr-1"></i><%= t('view') %>
                                </a>
                                <a href="/organization/positions/<%= position.position_id %>/edit"
                                   class="flex-1 bg-green-50 text-green-600 hover:bg-green-100 px-3 py-2 rounded-lg transition-colors text-sm font-medium text-center"
                                   title="<%= t('edit') %>">
                                    <i class="fas fa-edit mr-1"></i><%= t('edit') %>
                                </a>
                                <button onclick="deletePosition(<%= position.position_id %>)"
                                        class="bg-red-50 text-red-600 hover:bg-red-100 px-3 py-2 rounded-lg transition-colors text-sm"
                                        title="<%= t('delete') %>">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-span-4 p-8 text-center text-gray-500">
                        <i class="fas fa-briefcase text-gray-400 text-4xl mb-4"></i>
                        <p><%= t('noPositionsFound') %></p>
                    </div>
                <% } %>
            </div>

            <!-- List View -->
            <div id="listView" class="hidden space-y-3">
                <% if (positions && positions.length > 0) { %>
                    <% positions.forEach(position => { %>
                        <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-all duration-300">
                            <div class="flex items-center justify-between">
                                <!-- Left: Position Info -->
                                <div class="flex items-center flex-1">
                                    <div class="w-12 h-12 rounded-lg bg-<%=
                                        position.position_type === 'EMPLOYEE' ? 'blue-100' : 'purple-100'
                                    %> flex items-center justify-center mr-4">
                                        <i class="fas fa-briefcase text-<%=
                                            position.position_type === 'EMPLOYEE' ? 'blue' : 'purple'
                                        %>-600 text-xl"></i>
                                    </div>
                                    <div class="flex-1">
                                        <div class="flex items-center space-x-2 mb-1">
                                            <h3 class="font-semibold text-gray-900 text-lg"><%= position.position_name %></h3>
                                            <span class="px-2 py-1 bg-<%=
                                                position.position_type === 'EMPLOYEE' ? 'blue-100 text-blue-800' : 'purple-100 text-purple-800'
                                            %> text-xs rounded-full">
                                                <%= position.position_type === 'EMPLOYEE' ? t('employee') : t('applicant') %>
                                            </span>
                                            <span class="px-2 py-1 bg-<%=
                                                position.is_active ? 'green-100 text-green-800' : 'red-100 text-red-800'
                                            %> text-xs rounded-full">
                                                <%= position.is_active ? t('active') : t('inactive') %>
                                            </span>
                                        </div>
                                        <div class="flex items-center space-x-4 text-sm text-gray-500">
                                            <div class="flex items-center">
                                                <i class="fas fa-building text-gray-400 mr-1"></i>
                                                <span><%= position.unit_name_th || t('noUnit') %></span>
                                            </div>
                                            <% if (position.level || position.position_level) { %>
                                                <div class="flex items-center">
                                                    <i class="fas fa-layer-group text-gray-400 mr-1"></i>
                                                    <span><%= t('level') %> <%= position.level || position.position_level %></span>
                                                </div>
                                            <% } %>
                                            <% if (position.employee_count) { %>
                                                <div class="flex items-center">
                                                    <i class="fas fa-users text-gray-400 mr-1"></i>
                                                    <span><%= position.employee_count %> <%= t('people') %></span>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>

                                <!-- Right: Action Buttons -->
                                <div class="flex items-center space-x-2 ml-4">
                                    <a href="/organization/positions/<%= position.position_id %>"
                                       class="bg-blue-50 text-blue-600 hover:bg-blue-100 px-4 py-2 rounded-lg transition-colors text-sm font-medium"
                                       title="<%= t('view') %>">
                                        <i class="fas fa-eye mr-1"></i><%= t('view') %>
                                    </a>
                                    <a href="/organization/positions/<%= position.position_id %>/edit"
                                       class="bg-green-50 text-green-600 hover:bg-green-100 px-4 py-2 rounded-lg transition-colors text-sm font-medium"
                                       title="<%= t('edit') %>">
                                        <i class="fas fa-edit mr-1"></i><%= t('edit') %>
                                    </a>
                                    <button onclick="deletePosition(<%= position.position_id %>)"
                                            class="bg-red-50 text-red-600 hover:bg-red-100 px-3 py-2 rounded-lg transition-colors text-sm"
                                            title="<%= t('delete') %>">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="p-8 text-center text-gray-500">
                        <i class="fas fa-briefcase text-gray-400 text-4xl mb-4"></i>
                        <p><%= t('noPositionsFound') %></p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<style>
@keyframes slideIn {
    from {
        transform: translateX(100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

.animate-slide-in {
    animation: slideIn 0.3s ease-out;
}
</style>

<script>
// Pass translations to JavaScript
const translations = {
    confirmDeletePosition: '<%= t("confirmDeletePosition") %>',
    positionDeletedSuccess: '<%= t("positionDeletedSuccess") %>',
    error: '<%= t("errorDelete") %>'
};

// View mode management
let currentView = localStorage.getItem('positionsView') || 'list';

// Initialize view on page load
document.addEventListener('DOMContentLoaded', function() {
    changeView(currentView, false);

    // Set filter values from URL params
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('type')) {
        document.getElementById('typeFilter').value = urlParams.get('type');
    }
    if (urlParams.get('unit_id')) {
        document.getElementById('unitFilter').value = urlParams.get('unit_id');
    }
    if (urlParams.get('is_active')) {
        document.getElementById('statusFilter').value = urlParams.get('is_active');
    }
    if (urlParams.get('search')) {
        document.getElementById('searchPositions').value = urlParams.get('search');
    }

    // Show flash messages as toast notifications
    <% if (typeof success_msg !== 'undefined' && success_msg && success_msg.length > 0) { %>
        showMessage(<%- JSON.stringify(success_msg[0]) %>, 'success');
    <% } %>
    <% if (typeof error_msg !== 'undefined' && error_msg && error_msg.length > 0) { %>
        showMessage(<%- JSON.stringify(error_msg[0]) %>, 'error');
    <% } %>

    // Add event listeners for filters
    document.getElementById('typeFilter').addEventListener('change', applyFilters);
    document.getElementById('unitFilter').addEventListener('change', applyFilters);
    document.getElementById('statusFilter').addEventListener('change', applyFilters);
    document.getElementById('searchPositions').addEventListener('keyup', debounce(applyFilters, 500));
});

function applyFilters() {
    const type = document.getElementById('typeFilter').value;
    const unitId = document.getElementById('unitFilter').value;
    const status = document.getElementById('statusFilter').value;
    const search = document.getElementById('searchPositions').value;

    const params = new URLSearchParams();
    if (type) params.append('type', type);
    if (unitId) params.append('unit_id', unitId);
    if (status) params.append('is_active', status);
    if (search) params.append('search', search);

    window.location.href = `/organization/positions?${params.toString()}`;
}

function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
        const later = () => {
            clearTimeout(timeout);
            func(...args);
        };
        clearTimeout(timeout);
        timeout = setTimeout(later, wait);
    };
}

function changeView(view, save = true) {
    currentView = view;

    const gridView = document.getElementById('gridView');
    const listView = document.getElementById('listView');
    const gridBtn = document.getElementById('gridViewBtn');
    const listBtn = document.getElementById('listViewBtn');

    if (view === 'grid') {
        gridView.classList.remove('hidden');
        gridView.classList.add('grid');
        listView.classList.add('hidden');
        listView.classList.remove('space-y-3');

        gridBtn.classList.remove('bg-gray-200', 'text-gray-600');
        gridBtn.classList.add('bg-ruxchai-primary', 'text-white');

        listBtn.classList.remove('bg-ruxchai-primary', 'text-white');
        listBtn.classList.add('bg-gray-200', 'text-gray-600');
    } else {
        gridView.classList.add('hidden');
        gridView.classList.remove('grid');
        listView.classList.remove('hidden');
        listView.classList.add('space-y-3');

        listBtn.classList.remove('bg-gray-200', 'text-gray-600');
        listBtn.classList.add('bg-ruxchai-primary', 'text-white');

        gridBtn.classList.remove('bg-ruxchai-primary', 'text-white');
        gridBtn.classList.add('bg-gray-200', 'text-gray-600');
    }

    // Save preference to localStorage
    if (save) {
        localStorage.setItem('positionsView', view);
    }
}

function deletePosition(positionId) {
    if (!confirm(translations.confirmDeletePosition)) return;

    fetch(`/organization/positions/${positionId}`, {
        method: 'DELETE',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showMessage(translations.positionDeletedSuccess, 'success');
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        } else {
            showMessage(data.message || translations.error, 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showMessage(translations.error, 'error');
    });
}

function showMessage(message, type = 'info') {
    const messageDiv = document.createElement('div');
    const icon = type === 'success' ? 'fa-check-circle' : type === 'error' ? 'fa-exclamation-circle' : 'fa-info-circle';
    const bgColor = type === 'success' ? 'bg-green-500' : type === 'error' ? 'bg-red-500' : 'bg-blue-500';

    messageDiv.className = `fixed top-4 right-4 z-50 px-6 py-4 rounded-lg text-white shadow-lg ${bgColor} flex items-center space-x-3 animate-slide-in`;
    messageDiv.innerHTML = `
        <i class="fas ${icon} text-xl"></i>
        <span class="font-medium">${message}</span>
    `;

    document.body.appendChild(messageDiv);

    // Auto fade out after 3 seconds
    setTimeout(() => {
        messageDiv.style.transition = 'opacity 0.5s ease';
        messageDiv.style.opacity = '0';
        setTimeout(() => {
            messageDiv.remove();
        }, 500);
    }, 3000);
}
</script>
