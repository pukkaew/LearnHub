<%- contentFor('body') %>

<div class="container mx-auto px-4 py-8 max-w-5xl">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900"><%= t('createQuestion') || 'Create Question' %></h1>
            <p class="text-gray-600 mt-2"><%= t('createQuestionDesc') || 'Add a new question to your question bank' %></p>
        </div>
        <a href="/courses/<%= courseId %>/questions"
            class="px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors flex items-center gap-2">
            <i class="fas fa-arrow-left"></i>
            <span><%= t('back') || 'Back' %></span>
        </a>
    </div>

    <!-- Form -->
    <form id="createQuestionForm" class="space-y-6">
        <!-- Question Content Section -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center gap-2">
                <i class="fas fa-question-circle text-blue-600"></i>
                <%= t('questionContent') || 'Question Content' %>
            </h2>

            <!-- Question Type -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t('questionType') || 'Question Type' %> <span class="text-red-500">*</span>
                </label>
                <select id="questionType" name="question_type" required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">-- <%= t('selectType') || 'Select Type' %> --</option>
                    <option value="multiple-choice">Multiple Choice</option>
                    <option value="true-false">True/False</option>
                    <option value="short-answer">Short Answer</option>
                    <option value="essay">Essay</option>
                    <option value="matching">Matching</option>
                    <option value="fill-in-blank">Fill in Blank</option>
                </select>
            </div>

            <!-- Question Text -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t('questionText') || 'Question' %> <span class="text-red-500">*</span>
                </label>
                <textarea id="questionText" name="question_text" rows="4" required
                    placeholder="<%= t('enterQuestion') || 'Enter your question here...' %>"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
                <p class="text-sm text-gray-500 mt-1">
                    <%= t('supportsHTML') || 'Supports basic HTML formatting' %>
                </p>
            </div>

            <!-- Media Files -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-image mr-1"></i> <%= t('imageUrl') || 'Image URL' %>
                    </label>
                    <input type="url" name="image_url" placeholder="https://..."
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-video mr-1"></i> <%= t('videoUrl') || 'Video URL' %>
                    </label>
                    <input type="url" name="video_url" placeholder="https://..."
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-volume-up mr-1"></i> <%= t('audioUrl') || 'Audio URL' %>
                    </label>
                    <input type="url" name="audio_url" placeholder="https://..."
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                </div>
            </div>
        </div>

        <!-- Answer Options Section -->
        <div id="optionsSection" class="bg-white rounded-lg shadow-sm p-6 border border-gray-200" style="display: none;">
            <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center gap-2">
                <i class="fas fa-list text-blue-600"></i>
                <%= t('answerOptions') || 'Answer Options' %>
            </h2>

            <div id="optionsList" class="space-y-4">
                <!-- Options will be added here dynamically -->
            </div>

            <button type="button" id="addOptionBtn"
                class="mt-4 px-4 py-2 text-blue-600 bg-blue-50 border border-blue-200 rounded-lg hover:bg-blue-100 transition-colors flex items-center gap-2">
                <i class="fas fa-plus"></i>
                <%= t('addOption') || 'Add Option' %>
            </button>
        </div>

        <!-- Question Settings Section -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center gap-2">
                <i class="fas fa-cog text-blue-600"></i>
                <%= t('questionSettings') || 'Question Settings' %>
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Difficulty Level -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <%= t('difficulty') || 'Difficulty Level' %> <span class="text-red-500">*</span>
                    </label>
                    <select name="difficulty_level" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="easy">Easy</option>
                        <option value="medium" selected>Medium</option>
                        <option value="hard">Hard</option>
                        <option value="expert">Expert</option>
                    </select>
                </div>

                <!-- Default Points -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <%= t('points') || 'Points' %>
                    </label>
                    <input type="number" name="default_points" value="1" min="0.25" step="0.25"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Bloom's Taxonomy -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <%= t('bloomTaxonomy') || 'Bloom\'s Taxonomy Level' %>
                    </label>
                    <select name="bloom_taxonomy_level"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                        <option value="">-- <%= t('select') || 'Select' %> --</option>
                        <option value="remember">Remember</option>
                        <option value="understand">Understand</option>
                        <option value="apply">Apply</option>
                        <option value="analyze">Analyze</option>
                        <option value="evaluate">Evaluate</option>
                        <option value="create">Create</option>
                    </select>
                </div>

                <!-- Chapter/Lesson (if applicable) -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <%= t('chapter') || 'Chapter' %> (Optional)
                    </label>
                    <input type="number" name="chapter_id" placeholder="Chapter ID"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                </div>
            </div>

            <!-- Topic Tags -->
            <div class="mt-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t('topicTags') || 'Topic Tags' %>
                </label>
                <input type="text" name="topic_tags" placeholder='["tag1", "tag2", "tag3"]'
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
                <p class="text-sm text-gray-500 mt-1">
                    <%= t('tagsHelp') || 'Enter tags as JSON array or comma-separated' %>
                </p>
            </div>

            <!-- Learning Objective -->
            <div class="mt-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t('learningObjective') || 'Learning Objective' %>
                </label>
                <textarea name="learning_objective" rows="2"
                    placeholder="<%= t('learningObjectivePlaceholder') || 'What should students learn from this question?' %>"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"></textarea>
            </div>
        </div>

        <!-- Additional Information Section -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center gap-2">
                <i class="fas fa-info-circle text-blue-600"></i>
                <%= t('additionalInfo') || 'Additional Information' %>
            </h2>

            <!-- Explanation -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t('explanation') || 'Explanation' %>
                </label>
                <textarea name="explanation" rows="3"
                    placeholder="<%= t('explanationPlaceholder') || 'Explain why the answer is correct...' %>"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"></textarea>
            </div>

            <!-- Hint -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t('hint') || 'Hint' %>
                </label>
                <textarea name="hint" rows="2"
                    placeholder="<%= t('hintPlaceholder') || 'Optional hint to help students...' %>"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"></textarea>
            </div>

            <!-- Reference -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t('reference') || 'Reference' %>
                </label>
                <input type="text" name="reference"
                    placeholder="<%= t('referencePlaceholder') || 'Textbook page, chapter, or external resource...' %>"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            </div>

            <!-- Public Question -->
            <div class="flex items-center gap-3">
                <input type="checkbox" id="isPublic" name="is_public" value="1"
                    class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                <label for="isPublic" class="text-sm font-medium text-gray-700">
                    <%= t('makePublic') || 'Make this question available for other courses' %>
                </label>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-end gap-4">
            <a href="/courses/<%= courseId %>/questions"
                class="px-6 py-3 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                <%= t('cancel') || 'Cancel' %>
            </a>
            <button type="submit"
                class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2">
                <i class="fas fa-save"></i>
                <%= t('createQuestion') || 'Create Question' %>
            </button>
        </div>
    </form>
</div>

<script>
let optionCount = 0;

// Question Type Change Handler
document.getElementById('questionType').addEventListener('change', function() {
    const type = this.value;
    const optionsSection = document.getElementById('optionsSection');
    const optionsList = document.getElementById('optionsList');

    // Clear existing options
    optionsList.innerHTML = '';
    optionCount = 0;

    // Show options section for relevant types
    if (['multiple-choice', 'true-false', 'matching'].includes(type)) {
        optionsSection.style.display = 'block';

        if (type === 'true-false') {
            // Auto-create True/False options
            addOption('True', true);
            addOption('False', false);
            document.getElementById('addOptionBtn').style.display = 'none';
        } else {
            // Allow manual option creation
            document.getElementById('addOptionBtn').style.display = 'block';
            // Add 4 default options for multiple choice
            if (type === 'multiple-choice') {
                for (let i = 0; i < 4; i++) {
                    addOption('', i === 0);
                }
            }
        }
    } else {
        optionsSection.style.display = 'none';
    }
});

// Add Option
document.getElementById('addOptionBtn').addEventListener('click', function() {
    addOption('', false);
});

function addOption(text = '', isCorrect = false) {
    optionCount++;
    const optionHtml = `
        <div class="option-item flex items-start gap-4 p-4 border border-gray-200 rounded-lg bg-gray-50" data-option-id="${optionCount}">
            <div class="flex items-center pt-2">
                <input type="radio" name="correct_option" value="${optionCount}" ${isCorrect ? 'checked' : ''}
                    class="w-5 h-5 text-green-600 border-gray-300 focus:ring-2 focus:ring-green-500"
                    title="<%= t('markAsCorrect') || 'Mark as correct answer' %>">
            </div>
            <div class="flex-1">
                <input type="text" name="option_text_${optionCount}" value="${text}" required
                    placeholder="<%= t('optionText') || 'Option text' %>"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 mb-2">
                <textarea name="option_explanation_${optionCount}" rows="2"
                    placeholder="<%= t('optionExplanation') || 'Optional: Explain why this option is correct/incorrect' %>"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"></textarea>
            </div>
            <button type="button" onclick="removeOption(${optionCount})"
                class="px-3 py-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    `;
    document.getElementById('optionsList').insertAdjacentHTML('beforeend', optionHtml);
}

function removeOption(id) {
    const option = document.querySelector(`[data-option-id="${id}"]`);
    if (option) {
        option.remove();
    }
}

// Form Submission
document.getElementById('createQuestionForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const formData = new FormData(this);
    const questionType = formData.get('question_type');

    // Build question data
    const questionData = {
        course_id: <%= courseId %>,
        question_text: formData.get('question_text'),
        question_type: questionType,
        image_url: formData.get('image_url') || null,
        video_url: formData.get('video_url') || null,
        audio_url: formData.get('audio_url') || null,
        difficulty_level: formData.get('difficulty_level'),
        default_points: parseFloat(formData.get('default_points')),
        bloom_taxonomy_level: formData.get('bloom_taxonomy_level') || null,
        chapter_id: formData.get('chapter_id') ? parseInt(formData.get('chapter_id')) : null,
        topic_tags: formData.get('topic_tags') || null,
        learning_objective: formData.get('learning_objective') || null,
        explanation: formData.get('explanation') || null,
        hint: formData.get('hint') || null,
        reference: formData.get('reference') || null,
        is_public: formData.get('is_public') === '1'
    };

    // Build options array (for multiple-choice, true-false, matching)
    const options = [];
    if (['multiple-choice', 'true-false', 'matching'].includes(questionType)) {
        const correctOption = formData.get('correct_option');

        document.querySelectorAll('.option-item').forEach((item, index) => {
            const optionId = item.dataset.optionId;
            const optionText = formData.get(`option_text_${optionId}`);
            const optionExplanation = formData.get(`option_explanation_${optionId}`);

            if (optionText) {
                options.push({
                    option_text: optionText,
                    is_correct: correctOption === optionId,
                    option_order: index + 1,
                    explanation: optionExplanation || null
                });
            }
        });

        // Validate at least one correct answer
        if (!options.some(opt => opt.is_correct)) {
            alert('<%= t("selectCorrectAnswer") || "Please select the correct answer" %>');
            return;
        }
    }

    // Submit data
    try {
        const response = await fetch('/api/courses/<%= courseId %>/questions', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                ...questionData,
                options: options
            })
        });

        const result = await response.json();

        if (result.success) {
            alert('<%= t("questionCreated") || "Question created successfully!" %>');
            window.location.href = '/courses/<%= courseId %>/questions';
        } else {
            alert(result.message || '<%= t("error") || "An error occurred" %>');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('<%= t("error") || "An error occurred" %>');
    }
});
</script>
