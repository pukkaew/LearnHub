<script>
async function exportReport(reportType) {
    try {
        const response = await fetch(`/reports/export/${reportType}`, {
            method: 'GET',
            headers: {
                'Accept': 'text/csv'
            }
        });

        if (response.ok) {
            const blob = await response.blob();
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.style.display = 'none';
            a.href = url;
            a.download = `${reportType}-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            window.URL.revokeObjectURL(url);

            showSuccess(`ส่งออกรายงาน ${reportType} สำเร็จ`);
        } else {
            throw new Error('ไม่สามารถส่งออกรายงานได้');
        }
    } catch (error) {
        showError(error.message);
    }
}
</script>