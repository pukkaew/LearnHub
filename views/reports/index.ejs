<script>
document.addEventListener('DOMContentLoaded', function() {
    loadQuickStats();
    updateLastUpdate();
});

async function loadQuickStats() {
    try {
        const response = await fetch('/reports/api/course-analytics?timePeriod=30');
        const data = await response.json();

        if (data.success) {
            document.getElementById('statCourses').textContent = data.data.overview.totalCourses || 0;
            document.getElementById('statEnrollments').textContent = data.data.overview.totalEnrollments || 0;
            document.getElementById('statCompletion').textContent = (data.data.overview.completionRate || 0) + '%';
        }
    } catch (error) {
        console.error('Error loading stats:', error);
    }

    try {
        const activityResponse = await fetch('/reports/api/user-activity?timePeriod=today');
        const activityData = await activityResponse.json();

        if (activityData.success) {
            document.getElementById('statActiveUsers').textContent = activityData.data.overview.activeUsers || 0;
        }
    } catch (error) {
        console.error('Error loading activity stats:', error);
    }
}

function updateLastUpdate() {
    const now = new Date();
    const options = { day: '2-digit', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' };
    document.getElementById('lastUpdate').textContent = now.toLocaleDateString('th-TH', options);
}

async function exportReport(reportType) {
    try {
        let url = '';
        switch(reportType) {
            case 'course-enrollments':
                url = '/reports/api/export/course-enrollments';
                break;
            case 'learning-progress':
                url = '/reports/api/export/learning-progress';
                break;
            default:
                url = `/reports/export/${reportType}`;
        }

        const response = await fetch(url);

        if (response.ok) {
            const blob = await response.blob();
            const downloadUrl = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.style.display = 'none';
            a.href = downloadUrl;
            a.download = `${reportType}-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            window.URL.revokeObjectURL(downloadUrl);

            showSuccess(`ส่งออกรายงานสำเร็จ`);
        } else {
            throw new Error('ไม่สามารถส่งออกรายงานได้');
        }
    } catch (error) {
        showError(error.message);
    }
}

function showSuccess(message) {
    const alert = document.createElement('div');
    alert.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 animate-fade-in';
    alert.innerHTML = `<i class="fas fa-check-circle mr-2"></i>${message}`;
    document.body.appendChild(alert);
    setTimeout(() => alert.remove(), 3000);
}

function showError(message) {
    const alert = document.createElement('div');
    alert.className = 'fixed top-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 animate-fade-in';
    alert.innerHTML = `<i class="fas fa-exclamation-circle mr-2"></i>${message}`;
    document.body.appendChild(alert);
    setTimeout(() => alert.remove(), 3000);
}
</script>
