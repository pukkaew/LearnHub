        realtimeBtn.className = 'bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700';
        realtimeBanner.classList.remove('hidden');

        // Start real-time updates
        realTimeInterval = setInterval(loadActivityData, 30000);
    } else {
