<% layout('layout') -%>

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">
                    <i class="fas fa-edit mr-3 text-ruxchai-primary"></i>แก้ไขข้อสอบ
                </h1>
                <p class="mt-2 text-gray-600">แก้ไขข้อมูลข้อสอบ: <span id="test-title" class="font-medium"></span></p>
            </div>
            <div class="flex space-x-3">
                <a href="/tests" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                    <i class="fas fa-arrow-left mr-2"></i>กลับไปรายการ
                </a>
                <a id="view-test-link" href="#" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                    <i class="fas fa-eye mr-2"></i>ดูข้อสอบ
                </a>
            </div>
        </div>
    </div>

    <!-- Test Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-users text-blue-500 text-2xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">ผู้เข้าสอบ</dt>
                            <dd class="text-2xl font-bold text-blue-600" id="total-attempts">-</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle text-green-500 text-2xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">ผ่านการสอบ</dt>
                            <dd class="text-2xl font-bold text-green-600" id="passed-count">-</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-star text-yellow-500 text-2xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">คะแนนเฉลี่ย</dt>
                            <dd class="text-2xl font-bold text-yellow-600" id="average-score">-</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-question-circle text-purple-500 text-2xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">จำนวนข้อ</dt>
                            <dd class="text-2xl font-bold text-purple-600" id="question-count">-</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Form -->
    <div class="bg-white shadow rounded-lg p-6">
        <form id="edit-test-form">
            <input type="hidden" id="test_id" name="test_id">

            <!-- Test Information -->
            <div class="space-y-6">
                <div>
                    <h3 class="text-lg font-medium text-gray-900 mb-4">ข้อมูลข้อสอบ</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="test_name" class="block text-sm font-medium text-gray-700 mb-2">ชื่อข้อสอบ</label>
                            <input type="text" id="test_name" name="test_name" required
                                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                        </div>

                        <div>
                            <label for="test_code" class="block text-sm font-medium text-gray-700 mb-2">รหัสข้อสอบ</label>
                            <input type="text" id="test_code" name="test_code" required
                                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                        </div>

                        <div>
                            <label for="time_limit" class="block text-sm font-medium text-gray-700 mb-2">เวลาในการทำข้อสอบ (นาที)</label>
                            <input type="number" id="time_limit" name="time_limit" min="1"
                                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                        </div>

                        <div>
                            <label for="passing_score" class="block text-sm font-medium text-gray-700 mb-2">คะแนนผ่าน (%)</label>
                            <input type="number" id="passing_score" name="passing_score" min="0" max="100"
                                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                        </div>

                        <div>
                            <label for="max_attempts" class="block text-sm font-medium text-gray-700 mb-2">จำนวนครั้งที่ทำได้</label>
                            <input type="number" id="max_attempts" name="max_attempts" min="1"
                                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                        </div>

                        <div>
                            <label for="status" class="block text-sm font-medium text-gray-700 mb-2">สถานะ</label>
                            <select id="status" name="status"
                                    class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                                <option value="Draft">ร่าง</option>
                                <option value="Published">เผยแพร่</option>
                                <option value="Archived">เก็บถาวร</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Questions Management -->
                <div>
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-medium text-gray-900">จัดการคำถาม</h3>
                        <button type="button" onclick="addQuestion()"
                                class="inline-flex items-center px-3 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white ruxchai-gradient hover:opacity-90">
                            <i class="fas fa-plus mr-2"></i>เพิ่มคำถาม
                        </button>
                    </div>
                    <div id="questions-list" class="space-y-4">
                        <!-- Questions will be loaded here -->
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="flex justify-between pt-6 border-t border-gray-200">
                    <button type="button" onclick="confirmDelete()"
                            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700">
                        <i class="fas fa-trash mr-2"></i>ลบข้อสอบ
                    </button>
                    <div class="flex space-x-3">
                        <a href="/tests"
                           class="px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            ยกเลิก
                        </a>
                        <button type="submit"
                                class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white ruxchai-gradient hover:opacity-90">
                            <i class="fas fa-save mr-2"></i>บันทึกการแก้ไข
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
let testId, testData = {}, questions = [];

document.addEventListener('DOMContentLoaded', function() {
    testId = window.location.pathname.split('/')[3];
    loadTestData();
    setupFormHandlers();
});

async function loadTestData() {
    try {
        const response = await fetch(`/tests/api/${testId}`);
        const result = await response.json();

        if (result.success) {
            testData = result.data;
            populateForm();
            loadTestStats();
            loadQuestions();
        } else {
            showError('ไม่พบข้อมูลข้อสอบ');
        }
    } catch (error) {
        showError('เกิดข้อผิดพลาดในการโหลดข้อมูล');
    }
}

function populateForm() {
    document.getElementById('test_id').value = testData.test_id;
    document.getElementById('test_name').value = testData.test_name || '';
    document.getElementById('test_code').value = testData.test_code || '';
    document.getElementById('time_limit').value = testData.time_limit || '';
    document.getElementById('passing_score').value = testData.passing_score || 70;
    document.getElementById('max_attempts').value = testData.max_attempts || 1;
    document.getElementById('status').value = testData.status || 'Draft';

    document.getElementById('test-title').textContent = testData.test_name;
    document.getElementById('view-test-link').href = `/tests/${testData.test_id}`;
}

async function loadTestStats() {
    try {
        const response = await fetch(`/tests/api/${testId}/stats`);
        const result = await response.json();

        if (result.success) {
            const stats = result.data;
            document.getElementById('total-attempts').textContent = stats.total_attempts || 0;
            document.getElementById('passed-count').textContent = stats.passed_count || 0;
            document.getElementById('average-score').textContent = stats.average_score ? `${stats.average_score.toFixed(1)}%` : 'N/A';
        }
    } catch (error) {
        console.error('Error loading test stats:', error);
    }
}

async function loadQuestions() {
    try {
        const response = await fetch(`/tests/api/${testId}/questions`);
        const result = await response.json();

        if (result.success) {
            questions = result.data;
            document.getElementById('question-count').textContent = questions.length;
            displayQuestions();
        }
    } catch (error) {
        console.error('Error loading questions:', error);
    }
}

function displayQuestions() {
    const container = document.getElementById('questions-list');

    if (questions.length === 0) {
        container.innerHTML = `
            <div class="text-center py-8 border-2 border-dashed border-gray-300 rounded-lg">
                <i class="fas fa-question-circle text-gray-400 text-4xl mb-4"></i>
                <p class="text-gray-500">ยังไม่มีคำถาม</p>
            </div>
        `;
        return;
    }

    container.innerHTML = questions.map((question, index) => `
        <div class="border border-gray-200 rounded-lg p-4">
            <div class="flex items-start justify-between">
                <div class="flex-1">
                    <div class="flex items-center space-x-3 mb-2">
                        <span class="text-sm font-medium text-gray-900">ข้อที่ ${index + 1}</span>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            ${getQuestionTypeText(question.question_type)}
                        </span>
                        <span class="text-xs text-gray-500">${question.points} คะแนน</span>
                    </div>
                    <p class="text-sm text-gray-700">${question.question_text}</p>
                </div>
                <div class="flex space-x-2 ml-4">
                    <button onclick="editQuestion(${index})" class="text-blue-600 hover:text-blue-800 text-sm">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button onclick="deleteQuestion(${index})" class="text-red-600 hover:text-red-800 text-sm">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    `).join('');
}

function getQuestionTypeText(type) {
    const types = {
        'multiple_choice': 'ตัวเลือก',
        'true_false': 'ถูก/ผิด',
        'essay': 'เขียนตอบ',
        'fill_blank': 'เติมคำ'
    };
    return types[type] || type;
}

function setupFormHandlers() {
    document.getElementById('edit-test-form').addEventListener('submit', async function(e) {
        e.preventDefault();
        await updateTest();
    });
}

async function updateTest() {
    const formData = new FormData(document.getElementById('edit-test-form'));

    const updateData = {
        test_name: formData.get('test_name'),
        test_code: formData.get('test_code'),
        time_limit: formData.get('time_limit') ? parseInt(formData.get('time_limit')) : null,
        passing_score: parseInt(formData.get('passing_score')),
        max_attempts: parseInt(formData.get('max_attempts')),
        status: formData.get('status')
    };

    try {
        const response = await fetch(`/tests/api/${testId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(updateData)
        });

        const result = await response.json();

        if (result.success) {
            showSuccess('บันทึกการแก้ไขเรียบร้อยแล้ว');
            loadTestData();
        } else {
            showError(result.message || 'เกิดข้อผิดพลาดในการบันทึก');
        }
    } catch (error) {
        showError('เกิดข้อผิดพลาดในการเชื่อมต่อ');
    }
}

function addQuestion() {
    window.location.href = `/tests/${testId}/questions/create`;
}

function editQuestion(index) {
    const question = questions[index];
    window.location.href = `/tests/${testId}/questions/${question.question_id}/edit`;
}

async function deleteQuestion(index) {
    if (confirm('คุณต้องการลบคำถามนี้หรือไม่?')) {
        const question = questions[index];

        try {
            const response = await fetch(`/tests/api/${testId}/questions/${question.question_id}`, {
                method: 'DELETE'
            });

            const result = await response.json();

            if (result.success) {
                showSuccess('ลบคำถามเรียบร้อยแล้ว');
                loadQuestions();
            } else {
                showError(result.message || 'เกิดข้อผิดพลาดในการลบคำถาม');
            }
        } catch (error) {
            showError('เกิดข้อผิดพลาดในการเชื่อมต่อ');
        }
    }
}

async function confirmDelete() {
    const testName = document.getElementById('test_name').value;

    if (confirm(`คุณแน่ใจหรือไม่ที่จะลบข้อสอบ "${testName}"?\n\nการดำเนินการนี้ไม่สามารถยกเลิกได้`)) {
        try {
            const response = await fetch(`/tests/api/${testId}`, {
                method: 'DELETE'
            });

            const result = await response.json();

            if (result.success) {
                showSuccess('ลบข้อสอบเรียบร้อยแล้ว');
                setTimeout(() => {
                    window.location.href = '/tests';
                }, 1500);
            } else {
                showError(result.message || 'เกิดข้อผิดพลาดในการลบข้อสอบ');
            }
        } catch (error) {
            showError('เกิดข้อผิดพลาดในการเชื่อมต่อ');
        }
    }
}
</script>