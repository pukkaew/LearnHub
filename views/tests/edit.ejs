

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="rounded-2xl p-6 mb-8 text-white shadow-lg" style="background: linear-gradient(to right, <%= systemSettings.primary_color || '#3b82f6' %>, <%= systemSettings.secondary_color || '#10b981' %>);">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-white">
                    <i class="fas fa-edit mr-3"></i><%= t('testManagementEditTest') %>
                </h1>
                <p class="mt-2 text-white/80"><%= t('testManagementEditTestInfo') %>: <span id="test-title" class="font-medium text-white"></span></p>
            </div>
            <div class="flex space-x-3">
                <a href="/tests" class="bg-white/20 hover:bg-white/30 text-white font-medium py-2 px-4 rounded-lg transition-all duration-200 flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i><%= t('testManagementBackToList') %>
                </a>
                <a id="view-test-link" href="#" class="bg-white/20 hover:bg-white/30 text-white font-medium py-2 px-4 rounded-lg transition-all duration-200 flex items-center">
                    <i class="fas fa-eye mr-2"></i><%= t('testManagementViewTest') %>
                </a>
            </div>
        </div>
    </div>

    <!-- Test Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-users text-blue-500 text-2xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate"><%= t('testManagementTestTakers') %></dt>
                            <dd class="text-2xl font-bold text-blue-600" id="total-attempts">-</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle text-green-500 text-2xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate"><%= t('testManagementPassed') %></dt>
                            <dd class="text-2xl font-bold text-green-600" id="passed-count">-</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-star text-yellow-500 text-2xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate"><%= t('testManagementAverageScore') %></dt>
                            <dd class="text-2xl font-bold text-yellow-600" id="average-score">-</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-question-circle text-purple-500 text-2xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate"><%= t('testManagementQuestionCount') %></dt>
                            <dd class="text-2xl font-bold text-purple-600" id="question-count">-</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Form -->
    <div class="bg-white shadow rounded-lg p-6">
        <form id="edit-test-form">
            <input type="hidden" id="test_id" name="test_id">

            <!-- Test Information -->
            <div class="space-y-6">
                <div>
                    <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t('testManagementTestInfo') %></h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="test_name" class="block text-sm font-medium text-gray-700 mb-2"><%= t('testManagementTestName') %></label>
                            <input type="text" id="test_name" name="test_name" required
                                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                        </div>

                        <div>
                            <label for="time_limit" class="block text-sm font-medium text-gray-700 mb-2"><%= t('testManagementTimeLimit') %></label>
                            <input type="number" id="time_limit" name="time_limit" min="1"
                                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                        </div>

                        <div>
                            <label for="passing_score" class="block text-sm font-medium text-gray-700 mb-2"><%= t('testManagementPassingScore') %></label>
                            <input type="number" id="passing_score" name="passing_score" min="0" max="100"
                                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                        </div>

                        <div>
                            <label for="max_attempts" class="block text-sm font-medium text-gray-700 mb-2"><%= t('testManagementMaxAttempts') %></label>
                            <input type="number" id="max_attempts" name="max_attempts" min="1"
                                   class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                        </div>

                        <div>
                            <label for="status" class="block text-sm font-medium text-gray-700 mb-2"><%= t('testManagementStatus') %></label>
                            <select id="status" name="status"
                                    class="w-full rounded-md border-gray-300 shadow-sm focus:border-ruxchai-primary focus:ring-ruxchai-primary">
                                <option value="Draft"><%= t('testManagementStatusDraft') %></option>
                                <option value="Published"><%= t('testManagementStatusPublished') %></option>
                                <option value="Archived"><%= t('testManagementStatusArchived') %></option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Questions Management -->
                <div id="questions-section">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-medium text-gray-900"><%= t('testManagementManageQuestions') %></h3>
                        <button type="button" id="add-question-btn" onclick="addQuestion()"
                                class="inline-flex items-center px-3 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white ruxchai-gradient hover:opacity-90">
                            <i class="fas fa-plus mr-2"></i><%= t('testManagementAddQuestion') %>
                        </button>
                    </div>
                    <div id="questions-list" class="space-y-4">
                        <!-- Questions will be loaded here -->
                    </div>
                    <!-- Warning message when test has attempts -->
                    <div id="questions-locked-warning" class="hidden bg-yellow-50 border border-yellow-200 rounded-lg p-4 mt-4">
                        <div class="flex items-center">
                            <i class="fas fa-lock text-yellow-600 mr-3"></i>
                            <p class="text-yellow-800"><%= t('cannotEditQuestionsWithAttempts') || 'ไม่สามารถแก้ไขคำถามได้เนื่องจากมีผู้ทำข้อสอบนี้แล้ว' %></p>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="flex justify-between pt-6 border-t border-gray-200">
                    <div id="delete-btn-container">
                        <button type="button" onclick="confirmDelete()"
                                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700">
                            <i class="fas fa-trash mr-2"></i><%= t('testManagementDeleteTest') %>
                        </button>
                    </div>
                    <div class="flex space-x-3">
                        <a href="/tests"
                           class="px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            <%= t('testManagementCancel') %>
                        </a>
                        <button type="submit"
                                class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white ruxchai-gradient hover:opacity-90">
                            <i class="fas fa-save mr-2"></i><%= t('testManagementSaveChanges') %>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
const i18n = {
    testNotFound: '<%= t("testManagementTestNotFound") %>',
    loadError: '<%= t("testManagementLoadError") %>',
    saveSuccess: '<%= t("testManagementSaveSuccess") %>',
    saveError: '<%= t("testManagementSaveError") %>',
    connectionError: '<%= t("testManagementConnectionError") %>',
    noQuestions: '<%= t("testManagementNoQuestions") %>',
    questionNumber: '<%= t("testManagementQuestionNumber") %>',
    points: '<%= t("testManagementPoints") %>',
    multipleChoice: '<%= t("testManagementMultipleChoice") %>',
    trueFalse: '<%= t("testManagementTrueFalse") %>',
    essay: '<%= t("testManagementEssay") %>',
    fillBlank: '<%= t("testManagementFillBlank") %>',
    confirmDeleteQuestion: '<%= t("testManagementConfirmDeleteQuestion") %>',
    deleteQuestionSuccess: '<%= t("testManagementDeleteQuestionSuccess") %>',
    deleteQuestionError: '<%= t("testManagementDeleteQuestionError") %>',
    confirmDeleteTest: '<%= t("testManagementConfirmDeleteTest") %>',
    deleteTestWarning: '<%= t("testManagementDeleteTestWarning") %>',
    deleteTestSuccess: '<%= t("testManagementDeleteTestSuccess") %>',
    deleteTestError: '<%= t("testManagementDeleteTestError") %>'
};

let testId, testData = {}, questions = [];
let hasAttempts = false;

document.addEventListener('DOMContentLoaded', function() {
    // URL is /tests/2/edit, so test_id is at index 2
    testId = window.location.pathname.split('/')[2];
    loadTestData();
    setupFormHandlers();
});

async function loadTestData() {
    try {
        const response = await fetch(`/tests/api/${testId}`);
        const result = await response.json();

        if (result.success) {
            testData = result.data.test || result.data;
            questions = result.data.questions || [];
            hasAttempts = (testData.attempt_count || 0) > 0;
            populateForm();
            displayQuestions();
            updateUIForAttempts();
        } else {
            showError(i18n.testNotFound);
        }
    } catch (error) {
        console.error('Load test error:', error);
        showError(i18n.loadError);
    }
}

function updateUIForAttempts() {
    if (hasAttempts) {
        // Hide add question button
        const addBtn = document.getElementById('add-question-btn');
        if (addBtn) addBtn.style.display = 'none';

        // Show warning message
        const warning = document.getElementById('questions-locked-warning');
        if (warning) warning.classList.remove('hidden');

        // Hide delete button
        const deleteBtn = document.getElementById('delete-btn-container');
        if (deleteBtn) deleteBtn.style.display = 'none';
    }
}

function populateForm() {
    document.getElementById('test_id').value = testData.test_id;
    document.getElementById('test_name').value = testData.title || '';
    document.getElementById('time_limit').value = testData.time_limit || '';
    document.getElementById('passing_score').value = testData.passing_marks || testData.passing_score || 70;
    document.getElementById('max_attempts').value = testData.attempts_allowed || testData.max_attempts || 1;
    document.getElementById('status').value = testData.status || 'Draft';

    document.getElementById('test-title').textContent = testData.title;
    document.getElementById('view-test-link').href = `/tests/${testData.test_id}`;

    // Update stats display
    document.getElementById('total-attempts').textContent = testData.attempt_count || 0;
    document.getElementById('question-count').textContent = questions.length;
}


function displayQuestions() {
    const container = document.getElementById('questions-list');

    if (questions.length === 0) {
        container.innerHTML = `
            <div class="text-center py-8 border-2 border-dashed border-gray-300 rounded-lg">
                <i class="fas fa-question-circle text-gray-400 text-4xl mb-4"></i>
                <p class="text-gray-500">${i18n.noQuestions}</p>
            </div>
        `;
        return;
    }

    container.innerHTML = questions.map((question, index) => `
        <div class="border border-gray-200 rounded-lg p-4">
            <div class="flex items-start justify-between">
                <div class="flex-1">
                    <div class="flex items-center space-x-3 mb-2">
                        <span class="text-sm font-medium text-gray-900">${i18n.questionNumber} ${index + 1}</span>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            ${getQuestionTypeText(question.question_type)}
                        </span>
                        <span class="text-xs text-gray-500">${question.points} ${i18n.points}</span>
                    </div>
                    <p class="text-sm text-gray-700">${question.question_text}</p>
                </div>
                ${!hasAttempts ? `
                <div class="flex space-x-2 ml-4">
                    <button onclick="editQuestion(${index})" class="text-blue-600 hover:text-blue-800 text-sm">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button onclick="deleteQuestion(${index})" class="text-red-600 hover:text-red-800 text-sm">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
                ` : ''}
            </div>
        </div>
    `).join('');
}

function getQuestionTypeText(type) {
    const types = {
        'multiple_choice': i18n.multipleChoice,
        'true_false': i18n.trueFalse,
        'essay': i18n.essay,
        'fill_blank': i18n.fillBlank
    };
    return types[type] || type;
}

function setupFormHandlers() {
    document.getElementById('edit-test-form').addEventListener('submit', async function(e) {
        e.preventDefault();
        await updateTest();
    });
}

async function updateTest() {
    const formData = new FormData(document.getElementById('edit-test-form'));

    const updateData = {
        test_name: formData.get('test_name'),
        time_limit: formData.get('time_limit') ? parseInt(formData.get('time_limit')) : null,
        passing_score: parseInt(formData.get('passing_score')),
        max_attempts: parseInt(formData.get('max_attempts')),
        status: formData.get('status')
    };

    try {
        const response = await fetch(`/tests/api/${testId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(updateData)
        });

        const result = await response.json();

        if (result.success) {
            showSuccess(i18n.saveSuccess);
            loadTestData();
        } else {
            showError(result.message || i18n.saveError);
        }
    } catch (error) {
        showError(i18n.connectionError);
    }
}

function addQuestion() {
    window.location.href = `/tests/${testId}/questions/create`;
}

function editQuestion(index) {
    const question = questions[index];
    window.location.href = `/tests/${testId}/questions/${question.question_id}/edit`;
}

async function deleteQuestion(index) {
    if (confirm(i18n.confirmDeleteQuestion)) {
        const question = questions[index];

        try {
            const response = await fetch(`/tests/api/${testId}/questions/${question.question_id}`, {
                method: 'DELETE'
            });

            const result = await response.json();

            if (result.success) {
                showSuccess(i18n.deleteQuestionSuccess);
                loadQuestions();
            } else {
                showError(result.message || i18n.deleteQuestionError);
            }
        } catch (error) {
            showError(i18n.connectionError);
        }
    }
}

async function confirmDelete() {
    const testName = document.getElementById('test_name').value;

    if (confirm(`${i18n.confirmDeleteTest} "${testName}"?\n\n${i18n.deleteTestWarning}`)) {
        try {
            const response = await fetch(`/tests/api/${testId}`, {
                method: 'DELETE'
            });

            const result = await response.json();

            if (result.success) {
                showSuccess(i18n.deleteTestSuccess);
                setTimeout(() => {
                    window.location.href = '/tests';
                }, 1500);
            } else {
                showError(result.message || i18n.deleteTestError);
            }
        } catch (error) {
            showError(i18n.connectionError);
        }
    }
}
</script>