        return;
    }

    try {
        const response = await fetch(`/tests/api/${testId}`, {
            method: 'DELETE'
        });

        const result = await response.json();

        if (result.success) {
            showSuccess(i18n.deleteSuccess);
            loadTests(1); // Reload the list
        } else {
            showError(result.message || i18n.deleteError);
        }
    } catch (error) {
        console.error('Error deleting test:', error);
        showError(i18n.deleteError);
    }
}
