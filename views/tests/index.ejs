function getTestStatus(test) {
    const now = new Date();
    const userRole = '<%= user.role_name %>';

    // Check 1: Test status (must be Active or Published)
    const isStatusValid = ['Active', 'Published'].includes(test.status);

    // Check 2: Date range validity
    let isDateValid = true;
    let dateMessage = '';
    if (test.start_date) {
        const startDate = new Date(test.start_date);
        if (now < startDate) {
            isDateValid = false;
            dateMessage = `${i18n.opensAt}: ${formatDate(test.start_date)}`;
        }
    }
    if (test.end_date) {
        const endDate = new Date(test.end_date);
        if (now > endDate) {
            isDateValid = false;
            dateMessage = i18n.expired;
        }
    }

    // Check 3: Question count (must have at least 1 question)
    const hasQuestions = (test.question_count || 0) > 0;

    // Check 4: Attempt count (0 = unlimited)
    const maxAttempts = test.attempts_allowed || 0;
    const userAttempts = test.user_attempt_count || 0;
    const hasAttemptsLeft = maxAttempts === 0 || userAttempts < maxAttempts;

    // Check if user has an attempt in progress
    const isInProgress = test.user_status === 'In_Progress';

    // Check if user has completed attempt
    const hasCompleted = test.user_status === 'Completed' && test.last_attempt_id;

    // Determine overall test availability
    // Admin/Instructor sees additional status info but still follows rules

    // If user has an attempt in progress, show continue button
    if (isInProgress) {
        return {
            badge: `<span class="badge-warning">${i18n.inProgress || 'กำลังทำ'}</span>`,
            button: `<a href="/tests/${test.test_id}/start" class="btn-ruxchai-primary text-sm">${i18n.continueTest || 'ทำต่อ'}</a>`
        };
    }

    // If user has completed, show results
    if (hasCompleted) {
        const canRetake = hasAttemptsLeft && isStatusValid && isDateValid && hasQuestions;
        return {
            badge: `<span class="badge-success">${i18n.completed}</span>`,
            button: `
                <div class="flex space-x-2">
                    <button onclick="showTestResults('${test.last_attempt_id}')" class="btn-ruxchai-outline text-sm">
                        ${i18n.viewResults}
                    </button>
                    ${canRetake ? `
                        <button onclick="showTestStartModal('${test.test_id}')" class="btn-ruxchai-primary text-sm">
                            ${i18n.retake}
                        </button>
                    ` : ''}
                </div>
            `
        };
    }

    // Check if test is Draft (only visible to Admin/Instructor)
    if (test.status === 'Draft') {
        return {
            badge: `<span class="badge-warning">${i18n.draft}</span>`,
            button: `<span class="text-sm text-gray-500">${i18n.notReady}</span>`
        };
    }

    // Check if test is Inactive
    if (test.status === 'Inactive') {
        return {
            badge: `<span class="badge-danger">${i18n.inactive}</span>`,
            button: `<span class="text-sm text-gray-500">${i18n.cannotTake}</span>`
        };
    }

    // Check date validity
    if (!isDateValid) {
        return {
            badge: `<span class="badge-warning">${dateMessage}</span>`,
            button: `<span class="text-sm text-gray-500">${i18n.cannotTake}</span>`
        };
    }

    // Check if test has no questions
    if (!hasQuestions) {
        return {
            badge: `<span class="badge-warning">${i18n.noQuestions}</span>`,
            button: `<span class="text-sm text-gray-500">${i18n.notReady}</span>`
        };
    }

    // Check if user has exceeded max attempts
    if (!hasAttemptsLeft) {
        return {
            badge: `<span class="badge-danger">${i18n.locked}</span>`,
            button: `<span class="text-sm text-gray-500">${i18n.maxAttemptsReached} (${maxAttempts})</span>`
        };
    }

    // All checks passed - test is available
    return {
        badge: `<span class="badge-primary">${i18n.available}</span>`,
        button: `<button onclick="showTestStartModal('${test.test_id}')" class="btn-ruxchai-primary text-sm">${i18n.startTest}</button>`
    };
}

