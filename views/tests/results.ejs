

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="/dashboard" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-home"></i>
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <i class="fas fa-chevron-right text-gray-400 mx-2 text-xs"></i>
                    <a href="/tests" class="text-gray-500 hover:text-gray-700 text-sm"><%= t('tests') %></a>
                </div>
            </li>
            <li>
                <div class="flex items-center">
                    <i class="fas fa-chevron-right text-gray-400 mx-2 text-xs"></i>
                    <span class="text-gray-700 text-sm font-medium"><%= t('testResultsTitle') %></span>
                </div>
            </li>
        </ol>
    </nav>

    <% if (locals.noAttemptSelected) { %>
    <!-- No Attempt Selected - Show attempts list or message -->
    <div class="bg-white rounded-2xl shadow-lg p-8 text-center">
        <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-clipboard-list text-yellow-600 text-2xl"></i>
        </div>
        <h2 class="text-xl font-bold text-gray-900 mb-2"><%= test.title %></h2>

        <% if (locals.attempts && attempts.length > 0) { %>
            <p class="text-gray-600 mb-6"><%= t('selectAttemptToView') || 'กรุณาเลือกการทดสอบที่ต้องการดูผลลัพธ์' %></p>

            <div class="space-y-3 max-w-md mx-auto">
                <% attempts.forEach(function(attempt, index) { %>
                <a href="/tests/<%= test.test_id %>/results?attempt_id=<%= attempt.attempt_id %>"
                   class="block p-4 border rounded-lg hover:bg-gray-50 transition-colors <%= attempt.status === 'Completed' ? 'border-green-200' : 'border-yellow-200' %>">
                    <div class="flex justify-between items-center">
                        <div class="text-left">
                            <div class="font-medium text-gray-900">
                                <%= t('attemptN') || 'ครั้งที่' %> <%= attempts.length - index %>
                            </div>
                            <div class="text-sm text-gray-500">
                                <%= formatDateTime(attempt.started_at) %>
                            </div>
                        </div>
                        <div class="text-right">
                            <% if (attempt.status === 'Completed') { %>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= attempt.passed ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                    <%= attempt.percentage ? Math.round(attempt.percentage) + '%' : '-' %>
                                </span>
                            <% } else { %>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    <%= t('inProgress') || 'กำลังทำ' %>
                                </span>
                            <% } %>
                        </div>
                    </div>
                </a>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-gray-600 mb-6"><%= t('noAttemptsYet') || 'ยังไม่มีการทำแบบทดสอบนี้' %></p>
            <a href="/tests/<%= test.test_id %>/take" class="inline-flex items-center px-6 py-3 text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors">
                <i class="fas fa-play mr-2"></i><%= t('startTest') || 'เริ่มทำแบบทดสอบ' %>
            </a>
        <% } %>

        <div class="mt-6">
            <a href="/tests/<%= test.test_id %>" class="text-blue-600 hover:text-blue-800 text-sm">
                <i class="fas fa-arrow-left mr-1"></i><%= t('backToTestDetail') || 'กลับไปหน้ารายละเอียด' %>
            </a>
        </div>
    </div>
    <% } else { %>

    <!-- Results Header Card -->
    <div class="bg-white rounded-2xl shadow-lg mb-8 overflow-hidden border border-gray-100">
        <!-- Top Accent Bar -->
        <div class="h-2" style="background: linear-gradient(90deg, #1565C0 0%, #1976D2 25%, #2196F3 50%, #4CAF50 75%, #00ACC1 100%);"></div>

        <div class="p-8 text-center">
            <!-- Result Icon -->
            <div id="result-icon" class="mx-auto flex items-center justify-center h-20 w-20 rounded-full mb-6">
                <!-- Icon will be set based on score -->
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= t('testResultsTitle') %></h1>
            <p id="test-title" class="text-gray-600"><%= t('testName') %></p>

            <!-- Score Display -->
            <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-6 border border-blue-200">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-star text-2xl text-blue-600"></i>
                    </div>
                    <div id="final-score" class="text-4xl font-bold text-blue-700 mb-1">0%</div>
                    <div class="text-sm text-blue-600"><%= t('scoreReceived') %></div>
                </div>
                <div class="bg-gradient-to-br from-cyan-50 to-cyan-100 rounded-xl p-6 border border-cyan-200">
                    <div class="w-12 h-12 bg-cyan-100 rounded-lg flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-clock text-2xl text-cyan-600"></i>
                    </div>
                    <div id="time-taken" class="text-4xl font-bold text-cyan-700 mb-1">0</div>
                    <div class="text-sm text-cyan-600"><%= t('minutesTaken') %></div>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6 border border-green-200">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-check-circle text-2xl text-green-600"></i>
                    </div>
                    <div id="pass-status" class="text-2xl font-bold mb-1">-</div>
                    <div class="text-sm text-green-600"><%= t('testResultLabel') %></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Breakdown -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <div class="w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center mr-3">
                <i class="fas fa-chart-pie text-indigo-600"></i>
            </div>
            <%= t('detailedBreakdown') || 'สรุปรายละเอียด' %>
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
            <div class="bg-green-50 rounded-lg p-4 border border-green-200">
                <div id="correct-answers" class="text-2xl font-bold text-green-600">0</div>
                <div class="text-xs text-green-600 mt-1"><%= t('correctAnswersCount') %></div>
            </div>
            <div class="bg-red-50 rounded-lg p-4 border border-red-200">
                <div id="incorrect-answers" class="text-2xl font-bold text-red-600">0</div>
                <div class="text-xs text-red-600 mt-1"><%= t('incorrectAnswersCount') %></div>
            </div>
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <div id="unanswered" class="text-2xl font-bold text-gray-600">0</div>
                <div class="text-xs text-gray-500 mt-1"><%= t('unansweredCount') %></div>
            </div>
            <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
                <div id="total-questions" class="text-2xl font-bold text-blue-600">0</div>
                <div class="text-xs text-blue-600 mt-1"><%= t('totalQuestions') %></div>
            </div>
        </div>
    </div>

    <!-- Performance Analysis -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-6 flex items-center">
            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mr-3">
                <i class="fas fa-chart-line text-green-600"></i>
            </div>
            <%= t('performanceAnalysis') %>
        </h3>

        <div class="space-y-6">
            <!-- Score Chart -->
            <div>
                <h4 class="font-medium text-gray-900 mb-3"><%= t('scoreComparison') %></h4>
                <div class="bg-gray-50 rounded-xl p-4 border border-gray-200">
                    <canvas id="score-chart" width="400" height="200"></canvas>
                </div>
            </div>

            <!-- Category Performance -->
            <div id="category-performance">
                <h4 class="font-medium text-gray-900 mb-3"><%= t('categoryPerformance') %></h4>
                <div id="category-breakdown" class="space-y-3">
                    <!-- Category breakdown will be loaded here -->
                </div>
            </div>

            <!-- Difficulty Analysis -->
            <div>
                <h4 class="font-medium text-gray-900 mb-3"><%= t('difficultyAnalysis') %></h4>
                <div id="difficulty-analysis" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <!-- Difficulty analysis will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <!-- Question Review -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-4">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
                    <i class="fas fa-list-check text-purple-600"></i>
                </div>
                <%= t('questionDetails') %>
            </h3>
            <div class="flex space-x-2">
                <button id="show-all" class="px-3 py-1.5 text-sm font-medium rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors"><%= t('showAll') %></button>
                <button id="show-incorrect" class="px-3 py-1.5 text-sm font-medium rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors"><%= t('showIncorrect') %></button>
                <button id="show-correct" class="px-3 py-1.5 text-sm font-medium rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors"><%= t('showCorrect') %></button>
            </div>
        </div>

        <div id="question-review" class="space-y-4">
            <!-- Question review will be loaded here -->
        </div>
    </div>

    <!-- Actions -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/tests" class="inline-flex items-center justify-center px-6 py-3 text-sm font-medium rounded-lg border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                <i class="fas fa-list mr-2"></i><%= t('backToTests') %>
            </a>

            <button id="retake-test" class="hidden inline-flex items-center justify-center px-6 py-3 text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors">
                <i class="fas fa-redo mr-2"></i><%= t('retakeTest') %>
            </button>

            <button id="download-certificate" class="hidden inline-flex items-center justify-center px-6 py-3 text-sm font-medium rounded-lg text-white bg-green-600 hover:bg-green-700 transition-colors">
                <i class="fas fa-certificate mr-2"></i><%= t('downloadCertificate') %>
            </button>

            <button id="print-results" class="inline-flex items-center justify-center px-6 py-3 text-sm font-medium rounded-lg border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                <i class="fas fa-print mr-2"></i><%= t('printResults') %>
            </button>
        </div>

        <!-- Share Results -->
        <div class="mt-6 pt-6 border-t border-gray-200 text-center">
            <p class="text-gray-600 mb-4 text-sm"><%= t('shareResults') %></p>
            <div class="flex justify-center space-x-4">
                <button onclick="shareResults('facebook')" class="w-10 h-10 rounded-full bg-blue-100 text-blue-600 hover:bg-blue-200 flex items-center justify-center transition-colors">
                    <i class="fab fa-facebook text-lg"></i>
                </button>
                <button onclick="shareResults('twitter')" class="w-10 h-10 rounded-full bg-sky-100 text-sky-500 hover:bg-sky-200 flex items-center justify-center transition-colors">
                    <i class="fab fa-twitter text-lg"></i>
                </button>
                <button onclick="shareResults('line')" class="w-10 h-10 rounded-full bg-green-100 text-green-600 hover:bg-green-200 flex items-center justify-center transition-colors">
                    <i class="fab fa-line text-lg"></i>
                </button>
                <button onclick="copyShareLink()" class="w-10 h-10 rounded-full bg-gray-100 text-gray-600 hover:bg-gray-200 flex items-center justify-center transition-colors">
                    <i class="fas fa-link text-lg"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Loading overlay -->
<div id="loading-overlay" class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 flex items-center space-x-3">
        <i class="fas fa-spinner fa-spin text-ruxchai-primary text-xl"></i>
        <span class="text-gray-700"><%= t('loadingResults') %></span>
    </div>
</div>

<script>
// i18n translations for JavaScript
const i18n = {
    cannotLoadResults: '<%= t("cannotLoadResults") %>',
    errorLoadingResults: '<%= t("errorLoadingResults") %>',
    passed: '<%= t("passed") %>',
    failed: '<%= t("failed") %>',
    easy: '<%= t("easy") %>',
    medium: '<%= t("medium") %>',
    hard: '<%= t("hard") %>',
    questionN: '<%= t("question") %>',
    points: '<%= t("points") %>',
    explanation: '<%= t("additionalExplanation") %>',
    yourAnswer: '<%= t("answer") %>',
    correctAnswer: '<%= t("correctAnswer") %>',
    cannotDisplayOptions: 'ไม่สามารถแสดงตัวเลือกได้',
    true: '<%= t("true") %>',
    false: '<%= t("false") %>',
    notAnswered: 'ไม่ได้ตอบ',
    retakeConfirm: 'คุณต้องการทำแบบทดสอบใหม่หรือไม่?',
    cannotRetake: 'ไม่สามารถเริ่มทำแบบทดสอบใหม่ได้',
    errorRetaking: 'เกิดข้อผิดพลาดในการเริ่มทำแบบทดสอบใหม่',
    cannotDownloadCertificate: 'ไม่สามารถดาวน์โหลดใบประกาศนียบัตรได้',
    errorDownloadingCertificate: 'เกิดข้อผิดพลาดในการดาวน์โหลดใบประกาศนียบัตร',
    linkCopied: '<%= t("linkCopied") %>',
    correct: '<%= t("correct") %>',
    incorrect: 'ผิด',
    unanswered: '<%= t("unanswered") %>'
};

const SITE_NAME = '<%= typeof getSetting === "function" ? getSetting("site_name", "Rukchai Hongyen LearnHub") : "Rukchai Hongyen LearnHub" %>';
let testResults = null;
let attemptId = '<%= locals.attemptId || "" %>';
let scoreChart = null;

document.addEventListener('DOMContentLoaded', function() {
    if (attemptId) {
        loadTestResults();
    } else {
        showError(i18n.cannotLoadResults);
        window.location.href = '/tests';
    }

    setupEventListeners();
});

function setupEventListeners() {
    // Question filter buttons
    document.getElementById('show-all').addEventListener('click', () => filterQuestions('all'));
    document.getElementById('show-incorrect').addEventListener('click', () => filterQuestions('incorrect'));
    document.getElementById('show-correct').addEventListener('click', () => filterQuestions('correct'));

    // Action buttons
    document.getElementById('retake-test').addEventListener('click', retakeTest);
    document.getElementById('download-certificate').addEventListener('click', downloadCertificate);
    document.getElementById('print-results').addEventListener('click', printResults);
}

async function loadTestResults() {
    try {
        const response = await fetch(`/tests/api/attempts/${attemptId}/results`);
        const data = await response.json();

        if (data.success) {
            testResults = data.data;
            displayResults();
        } else {
            showError(i18n.cannotLoadResults);
        }
    } catch (error) {
        console.error('Error loading test results:', error);
        showError(i18n.errorLoadingResults);
    } finally {
        document.getElementById('loading-overlay').style.display = 'none';
    }
}

function displayResults() {
    const results = testResults;

    // Update header
    document.getElementById('test-title').textContent = results.test_title;

    // Update result icon
    updateResultIcon(results.score, results.passing_score);

    // Update score summary
    document.getElementById('final-score').textContent = `${results.score}%`;
    document.getElementById('final-score').className = `text-5xl font-bold mb-2 ${getScoreColor(results.score)}`;

    // Show time in appropriate format
    const timeTaken = results.time_taken || 0;
    document.getElementById('time-taken').textContent = timeTaken < 1 ? '< 1' : Math.round(timeTaken);

    const passed = results.score >= results.passing_score;
    document.getElementById('pass-status').textContent = passed ? i18n.passed : i18n.failed;
    document.getElementById('pass-status').className = `text-2xl font-semibold mb-2 ${passed ? 'text-green-600' : 'text-red-600'}`;

    // Update detailed breakdown
    document.getElementById('correct-answers').textContent = results.correct_answers;
    document.getElementById('incorrect-answers').textContent = results.incorrect_answers;
    document.getElementById('unanswered').textContent = results.unanswered;
    document.getElementById('total-questions').textContent = results.total_questions;

    // Display performance analysis
    displayPerformanceAnalysis();

    // Display question review
    displayQuestionReview();

    // Show action buttons based on results
    updateActionButtons();

    // Create score chart
    createScoreChart();
}

function updateResultIcon(score, passingScore) {
    const resultIcon = document.getElementById('result-icon');

    if (score >= 90) {
        resultIcon.innerHTML = '<i class="fas fa-trophy text-yellow-500 text-4xl"></i>';
        resultIcon.className = 'mx-auto flex items-center justify-center h-20 w-20 rounded-full bg-yellow-100 mb-6';
    } else if (score >= passingScore) {
        resultIcon.innerHTML = '<i class="fas fa-medal text-blue-500 text-4xl"></i>';
        resultIcon.className = 'mx-auto flex items-center justify-center h-20 w-20 rounded-full bg-blue-100 mb-6';
    } else {
        resultIcon.innerHTML = '<i class="fas fa-times-circle text-red-500 text-4xl"></i>';
        resultIcon.className = 'mx-auto flex items-center justify-center h-20 w-20 rounded-full bg-red-100 mb-6';
    }
}

function displayPerformanceAnalysis() {
    const results = testResults;

    // Category performance
    if (results.category_performance && results.category_performance.length > 0) {
        const categoryContainer = document.getElementById('category-breakdown');
        categoryContainer.innerHTML = results.category_performance.map(category => `
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div>
                    <h5 class="font-medium text-gray-900">${category.category_name}</h5>
                    <p class="text-sm text-gray-600">${category.correct}/${category.total} ข้อ</p>
                </div>
                <div class="text-right">
                    <div class="text-lg font-semibold ${getScoreColor(category.percentage)}">${category.percentage}%</div>
                    <div class="w-24 bg-gray-200 rounded-full h-2 mt-1">
                        <div class="bg-ruxchai-primary h-2 rounded-full" style="width: ${category.percentage}%"></div>
                    </div>
                </div>
            </div>
        `).join('');
    } else {
        document.getElementById('category-performance').style.display = 'none';
    }

    // Difficulty analysis
    if (results.difficulty_analysis) {
        const difficultyContainer = document.getElementById('difficulty-analysis');
        const difficulties = ['easy', 'medium', 'hard'];

        difficultyContainer.innerHTML = difficulties.map(level => {
            const data = results.difficulty_analysis[level];
            if (!data) return '';

            return `
                <div class="text-center p-4 bg-gray-50 rounded-lg">
                    <div class="text-sm font-medium text-gray-600 mb-2">${getDifficultyText(level)}</div>
                    <div class="text-2xl font-bold ${getScoreColor(data.percentage)} mb-1">${data.percentage}%</div>
                    <div class="text-xs text-gray-500">${data.correct}/${data.total} ข้อ</div>
                </div>
            `;
        }).join('');
    }
}

function displayQuestionReview() {
    const container = document.getElementById('question-review');
    const questions = testResults.questions || [];

    container.innerHTML = questions.map((question, index) => {
        const isCorrect = question.is_correct;
        const userAnswer = question.user_answer;
        const correctAnswer = question.correct_answer;

        return `
            <div class="question-item border rounded-lg p-4 ${isCorrect ? 'border-green-200 bg-green-50' : 'border-red-200 bg-red-50'}"
                 data-status="${isCorrect ? 'correct' : 'incorrect'}">
                <div class="flex items-start justify-between mb-3">
                    <h4 class="font-medium text-gray-900">
                        ข้อ ${index + 1}. ${question.question_text}
                    </h4>
                    <div class="flex items-center space-x-2">
                        <span class="badge-${getDifficultyColor(question.difficulty)}">${getDifficultyText(question.difficulty)}</span>
                        <div class="flex items-center">
                            <i class="fas ${isCorrect ? 'fa-check text-green-500' : 'fa-times text-red-500'} mr-1"></i>
                            <span class="text-sm font-medium ${isCorrect ? 'text-green-600' : 'text-red-600'}">
                                ${question.points || 1} คะแนน
                            </span>
                        </div>
                    </div>
                </div>

                ${question.question_image ? `
                    <div class="mb-4">
                        <img src="${question.question_image}" alt="Question Image"
                             class="max-w-full md:max-w-lg h-auto rounded-lg shadow-sm border border-gray-200 cursor-pointer hover:shadow-md transition-shadow"
                             onclick="window.open(this.src, '_blank')" title="คลิกเพื่อดูภาพขนาดใหญ่">
                    </div>
                ` : ''}

                <div class="space-y-3">
                    ${renderAnswerOptions(question)}
                </div>

                ${question.explanation ? `
                    <div class="mt-4 p-3 bg-blue-50 border border-blue-200 rounded">
                        <h5 class="font-medium text-blue-900 mb-1">คำอธิบาย:</h5>
                        <p class="text-blue-800 text-sm">${question.explanation}</p>
                    </div>
                ` : ''}
            </div>
        `;
    }).join('');
}

function renderAnswerOptions(question) {
    const userAnswer = question.user_answer;
    const correctAnswer = question.correct_answer;

    switch (question.question_type) {
        case 'multiple_choice':
            if (!question.options || question.options.length === 0) {
                return `<p class="text-gray-500">ไม่มีตัวเลือก</p>`;
            }
            return question.options.map(option => {
                // Convert to string for comparison since API returns string values
                const optionIdStr = String(option.option_id);
                const isUserAnswer = optionIdStr === String(userAnswer);
                const isCorrectAnswer = option.is_correct === true || optionIdStr === String(correctAnswer);

                let classes = 'p-3 rounded-lg border-2 mb-2 ';
                let icon = '';
                let label = '';

                if (isCorrectAnswer && isUserAnswer) {
                    classes += 'border-green-500 bg-green-50';
                    icon = '<i class="fas fa-check-circle text-green-500 mr-2"></i>';
                    label = '<span class="ml-2 text-xs bg-green-100 text-green-700 px-2 py-0.5 rounded">คำตอบของคุณ ✓</span>';
                } else if (isCorrectAnswer) {
                    classes += 'border-green-500 bg-green-50';
                    icon = '<i class="fas fa-check text-green-500 mr-2"></i>';
                    label = '<span class="ml-2 text-xs bg-green-100 text-green-700 px-2 py-0.5 rounded">คำตอบที่ถูก</span>';
                } else if (isUserAnswer && !isCorrectAnswer) {
                    classes += 'border-red-500 bg-red-50';
                    icon = '<i class="fas fa-times text-red-500 mr-2"></i>';
                    label = '<span class="ml-2 text-xs bg-red-100 text-red-700 px-2 py-0.5 rounded">คำตอบของคุณ ✗</span>';
                } else {
                    classes += 'border-gray-200 bg-white';
                    icon = '<i class="far fa-circle text-gray-300 mr-2"></i>';
                }

                return `
                    <div class="${classes}">
                        <div class="flex items-center">
                            ${icon}
                            <span class="flex-1">${option.option_text}</span>
                            ${label}
                        </div>
                        ${option.option_image ? `
                            <div class="ml-6 mt-3">
                                <img src="${option.option_image}" alt="Option Image"
