    welcomeEmailWillBeSent: '<%= t("welcomeEmailWillBeSent") %>',
    accountSettings: '<%= t("accountSettings") %>',
    phoneNumber: '<%= t("phoneNumber") %>',
    positionTitle: '<%= t("positionTitle") %>',
