<script>
let currentStep = 1;
const totalSteps = 4;

// Translation object
const translations = {
    pleaseFillInAllRequiredFields: '<%= t("pleaseFillInAllRequiredFields") || "Please fill in all required fields" %>',
    userEditedSuccess: '<%= t("userEditedSuccess") || "User updated successfully" %>',
    error: '<%= t("error") || "Error" %>',
    basicInformation: '<%= t("basicInformation") || "Basic Information" %>',
    organizationInfo: '<%= t("organizationInfo") || "Organization Information" %>',
    rolePermissions: '<%= t("rolePermissions") || "Role & Permissions" %>',
    employeeId: '<%= t("employeeId") || "Employee ID" %>',
    email: '<%= t("emailAddress") || "Email" %>',
    firstName: '<%= t("firstName") || "First Name" %>',
    lastName: '<%= t("lastName") || "Last Name" %>',
    phone: '<%= t("phoneNumber") || "Phone" %>',
    status: '<%= t("status") || "Status" %>',
    branch: '<%= t("branches") || "Branch" %>',
    office: '<%= t("offices") || "Office" %>',
    division: '<%= t("divisions") || "Division" %>',
    department: '<%= t("departments") || "Department" %>',
    position: '<%= t("positionName") || "Position" %>',
    role: '<%= t("role") || "Role" %>',
    active: '<%= t("statusActive") || "Active" %>',
    pending: '<%= t("statusPending") || "Pending" %>',
    inactive: '<%= t("statusInactive") || "Inactive" %>',
    notSpecified: '<%= t("notSpecified") || "Not specified" %>'
};

document.addEventListener('DOMContentLoaded', function() {
    const userData = <%- JSON.stringify(userData) %>;

    // Profile image preview
    document.getElementById('profileImageInput').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('profilePreview').src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    });

    // Set status value
    if (userData.is_active) {
        document.getElementById('statusSelect').value = 'active';
    } else {
        document.getElementById('statusSelect').value = 'inactive';
    }

    // Initialize role card selection
    initRoleCards();

    // Load organization data
    loadBranches();
    loadOffices();
    loadDivisions();
    loadDepartments();
    loadPositions();

    // Form submission
    document.getElementById('edit-user-form').addEventListener('submit', async function(e) {
        e.preventDefault();
        await submitForm();
    });
});

function initRoleCards() {
    // Update role card styling based on checked state
    document.querySelectorAll('input[name="role"]').forEach(radio => {
        radio.addEventListener('change', updateRoleCardStyles);
    });
    updateRoleCardStyles();
}

function updateRoleCardStyles() {
    document.querySelectorAll('.role-card').forEach(card => {
        const radio = card.querySelector('input[type="radio"]');
        const inner = card.querySelector('.role-card-inner');
        if (radio && radio.checked) {
            inner.style.borderColor = 'var(--ruxchai-primary, #3B82F6)';
            inner.style.backgroundColor = '#EFF6FF';
        } else {
            inner.style.borderColor = '#E5E7EB';
            inner.style.backgroundColor = 'white';
        }
    });
}

async function loadBranches() {
    const userData = <%- JSON.stringify(userData) %>;
    try {
        const response = await fetch('/organization/api/branches');
        const data = await response.json();
        const select = document.getElementById('branchSelect');
        select.innerHTML = '<option value=""><%= t("selectBranch") %></option>';
        data.forEach(branch => {
            const option = document.createElement('option');
            option.value = branch.branch_id;
            option.textContent = branch.branch_name;
            option.selected = userData.branch_id == branch.branch_id;
            select.appendChild(option);
        });
    } catch (error) {
        console.error('Error loading branches:', error);
    }
}

async function loadOffices() {
    const userData = <%- JSON.stringify(userData) %>;
