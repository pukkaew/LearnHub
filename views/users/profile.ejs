<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900"><%= t('myProfile') %></h1>
            <p class="text-gray-600 mt-2"><%= t('viewAndEditProfile') %></p>
        </div>
        <div class="flex space-x-3">
            <button type="button" id="editProfileBtn" class="bg-ruxchai-primary text-white px-4 py-2.5 rounded-lg hover:bg-ruxchai-primary/90 transition-all shadow-sm hover:shadow-md">
                <i class="fas fa-edit mr-2"></i><%= t('editProfile') %>
            </button>
            <button type="button" id="changePasswordBtn" class="bg-amber-500 text-white px-4 py-2.5 rounded-lg hover:bg-amber-600 transition-all shadow-sm hover:shadow-md">
                <i class="fas fa-key mr-2"></i><%= t('changePassword') %>
            </button>
            <a href="/dashboard" class="bg-gray-500 text-white px-4 py-2.5 rounded-lg hover:bg-gray-600 transition-all shadow-sm hover:shadow-md">
                <i class="fas fa-arrow-left mr-2"></i><%= t('back') %>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="bg-white rounded-lg shadow-sm p-6">
        <!-- Profile Section -->
        <div class="flex flex-col items-center mb-6 pb-6 border-b border-gray-200">
            <div class="relative mb-4">
                <img id="userAvatar" src="/images/default-avatar.png" alt="Profile" class="w-24 h-24 rounded-full object-cover border-4 border-gray-200">
                <button id="changeAvatarBtn" class="absolute bottom-0 right-0 bg-ruxchai-primary text-white p-2 rounded-full hover:bg-ruxchai-primary/90 transition-all shadow-md">
                    <i class="fas fa-camera text-sm"></i>
                </button>
                <input type="file" id="avatarInput" accept="image/*" class="hidden">
            </div>
            <h3 id="userName" class="text-2xl font-bold text-gray-900">-</h3>
            <p id="userPosition" class="text-gray-600">-</p>
            <div class="mt-3 flex flex-wrap gap-2 justify-center">
                <span id="userRoleBadge" class="px-3 py-1 text-xs bg-blue-100 text-blue-800 rounded-full">-</span>
            </div>
        </div>

        <!-- Personal Information Section -->
        <div class="mb-6 pb-6 border-b border-gray-200">
            <h4 class="text-base font-semibold text-gray-800 mb-4 flex items-center">
                <div class="w-8 h-8 bg-ruxchai-primary/10 rounded-lg flex items-center justify-center mr-3">
                    <i class="fas fa-user-circle text-ruxchai-primary"></i>
                </div>
                <%= t('personalInfo') %>
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-id-badge text-ruxchai-primary mr-1"></i>
                        <%= t('employeeId') %>
                    </label>
                    <p id="userEmployeeId" class="text-gray-900 font-medium">-</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-user mr-1"></i>
                        <%= t('firstName') %>
                    </label>
                    <p id="userFirstName" class="text-gray-900 font-medium">-</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-user mr-1"></i>
                        <%= t('lastName') %>
                    </label>
                    <p id="userLastName" class="text-gray-900 font-medium">-</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-envelope text-gray-400 mr-1"></i>
                        <%= t('emailAddress') %>
                    </label>
                    <p id="userEmail" class="text-gray-900 font-medium">-</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-phone text-gray-400 mr-1"></i>
                        <%= t('phoneNumber') %>
                    </label>
                    <p id="userPhone" class="text-gray-900 font-medium">-</p>
                </div>
            </div>
        </div>

        <!-- Organization Information Section -->
        <div class="mb-6 pb-6 border-b border-gray-200">
            <h4 class="text-base font-semibold text-gray-800 mb-4 flex items-center">
                <div class="w-8 h-8 bg-blue-50 rounded-lg flex items-center justify-center mr-3">
                    <i class="fas fa-building text-blue-600"></i>
                </div>
                <%= t('organizationInfo') %>
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-sitemap text-gray-400 mr-1"></i>
                        <%= t('departments') %>
                    </label>
                    <p id="userDepartment" class="text-gray-900 font-medium">-</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-briefcase text-gray-400 mr-1"></i>
                        <%= t('positionName') %>
                    </label>
                    <p id="userPositionName" class="text-gray-900 font-medium">-</p>
                </div>
            </div>
        </div>

        <!-- System Access Section -->
        <div class="mb-6 pb-6 border-b border-gray-200">
            <h4 class="text-base font-semibold text-gray-800 mb-4 flex items-center">
                <div class="w-8 h-8 bg-purple-50 rounded-lg flex items-center justify-center mr-3">
                    <i class="fas fa-key text-purple-600"></i>
                </div>
                <%= t('systemAccess') %>
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-user-shield text-gray-400 mr-1"></i>
                        <%= t('role') %>
                    </label>
                    <p id="userRole" class="text-gray-900 font-medium capitalize">-</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-calendar text-gray-400 mr-1"></i>
                        <%= t('createAccount') %>
                    </label>
                    <p id="userCreatedAt" class="text-gray-900 font-medium">-</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-clock text-gray-400 mr-1"></i>
                        <%= t('lastLogin') %>
                    </label>
                    <p id="userLastLogin" class="text-gray-900 font-medium">-</p>
                </div>
            </div>
        </div>

        <!-- Learning Statistics Section -->
        <div>
            <h4 class="text-base font-semibold text-gray-800 mb-4 flex items-center">
                <div class="w-8 h-8 bg-green-50 rounded-lg flex items-center justify-center mr-3">
                    <i class="fas fa-chart-line text-green-600"></i>
                </div>
                <%= t('learningProgress') %>
            </h4>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="bg-gray-50 p-4 rounded-lg text-center">
                    <div class="text-2xl font-bold text-ruxchai-primary" id="completedCourses">0</div>
                    <div class="text-xs text-gray-500"><%= t('completedCourses') %></div>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg text-center">
                    <div class="text-2xl font-bold text-blue-600" id="inProgressCourses">0</div>
                    <div class="text-xs text-gray-500"><%= t('learning') %></div>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg text-center">
                    <div class="text-2xl font-bold text-green-600" id="testsPassed">0</div>
                    <div class="text-xs text-gray-500"><%= t('tests') %></div>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg text-center">
                    <div class="text-2xl font-bold text-purple-600" id="badgesEarned">0</div>
                    <div class="text-xs text-gray-500"><%= t('badges') %></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div id="editProfileModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center">
    <div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full mx-4 transform transition-all">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h3 class="text-xl font-bold text-gray-900 flex items-center">
                    <i class="fas fa-edit text-ruxchai-primary mr-3"></i>
                    <%= t('editProfile') %>
                </h3>
                <button onclick="closeEditModal()" class="text-gray-400 hover:text-gray-600 transition-colors">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
        </div>

        <form id="editProfileForm" class="p-6 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('firstName') %></label>
                    <input type="text" name="first_name" id="editFirstName"
                           class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-primary focus:border-transparent">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('lastName') %></label>
                    <input type="text" name="last_name" id="editLastName"
                           class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-primary focus:border-transparent">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('emailAddress') %></label>
                    <input type="email" name="email" id="editEmail"
                           class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-primary focus:border-transparent">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('phoneNumber') %></label>
                    <input type="tel" name="phone" id="editPhone"
                           class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-primary focus:border-transparent">
                </div>
            </div>

            <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
                <button type="button" onclick="closeEditModal()" class="px-6 py-2.5 text-gray-700 font-medium bg-white border-2 border-gray-300 rounded-lg hover:bg-gray-50">
                    <%= t('cancel') %>
                </button>
                <button type="submit" class="px-6 py-2.5 bg-ruxchai-primary text-white font-medium rounded-lg hover:bg-ruxchai-primary/90">
                    <i class="fas fa-save mr-2"></i><%= t('saveChanges') %>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Change Password Modal -->
<div id="changePasswordModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center">
    <div class="bg-white rounded-xl shadow-2xl max-w-md w-full mx-4 transform transition-all">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h3 class="text-xl font-bold text-gray-900 flex items-center">
                    <i class="fas fa-key text-amber-500 mr-3"></i>
                    <%= t('changePassword') %>
                </h3>
                <button onclick="closePasswordModal()" class="text-gray-400 hover:text-gray-600 transition-colors">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
        </div>

        <form id="changePasswordForm" class="p-6 space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('currentPassword') %></label>
                <input type="password" name="current_password" required
                       class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-primary focus:border-transparent">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('newPassword') %></label>
                <input type="password" name="new_password" required
                       class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-primary focus:border-transparent">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2"><%= t('confirmPassword') %></label>
                <input type="password" name="confirm_password" required
                       class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-primary focus:border-transparent">
            </div>

            <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
                <button type="button" onclick="closePasswordModal()" class="px-6 py-2.5 text-gray-700 font-medium bg-white border-2 border-gray-300 rounded-lg hover:bg-gray-50">
                    <%= t('cancel') %>
                </button>
                <button type="submit" class="px-6 py-2.5 bg-amber-500 text-white font-medium rounded-lg hover:bg-amber-600">
                    <i class="fas fa-key mr-2"></i><%= t('changePassword') %>
                </button>
            </div>
        </form>
    </div>
</div>

<script>
let currentUser = null;

document.addEventListener('DOMContentLoaded', function() {
    loadUserProfile();
    setupEventListeners();
});

function setupEventListeners() {
    document.getElementById('editProfileBtn').addEventListener('click', openEditModal);
    document.getElementById('changePasswordBtn').addEventListener('click', openPasswordModal);
    document.getElementById('changeAvatarBtn').addEventListener('click', () => document.getElementById('avatarInput').click());
    document.getElementById('avatarInput').addEventListener('change', handleAvatarChange);
    document.getElementById('editProfileForm').addEventListener('submit', handleEditProfile);
    document.getElementById('changePasswordForm').addEventListener('submit', handleChangePassword);

    // Close modals on outside click
    document.getElementById('editProfileModal').addEventListener('click', e => { if (e.target === e.currentTarget) closeEditModal(); });
    document.getElementById('changePasswordModal').addEventListener('click', e => { if (e.target === e.currentTarget) closePasswordModal(); });
}

async function loadUserProfile() {
    try {
        const response = await fetch('/users/api/profile');
        const data = await response.json();

        if (data.success) {
            currentUser = data.data;
            displayUserProfile(data.data);
        } else {
            showMessage('<%= t("errorLoadingProfile") %>', 'error');
        }
    } catch (error) {
        console.error('Error loading profile:', error);
        showMessage('<%= t("errorLoadingProfile") %>', 'error');
    }
}

function displayUserProfile(user) {
    document.getElementById('userAvatar').src = user.profile_image || '/images/default-avatar.png';
    document.getElementById('userName').textContent = `${user.first_name || ''} ${user.last_name || ''}`.trim() || '-';
    document.getElementById('userPosition').textContent = user.position_name || '-';
    document.getElementById('userRoleBadge').textContent = user.role_name || '-';
    document.getElementById('userEmployeeId').textContent = user.employee_id || '-';
    document.getElementById('userFirstName').textContent = user.first_name || '-';
    document.getElementById('userLastName').textContent = user.last_name || '-';
    document.getElementById('userEmail').textContent = user.email || '-';
    document.getElementById('userPhone').textContent = user.phone || '-';
    document.getElementById('userDepartment').textContent = user.department_name || '-';
    document.getElementById('userPositionName').textContent = user.position_name || '-';
    document.getElementById('userRole').textContent = user.role_name || '-';
    document.getElementById('userCreatedAt').textContent = user.created_at ? formatDate(user.created_at) : '-';
    document.getElementById('userLastLogin').textContent = user.last_login ? formatDate(user.last_login) : '<%= t("never") %>';

    // Stats
    document.getElementById('completedCourses').textContent = user.completed_courses || 0;
    document.getElementById('inProgressCourses').textContent = user.in_progress_courses || 0;
    document.getElementById('testsPassed').textContent = user.tests_passed || 0;
    document.getElementById('badgesEarned').textContent = user.badges_earned || 0;
}

function openEditModal() {
    if (currentUser) {
        document.getElementById('editFirstName').value = currentUser.first_name || '';
        document.getElementById('editLastName').value = currentUser.last_name || '';
        document.getElementById('editEmail').value = currentUser.email || '';
        document.getElementById('editPhone').value = currentUser.phone || '';
    }
    document.getElementById('editProfileModal').classList.remove('hidden');
}

function closeEditModal() {
    document.getElementById('editProfileModal').classList.add('hidden');
}

function openPasswordModal() {
    document.getElementById('changePasswordModal').classList.remove('hidden');
}

function closePasswordModal() {
    document.getElementById('changePasswordModal').classList.add('hidden');
    document.getElementById('changePasswordForm').reset();
}

async function handleEditProfile(e) {
    e.preventDefault();
    const formData = new FormData(e.target);

    try {
        const response = await fetch('/users/api/profile', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(Object.fromEntries(formData))
        });

        const data = await response.json();

        if (data.success) {
            showMessage('<%= t("profileUpdatedSuccess") %>', 'success');
            closeEditModal();
            loadUserProfile();
        } else {
            showMessage(data.message || '<%= t("error") %>', 'error');
        }
    } catch (error) {
        console.error('Error:', error);
        showMessage('<%= t("error") %>', 'error');
    }
}

async function handleChangePassword(e) {
    e.preventDefault();
    const formData = new FormData(e.target);

    if (formData.get('new_password') !== formData.get('confirm_password')) {
        showMessage('<%= t("passwordMismatch") %>', 'error');
        return;
    }

    try {
        const response = await fetch('/auth/change-password', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                current_password: formData.get('current_password'),
                new_password: formData.get('new_password'),
                confirm_password: formData.get('confirm_password')
            })
        });

        const data = await response.json();

        if (data.success) {
            showMessage('<%= t("passwordChangedSuccess") %>', 'success');
            closePasswordModal();
        } else {
            showMessage(data.message || '<%= t("error") %>', 'error');
        }
    } catch (error) {
        console.error('Error:', error);
        showMessage('<%= t("error") %>', 'error');
    }
}

async function handleAvatarChange(e) {
    const file = e.target.files[0];
    if (!file) return;

    const formData = new FormData();
    formData.append('profile_image', file);

    try {
        const response = await fetch('/users/api/profile/image', {
            method: 'POST',
            body: formData
        });

        const data = await response.json();

        if (data.success) {
            showMessage('<%= t("profileUpdatedSuccess") %>', 'success');
            document.getElementById('userAvatar').src = data.image_url || URL.createObjectURL(file);
        } else {
            showMessage(data.message || '<%= t("error") %>', 'error');
        }
    } catch (error) {
        console.error('Error:', error);
        showMessage('<%= t("error") %>', 'error');
    }
}

function formatDate(dateString) {
    return new Date(dateString).toLocaleDateString('th-TH', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    });
}

function showMessage(message, type = 'info') {
    const messageDiv = document.createElement('div');
    messageDiv.className = `fixed top-4 right-4 z-50 px-6 py-3 rounded-lg text-white shadow-lg ${
        type === 'success' ? 'bg-green-500' : type === 'error' ? 'bg-red-500' : 'bg-blue-500'
    }`;
    messageDiv.textContent = message;
    document.body.appendChild(messageDiv);
    setTimeout(() => messageDiv.remove(), 3000);
}
</script>
