<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900"><%= t('userDetails') %></h1>
            <p class="text-gray-600 mt-2"><%= t('viewUserInformation') %></p>
        </div>
        <div class="flex space-x-3">
            <a href="/users/<%= userData.user_id %>/edit" class="bg-ruxchai-primary text-white px-4 py-2.5 rounded-lg hover:bg-ruxchai-primary/90 transition-all shadow-sm hover:shadow-md">
                <i class="fas fa-edit mr-2"></i><%= t('edit') %>
            </a>
            <a href="/users" class="bg-gray-500 text-white px-4 py-2.5 rounded-lg hover:bg-gray-600 transition-all shadow-sm hover:shadow-md">
                <i class="fas fa-arrow-left mr-2"></i><%= t('backToUsers') %>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="bg-white rounded-lg shadow-sm p-6">
        <!-- Profile Section -->
        <div class="flex flex-col items-center mb-6 pb-6 border-b border-gray-200">
            <img src="<%= userData.profile_image || '/images/default-avatar.png' %>" alt="<%= userData.first_name %> <%= userData.last_name %>" class="w-24 h-24 rounded-full object-cover border-4 border-gray-200 mb-4">
            <h3 class="text-2xl font-bold text-gray-900"><%= userData.first_name %> <%= userData.last_name %></h3>
            <p class="text-gray-600">@<%= userData.employee_id || '-' %></p>
            <div class="mt-3 flex flex-wrap gap-2 justify-center">
                <% if (userData.is_active) { %>
                    <span class="px-3 py-1 text-xs bg-green-100 text-green-800 rounded-full">
                        ✅ <%= t('statusActive') %>
                    </span>
                <% } else { %>
                    <span class="px-3 py-1 text-xs bg-gray-100 text-gray-800 rounded-full">
                        ❌ <%= t('statusInactive') %>
                    </span>
                <% } %>
            </div>
        </div>

        <!-- Basic Information Section -->
        <div class="mb-6 pb-6 border-b border-gray-200">
            <h4 class="text-base font-semibold text-gray-800 mb-4 flex items-center">
                <div class="w-8 h-8 bg-ruxchai-primary/10 rounded-lg flex items-center justify-center mr-3">
                    <i class="fas fa-user-circle text-ruxchai-primary"></i>
                </div>
                <%= t('personalInfo') %>
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-id-badge text-ruxchai-primary mr-1"></i>
                        <%= t('employeeId') %>
                    </label>
                    <p class="text-gray-900 font-medium"><%= userData.employee_id || '-' %></p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-user mr-1"></i>
                        <%= t('firstName') %>
                    </label>
                    <p class="text-gray-900 font-medium"><%= userData.first_name %></p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-user mr-1"></i>
                        <%= t('lastName') %>
                    </label>
                    <p class="text-gray-900 font-medium"><%= userData.last_name %></p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-envelope text-gray-400 mr-1"></i>
                        <%= t('emailAddress') %>
                    </label>
                    <p class="text-gray-900 font-medium"><%= userData.email %></p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-phone text-gray-400 mr-1"></i>
                        <%= t('phoneNumber') %>
                    </label>
                    <p class="text-gray-900 font-medium"><%= userData.phone || '-' %></p>
                </div>
            </div>
        </div>

        <!-- Organization Information Section -->
        <div class="mb-6 pb-6 border-b border-gray-200">
            <h4 class="text-base font-semibold text-gray-800 mb-4 flex items-center">
                <div class="w-8 h-8 bg-blue-50 rounded-lg flex items-center justify-center mr-3">
                    <i class="fas fa-building text-blue-600"></i>
                </div>
                <%= t('organizationInfo') %>
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-code-branch text-gray-400 mr-1"></i>
                        <%= t('branches') %>
                    </label>
                    <p class="text-gray-900 font-medium"><%= userData.branch_name || '-' %></p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-building text-gray-400 mr-1"></i>
                        <%= t('offices') %>
                    </label>
                    <p class="text-gray-900 font-medium"><%= userData.office_name || '-' %></p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-layer-group text-gray-400 mr-1"></i>
                        <%= t('divisions') %>
                    </label>
                    <p class="text-gray-900 font-medium"><%= userData.division_name || '-' %></p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-sitemap text-gray-400 mr-1"></i>
                        <%= t('departments') %>
                    </label>
                    <p class="text-gray-900 font-medium"><%= userData.department_name || '-' %></p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-briefcase text-gray-400 mr-1"></i>
                        <%= t('positionName') %>
                    </label>
                    <p class="text-gray-900 font-medium"><%= userData.position_name || '-' %></p>
                </div>
            </div>
        </div>

        <!-- System Access Section -->
        <div class="mb-6">
            <h4 class="text-base font-semibold text-gray-800 mb-4 flex items-center">
                <div class="w-8 h-8 bg-purple-50 rounded-lg flex items-center justify-center mr-3">
                    <i class="fas fa-key text-purple-600"></i>
                </div>
                <%= t('systemAccess') %>
            </h4>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-user-shield text-gray-400 mr-1"></i>
                        <%= t('role') %>
                    </label>
                    <p class="text-gray-900 font-medium capitalize"><%= userData.role_name || '-' %></p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-toggle-on text-gray-400 mr-1"></i>
                        <%= t('status') %>
                    </label>
                    <% if (userData.is_active) { %>
                        <p class="text-green-600 font-semibold">✅ <%= t('statusActive') %></p>
                    <% } else { %>
                        <p class="text-gray-600 font-semibold">❌ <%= t('statusInactive') %></p>
                    <% } %>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-calendar text-gray-400 mr-1"></i>
                        <%= t('createAccount') %>
                    </label>
                    <p class="text-gray-900 font-medium"><%= new Date(userData.created_at).toLocaleDateString() %></p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <label class="block text-xs font-medium text-gray-500 mb-1.5">
                        <i class="fas fa-clock text-gray-400 mr-1"></i>
                        <%= t('lastLogin') %>
                    </label>
                    <p class="text-gray-900 font-medium"><%= userData.last_login ? new Date(userData.last_login).toLocaleDateString() : t('never') %></p>
                </div>
            </div>
        </div>
    </div>
</div>
